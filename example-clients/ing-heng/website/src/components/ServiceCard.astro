---
/**
 * ServiceCard Component
 * Card for displaying service information with icon and CTA
 */

import type { Locale } from '../utils/i18n';
import { t } from '../utils/i18n';

interface Props {
  title: string;
  description: string;
  icon?: string;
  link?: string;
  lang: Locale;
  image?: string;
}

const {
  title,
  description,
  icon,
  link,
  lang,
  image,
} = Astro.props;

// Icon SVGs
const icons = {
  leasing: '<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>',
  hire: '<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" /></svg>',
  refinance: '<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" /></svg>',
  equipment: '<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" /></svg>',
  default: '<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>',
};

const iconHtml = icon && icons[icon as keyof typeof icons] ? icons[icon as keyof typeof icons] : icons.default;
---

<div class="card h-full group">
  {image && (
    <div class="aspect-video overflow-hidden">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
        loading="lazy"
        width="640"
        height="360"
      />
    </div>
  )}

  <div class="card-body flex flex-col h-full">
    {/* Icon */}
    {!image && (
      <div class="text-primary mb-4 group-hover:scale-110 transition-transform duration-300" set:html={iconHtml} />
    )}

    {/* Title */}
    <h3 class="text-2xl font-bold text-primary mb-3 group-hover:text-secondary transition-colors">
      {title}
    </h3>

    {/* Description */}
    <p class="text-gray-600 mb-6 flex-grow leading-relaxed">
      {description}
    </p>

    {/* CTA */}
    {link && (
      <a
        href={link}
        class="inline-flex items-center text-secondary font-semibold hover:text-accent transition-colors group-hover:translate-x-2 transform duration-300"
      >
        <span>{t('common.learnMore', lang)}</span>
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    )}
  </div>
</div>
