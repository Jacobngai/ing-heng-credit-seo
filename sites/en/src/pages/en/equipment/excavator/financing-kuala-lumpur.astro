---
/**
 * Excavator Financing Kuala Lumpur - Location Page
 * Target: Contractors and businesses in KL looking for excavator financing
 */

import BaseLayout from '../../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../../components/Breadcrumbs.astro';

const lang = 'en';
const locationId = 'kuala-lumpur';

// Location-specific data
const location = {
  name: 'Kuala Lumpur',
  capital: 'Kuala Lumpur',
  majorCities: ['KLCC', 'Cheras', 'Kepong', 'Setapak', 'Bangsar', 'Mont Kiara', 'Bukit Bintang', 'Sentul'],
  industries: ['Commercial Construction', 'High-Rise Development', 'Infrastructure', 'MRT Projects', 'Urban Redevelopment'],
  smeCount: '180,000+',
  constructionProjects: '3,500+',
  industrialParks: 15,
};

const equipment = {
  name: 'Excavator',
  priceRange: 'RM 30,000 - RM 3,000,000',
};

// SEO Data
const pageTitle = `Excavator Financing Kuala Lumpur | fast approval | Serving KL & Surrounding Areas`;
const pageDescription = `Fast excavator financing in Kuala Lumpur. Serving KLCC, Cheras, Kepong, Setapak, Bangsar and all KL areas. fast approval, 95% approval rate. Finance new & used excavators from ${equipment.priceRange}.`;
const keywords = [
  'excavator financing Kuala Lumpur',
  'excavator loan KL',
  'construction equipment financing Kuala Lumpur',
  'heavy machinery loan KL',
  'excavator financing Cheras',
  'excavator financing Kepong',
];

const breadcrumbs = [
  { label: 'Home', url: '/en' },
  { label: 'Equipment', url: '/en/equipment' },
  { label: 'Excavator Financing', url: '/en/equipment/excavator' },
  { label: 'Kuala Lumpur', url: `/en/equipment/excavator/financing-kuala-lumpur` },
];

const benefits = [
  { icon: 'clock', title: 'fast approval', description: `Fast approval for KL contractors. Get approved quickly and start your project immediately.` },
  { icon: 'percentage', title: '95% Approval Rate', description: 'Industry-leading approval rate. We approve applications that banks reject. Bad credit accepted.' },
  { icon: 'map-pin', title: 'Serving All Kuala Lumpur', description: `We serve ${location.majorCities.slice(0, 6).join(', ')}, and all areas across KL.` },
  { icon: 'users', title: '0% Down Payment Available', description: 'Qualified applicants can get 0% down payment. Preserve your working capital for operations.' },
  { icon: 'calendar', title: 'Flexible 12-60 Month Terms', description: 'Choose payment terms that match your project timeline and cash flow needs.' },
  { icon: 'shield', title: 'New & Used Accepted', description: 'Finance new or used excavators All equipment accepted based on condition. All major brands accepted.' },
];

const steps = [
  { stepNumber: 1, icon: 'contact', title: 'Contact Us via WhatsApp', description: 'Chat with our KL financing team. Get instant answers to your questions.' },
  { stepNumber: 2, icon: 'document', title: 'Submit Documents', description: 'Provide IC, 6 months bank statements, and company registration. Simple paperwork.' },
  { stepNumber: 3, icon: 'check', title: 'Get Approved in fasts', description: 'Fast approval for KL contractors. Urgent cases processed in 8-12 hours.' },
  { stepNumber: 4, icon: 'clipboard', title: 'Sign Loan Agreement', description: 'Review and sign loan agreement. Transparent terms with no hidden clauses.' },
  { stepNumber: 5, icon: 'truck', title: 'Get Your Excavator', description: 'Delivery available throughout Kuala Lumpur. Start working and earning immediately.' },
];

const faqs = [
  {
    question: 'Do you serve all areas in Kuala Lumpur?',
    answer: `Yes! We serve all areas across Kuala Lumpur including ${location.majorCities.join(', ')}, and surrounding areas. Being located in nearby Klang, Selangor, we have excellent access to all parts of KL. We can arrange meetings at your site for convenience.`
  },
  {
    question: 'How fast can I get my excavator delivered in KL?',
    answer: 'For KL contractors, we typically complete the entire process within 2-3 business days: fast approval + 1-2 days for documentation and delivery. Given KL\'s central location, logistics are straightforward. Urgent deliveries can often be arranged quickly of approval.'
  },
  {
    question: 'What types of KL projects do you finance excavators for?',
    answer: `Kuala Lumpur has ${location.constructionProjects} active construction projects. We finance excavators for: ${location.industries.join(', ')}. Whether you're working on residential condos, commercial buildings, or infrastructure projects like MRT expansions, we have financing solutions for you.`
  },
  {
    question: 'Can I finance equipment for government projects in KL?',
    answer: 'Absolutely! We have extensive experience financing equipment for contractors working on government infrastructure projects in KL, including MRT construction, highway expansion, and public building projects. Our fast approval helps you meet tight tender deadlines.'
  },
  {
    question: 'What documents do I need to apply?',
    answer: 'For individuals: IC, 6 months bank statements, income proof. For companies: SSM registration, company bank statements (6 months), directors\' IC copies. The process is simple and straightforward.'
  },
  {
    question: 'What is your interest rate?',
    answer: 'Interest rates range from 7.5% to 12% per annum depending on credit profile, down payment, loan term, and equipment age. Our rates are competitive compared to banks (9-15%).'
  },
];

const nearbyLocations = [
  { name: 'Selangor', url: '/en/equipment/excavator/financing-selangor' },
  { name: 'Negeri Sembilan', url: '/en/equipment/excavator/financing-negeri-sembilan' },
  { name: 'Pahang', url: '/en/equipment/excavator/financing-pahang' },
];

const productSchema = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": `Excavator Financing Kuala Lumpur`,
  "description": pageDescription,
  "brand": { "@type": "Brand", "name": "Ing Heng Credit" },
  "offers": {
    "@type": "AggregateOffer",
    "lowPrice": "30000",
    "highPrice": "3000000",
    "priceCurrency": "MYR",
    "availability": "https://schema.org/InStock",
    "areaServed": { "@type": "City", "name": "Kuala Lumpur", "containedInPlace": { "@type": "Country", "name": "Malaysia" } }
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": { "@type": "Answer", "text": faq.answer }
  }))
};
---

<BaseLayout title={pageTitle} description={pageDescription} lang={lang} keywords={keywords}>
  <script type="application/ld+json" set:html={JSON.stringify(productSchema)} slot="head" />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} slot="head" />

  <Breadcrumbs items={breadcrumbs} />

  <!-- Hero Section -->
  <section class="hero-section bg-gradient-to-br from-amber-800 to-amber-950 text-white py-16 lg:py-24">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <span class="inline-block bg-amber-600/30 text-amber-200 px-4 py-2 rounded-full text-sm font-medium mb-6">
          Serving All Kuala Lumpur | {location.majorCities.slice(0, 4).join(' • ')}
        </span>
        <h1 class="text-4xl lg:text-5xl font-bold mb-6">Excavator Financing in Kuala Lumpur</h1>
        <p class="text-xl text-amber-100 mb-8 max-w-3xl mx-auto">
          Fast, flexible excavator financing for contractors across Kuala Lumpur.
          fast approval, 95% approval rate, serving {location.majorCities.slice(0, 5).join(', ')} and all surrounding areas.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="https://wa.me/60123456789?text=Hi%2C%20I%27m%20interested%20in%20excavator%20financing%20in%20Kuala%20Lumpur"
