    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-4 text-stone-800">How to Get Excavator Financing in KL</h2>
        <p class="text-center text-stone-600 mb-12 max-w-2xl mx-auto">
          Simple 5-step process designed for busy KL contractors.
        </p>
        <div class="space-y-6">
          {steps.map(step => (
            <div class="flex gap-6 items-start bg-white p-6 rounded-xl shadow-sm">
              <div class="w-12 h-12 bg-amber-700 text-white rounded-full flex items-center justify-center font-bold text-lg flex-shrink-0">{step.stepNumber}</div>
              <div>
                <h3 class="text-lg font-semibold text-stone-800 mb-1">{step.title}</h3>
                <p class="text-stone-600">{step.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-4 text-stone-800">Frequently Asked Questions</h2>
        <p class="text-center text-stone-600 mb-12">Common questions about excavator financing in Kuala Lumpur</p>
        <div class="space-y-4">
          {faqs.map(faq => (
            <details class="bg-stone-50 rounded-xl p-6 group">
              <summary class="font-semibold text-stone-800 cursor-pointer list-none flex justify-between items-center">
                {faq.question}
                <svg class="w-5 h-5 text-stone-500 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </summary>
              <p class="mt-4 text-stone-600">{faq.answer}</p>
            </details>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Nearby Locations -->
  <section class="py-12 bg-stone-100">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold text-center mb-6 text-stone-800">Excavator Financing in Nearby States</h2>
        <div class="flex flex-wrap justify-center gap-4">
          {nearbyLocations.map(loc => (
            <a href={loc.url} class="bg-white hover:bg-amber-50 border border-stone-200 hover:border-amber-300 px-6 py-3 rounded-lg font-medium text-stone-700 hover:text-amber-700 transition-colors">
              {loc.name} →
            </a>
          ))}
