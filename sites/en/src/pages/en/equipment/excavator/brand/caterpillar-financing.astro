  { label: 'Home', url: '/en' },
  { label: 'Equipment', url: '/en/equipment' },
  { label: 'Excavator Financing', url: '/en/equipment/excavator' },
  { label: 'Caterpillar', url: `/en/equipment/excavator/brand/caterpillar-financing` },
];

