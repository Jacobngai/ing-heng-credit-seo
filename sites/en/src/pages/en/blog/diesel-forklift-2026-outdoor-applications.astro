const lang = 'en';
const post = {
  title: 'Diesel Forklift 2026: Outdoor Applications Guide',
  slug: 'diesel-forklift-2026-outdoor-applications',
  excerpt: 'Complete guide to diesel forklift financing for outdoor applications in Malaysia. 0% down payment, fast approval, and high-capacity options.',
  date: '2026-01-03',
  author: 'Ing Heng Credit Team',
