---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'en';
const post = {
  title: 'Warehouse Equipment Financing Malaysia: Forklifts, Racking & More',
  slug: 'warehouse-equipment-financing-malaysia',
  excerpt: 'Need warehouse equipment financing? Finance forklifts, reach trucks, pallet jacks, racking systems. 0% down, no age limit, fast approval.',
  date: '2026-01-28',
  author: 'Ing Heng Credit Team',
  readTime: 8,
  category: 'Warehouse Financing',
  image: '/images/blog/warehouse-financing.jpg'
};

const keywords = ['warehouse equipment financing', 'forklift financing', 'warehouse equipment leasing', 'pallet jack financing malaysia'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
];
---

<BaseLayout title={post.title} description={post.excerpt} lang={lang} keywords={keywords}>
  <Breadcrumbs items={breadcrumbItems} />

