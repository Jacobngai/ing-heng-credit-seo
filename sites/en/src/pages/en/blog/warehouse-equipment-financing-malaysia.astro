---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'en';
const post = {
  title: 'Warehouse Equipment Financing Malaysia: Smart SME Guide',
  slug: 'warehouse-equipment-financing-malaysia',
  excerpt: 'Need a new forklift, racking system, or conveyor but want to keep your cash flow healthy? Learn how warehouse equipment financing helps Malaysian SMEs grow without the upfront burden.',
  date: '2026-02-18',
  author: 'Jacob Ng',
  readTime: 8,
  category: 'Equipment Financing',
  image: '/images/blog/warehouse-equipment-financing-malaysia.jpg'
};

const keywords = ['warehouse equipment financing', 'warehouse equipment financing malaysia', 'forklift financing malaysia', 'racking system loan', 'warehouse automation financing'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
