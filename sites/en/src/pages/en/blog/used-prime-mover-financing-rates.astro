  slug: 'used-prime-mover-financing-rates',
  excerpt: 'Used prime movers cost 40-50% less but carry higher financing interest rates. Learn how to calculate total cost and determine if aged truck financing makes sense for your haulage business.',
  date: '2025-01-23',
  author: 'Ing Heng Credit Team',
  readTime: 7,
  category: 'Prime Mover Financing',
  image: '/images/blog/prime-mover-financing.jpg'
};

const keywords = ['used prime mover', 'second hand truck', 'interest rates', '0% down payment', 'haulage financing'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
];
---

<BaseLayout title={post.title} description={post.excerpt} lang={lang} keywords={keywords}>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": post.title,
      "description": post.excerpt,
