---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'en';
const post = {
  title: 'Crane Startup 2026: First Crane Financing with 0% Down Payment',
  slug: 'crane-startup-2026-financing',
  excerpt: 'Start crane business 2026 with 0% down payment. First crane financing approved. New business welcome.',
  date: '2026-01-12',
  author: 'Ing Heng Credit Team',
  readTime: 7,
  category: 'Crane Business',
  image: '/images/blog/crane-financing.jpg'
};

const keywords = ['crane startup', 'first crane', 'crane financing', '0% down payment', 'new business'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
