---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'en';
const post = {
  title: 'E-commerce Warehouse 2026: Online Retail Guide',
  slug: 'ecommerce-warehouse-2026',
  excerpt: 'E-commerce warehouse financing guide 2026. 0% down payment, 100% full loan. Online retail warehouse equipment Malaysia.',
  date: '2026-01-11',
  author: 'Ing Heng Credit Team',
  readTime: 5,
  category: 'Warehouse Equipment',
  image: '/images/blog/forklift-financing.jpg'
};

const keywords = ['ecommerce warehouse', 'online retail', 'warehouse equipment', '0% down payment', 'ecommerce financing'];
const breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
