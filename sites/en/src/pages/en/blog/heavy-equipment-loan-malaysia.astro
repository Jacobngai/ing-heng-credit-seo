        {faqs.map((faq) => (
          <div class="bg-gray-50 p-6 rounded-lg border border-gray-100">
            <h3 class="text-lg font-bold text-gray-900 mb-2">{faq.question}</h3>
            <p class="text-gray-700">{faq.answer}</p>
          </div>
        ))}
