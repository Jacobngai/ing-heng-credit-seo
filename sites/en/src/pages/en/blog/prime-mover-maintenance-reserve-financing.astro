const lang = 'en';
const post = {
  title: 'Prime Mover Maintenance Reserve: How to Build It Into Your Financing Package',
  slug: 'prime-mover-maintenance-reserve-financing',
  excerpt: 'Prime mover maintenance costs RM20,000-RM30,000 annually. Learn how to build a maintenance reserve into your financing package and prevent unexpected repairs from draining your haulage business cash flow.',
  date: '2025-01-23',
  author: 'Ing Heng Credit Team',
  readTime: 7,
  category: 'Prime Mover Financing',
  image: '/images/blog/prime-mover-financing.jpg'
};

const keywords = ['prime mover maintenance', 'reserve fund', 'repair costs', '0% down payment', 'haulage budgeting'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
