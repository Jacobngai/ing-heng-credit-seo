  excerpt: 'Malaysia targets 40% electric vehicle adoption by 2030. Learn how to finance electric lorries for sustainable logistics while managing higher upfront costs and charging infrastructure requirements.',
  date: '2025-01-23',
  author: 'Ing Heng Credit Team',
  readTime: 9,
  category: 'Lorry Financing',
  image: '/images/blog/lorry-financing.jpg'
};

const keywords = ['electric lorry', 'EV truck', 'green logistics', '0% down payment', 'sustainable transport'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
