---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'en';
const post = {
  title: '50-Ton Mobile Crane 2026: Medium Projects, 0% Down Payment',
  slug: '50-ton-mobile-crane-2026-financing',
  excerpt: '50-ton mobile crane financing for medium construction projects 2026. 0% down payment, 100% full loan, no age limit.',
  date: '2026-01-12',
  author: 'Ing Heng Credit Team',
  readTime: 7,
  category: 'Crane Financing',
  image: '/images/blog/crane-financing.jpg'
};

const keywords = ['50 ton crane', 'mobile crane', 'medium projects', 'crane financing', '0% down payment'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
];
---

<BaseLayout title={post.title} description={post.excerpt} lang={lang} keywords={keywords}>
