const lang = 'en';
const post = {
  title: 'Tower Crane Setup 2026: Complete Financing for Installation',
  slug: 'tower-crane-setup-2026-financing',
  excerpt: 'Tower crane setup financing 2026. 0% down payment, 100% full loan including installation. Complete setup funded.',
  date: '2026-01-12',
  author: 'Ing Heng Credit Team',
  readTime: 7,
  category: 'Crane Financing',
  image: '/images/blog/crane-financing.jpg'
};

const keywords = ['tower crane setup', 'crane installation', 'crane financing', '0% down payment', 'construction equipment'],
