  author: 'Ing Heng Credit Team',
  readTime: 5,
  category: 'Emergency Support',
  image: '/images/blog/generator-financing.jpg'
};

const keywords = ['urgent generator financing', 'emergency power breakdown malaysia', 'generator replacement 2026', '0% down payment'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
