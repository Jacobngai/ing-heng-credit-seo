---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';
import MarkdownContent from '../../../components/MarkdownContent.astro';

const lang = 'en';
const post = {
  title: 'Bank Rejected Lorry 2026 - Second Chance',
  slug: 'bank-rejected-lorry-2026-second-chance',
  excerpt: 'Bank rejected lorry financing 2026. Second chance ISUZU, FUSO, HINO lorry loans approved.',
  date: '2026-01-07',
  author: 'Ing Heng Credit Team',
  readTime: 3,
  category: 'Lorry Financing',
  image: '/images/blog/bank-rejected-lorry.jpg'
};

const keywords = ["machinery-financing","bank-rejected-lorry","lorry-financing"],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
];

const markdownContent = `
