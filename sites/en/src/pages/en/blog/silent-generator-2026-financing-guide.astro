---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'en';
const post = {
  title: 'Silent Generator 2026 - Quiet Power Financing Guide',
  slug: 'silent-generator-2026-financing-guide',
  excerpt: '2026 silent generator financing guide. Quiet power for sensitive locations. 0% down payment, fast approval.',
  date: '2026-01-14',
  author: 'Ing Heng Credit Team',
  readTime: 5,
  category: 'Equipment Guide',
  image: '/images/blog/generator-financing.jpg'
};

const keywords = ['silent generator financing', 'quiet generator malaysia', 'soundproof generator 2026', '0% down payment'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
