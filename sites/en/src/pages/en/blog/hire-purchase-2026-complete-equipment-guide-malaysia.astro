---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';
import MarkdownContent from '../../../components/MarkdownContent.astro';

const lang = 'en';
const post = {
  title: 'Hire Purchase 2026 - Complete Equipment Guide Malaysia',
  slug: 'hire-purchase-2026-complete-equipment-guide-malaysia',
  excerpt: 'Hire Purchase explained for 2026. Bank limits vs Ing Heng flexible terms for construction and logistics equipment.',
  date: '2026-01-04',
  author: 'Ing Heng Credit Team',
  readTime: 3,
  category: 'Equipment Financing',
  image: '/images/blog/hire-purchase-2026.jpg'
};

const keywords = ["machinery-financing","hire-purchase","equipment-loan"],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
];

const markdownContent = `
