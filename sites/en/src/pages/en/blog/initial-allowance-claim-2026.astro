  h2 {
    color: #2D1810;
    font-family: 'Bebas Neue', sans-serif;
    text-transform: uppercase;
    font-size: 2rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    border-bottom: 3px solid #D4A574;
    padding-bottom: 0.5rem;
  }

  h3 {
    color: #8B6F47;
    font-family: 'Bebas Neue', sans-serif;
    text-transform: uppercase;
