      <table style="width: 100%; border-collapse: collapse; margin: 2rem 0;">
        <thead>
          <tr style="background: #D4A574; color: #2D1810;">
            <th style="padding: 1rem; border: 1px solid #D4A574; text-align: left;">Feature</th>
            <th style="padding: 1rem; border: 1px solid #D4A574; text-align: left;">Warehouse Package</th>
            <th style="padding: 1rem; border: 1px solid #D4A574; text-align: left;">Individual Items</th>
          </tr>
        </thead>
        <tbody>
