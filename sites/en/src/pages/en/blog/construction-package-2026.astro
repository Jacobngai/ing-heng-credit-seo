---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'en';
const post = {
  title: 'Construction Package 2026',
  slug: 'construction-package-2026',
  excerpt: 'Construction Package 2026. Get 0% down payment equipment financing in Malaysia.',
  date: '2026-01-05',
  author: 'Ing Heng Credit Team',
  readTime: 4,
  category: 'Construction Equipment',
  image: '/images/blog/construction-package-2026.jpg'
};

const keywords = ["construction-equipment","equipment-financing","0-down-payment"],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
];
---

<BaseLayout title={post.title} description={post.excerpt} lang={lang} keywords={keywords}>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": post.title,
      "description": post.excerpt,
      "datePublished": post.date,
      "author": { "@type": "Organization", "name": post.author },
      "publisher": {
        "@type": "Organization",
        "name": "Ing Heng Credit & Leasing Sdn Bhd",
        "logo": {
          "@type": "ImageObject",
          "url": "https://inghengcredit.com/logo.png"
        }
      }
    }
  </script>

  <Breadcrumbs items={breadcrumbItems} />

  <article class="max-w-4xl mx-auto px-4 py-12">
    <header class="mb-8">
      <span class="text-sm font-semibold" style="color: #D4A574;">Construction Equipment</span>
      <h1 class="text-4xl font-bold mt-2" style="color: #2D1810; font-family: 'Bebas Neue', sans-serif; text-transform: uppercase;">{post.title}</h1>
      <p class="text-gray-600 mt-4">{post.excerpt}</p>
      <div class="flex items-center gap-4 text-sm text-gray-500 mt-4">
        <span>{post.author}</span>
        <span>•</span>
        <time>{new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
        <span>•</span>
        <span>{post.readTime} min read</span>
      </div>
    </header>

    <div class="prose prose-lg max-w-none">
<div class="max-w-4xl mx-auto px-4 py-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-6">Construction Package 2026 - Complete Fleet Financing</h1>

      <p class="text-xl text-gray-700 mb-8 leading-relaxed">
        Get a complete construction equipment package with one easy financing deal. Excavator, loader, roller, and more. 0% down payment on the entire fleet in 2026.
      </p>

      <!-- Quick Stats -->
      <div class="bg-amber-50 border-l-4 border-amber-500 p-6 mb-8">
        <h2 class="text-2xl font-bold text-amber-800 mb-4">Why Choose a Construction Package</h2>
        <ul class="space-y-2 text-gray-700">
          <li>• Complete fleet in one deal</li>
          <li>• 0% down payment on everything</li>
          <li>• 100% full loan coverage</li>
          <li>• Single monthly payment</li>
          <li>• Start your construction business fully equipped</li>
        </ul>
      </div>

      <!-- Comparison Table -->
      <div class="overflow-x-auto mb-8">
        <table class="w-full bg-white shadow-lg rounded-lg overflow-hidden">
          <thead class="bg-gray-800 text-white">
            <tr>
              <th class="px-6 py-3 text-left">Feature</th>
              <th class="px-6 py-3 text-center">Banks</th>
              <th class="px-6 py-3 text-center">Us</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b">
              <td class="px-6 py-4 font-medium">Down Payment</td>
              <td class="px-6 py-4 text-center text-red-600">10-20% each</td>
              <td class="px-6 py-4 text-center text-green-600 font-bold">0% on all</td>
            </tr>
            <tr class="border-b">
              <td class="px-6 py-4 font-medium">Financing Amount</td>
              <td class="px-6 py-4 text-center text-red-600">90% each</td>
              <td class="px-6 py-4 text-center text-green-600 font-bold">100% all</td>
            </tr>
            <tr class="border-b">
              <td class="px-6 py-4 font-medium">Equipment Age Limit</td>
              <td class="px-6 py-4 text-center text-red-600">5 years max</td>
              <td class="px-6 py-4 text-center text-green-600 font-bold">NO limit</td>
            </tr>
            <tr class="border-b">
              <td class="px-6 py-4 font-medium">Interest Rate</td>
              <td class="px-6 py-4 text-center">4.6-6.0%</td>
              <td class="px-6 py-4 text-center text-green-600 font-bold">Competitive</td>
            </tr>
            <tr>
              <td class="px-6 py-4 font-medium">Package Deal</td>
              <td class="px-6 py-4 text-center text-red-600">Rarely offered</td>
              <td class="px-6 py-4 text-center text-green-600 font-bold">Available</td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- Package Options -->
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Construction Package Options</h2>

      <!-- Starter Package -->
      <div class="bg-white p-6 rounded-lg shadow mb-6">
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Starter Package - Perfect for New Contractors</h3>
        <ul class="space-y-2 text-gray-700 mb-4">
          <li>✓ <strong>1x Excavator (20-30 ton)</strong> - digging and excavation</li>
          <li>✓ <strong>1x Wheel Loader</strong> - loading and site prep</li>
          <li>✓ <strong>1x Roller Compactor</strong> - compaction work</li>
          <li>✓ <strong>1x Dump Truck</strong> - material transport</li>
        </ul>
        <p class="text-green-700 font-bold">0% down | 100% financed | Ready to work</p>
      </div>

      <!-- Professional Package -->
      <div class="bg-white p-6 rounded-lg shadow mb-6">
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Professional Package - For Growing Businesses</h3>
        <ul class="space-y-2 text-gray-700 mb-4">
          <li>✓ <strong>2x Excavators</strong> - different sizes for various jobs</li>
          <li>✓ <strong>1x Wheel Loader</strong> - material handling</li>
          <li>✓ <strong>1x Backhoe Loader</strong> - versatility</li>
          <li>✓ <strong>1x Roller</strong> - compaction</li>
          <li>✓ <strong>1x Grader</strong> - fine grading</li>
          <li>✓ <strong>2x Dump Trucks</strong> - fleet transport</li>
        </ul>
        <p class="text-green-700 font-bold">0% down | 100% financed | Full capability</p>
      </div>

      <!-- Premium Package -->
      <div class="bg-white p-6 rounded-lg shadow mb-6">
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Premium Package - Complete Civil Works Fleet</h3>
        <ul class="space-y-2 text-gray-700 mb-4">
          <li>✓ <strong>3x Excavators</strong> - small, medium, large</li>
          <li>✓ <strong>2x Wheel Loaders</strong> - different capacities</li>
          <li>✓ <strong>1x Backhoe Loader</strong> - utility work</li>
          <li>✓ <strong>1x Skid Steer</strong> - tight spaces</li>
          <li>✓ <strong>1x Roller</strong> - compaction</li>
          <li>✓ <strong>1x Paver</strong> - road work</li>
          <li>✓ <strong>1x Grader</strong> - road preparation</li>
          <li>✓ <strong>1x Scraper</strong> - earthmoving</li>
          <li>✓ <strong>3x Dump Trucks</strong> - full transport fleet</li>
          <li>✓ <strong>1x Crane</strong> - lifting</li>
        </ul>
        <p class="text-green-700 font-bold">0% down | 100% financed | Complete operation</p>
      </div>

      <!-- Specialized Packages -->
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Specialized Construction Packages</h2>
      <div class="bg-white p-6 rounded-lg shadow mb-8">
        <ul class="space-y-4 text-gray-700">
          <li>
            <strong class="text-gray-900">Road Building Package:</strong> Paver, roller, grader, excavator, dump trucks. Everything for road construction.
          </li>
          <li>
            <strong class="text-gray-900">Earthmoving Package:</strong> Scrapers, dozers, excavators, dump trucks. Maximum earthmoving capacity.
          </li>
          <li>
            <strong class="text-gray-900">Site Prep Package:</strong> Excavator, dozer, grader, roller, loader. Complete site preparation fleet.
          </li>
          <li>
            <strong class="text-gray-900">Concrete Package:</strong> Concrete mixer, concrete pump, excavator, vibrators. Full concrete capabilities.
          </li>
          <li>
            <strong class="text-gray-900">Demolition Package:</strong> Excavator with hammer, shears, crusher, loader, dump truck. Complete demolition setup.
          </li>
        </ul>
      </div>

      <!-- Benefits -->
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Benefits of Package Financing</h2>
      <div class="bg-green-50 border-l-4 border-green-500 p-6 mb-8">
        <ul class="space-y-2 text-gray-700">
          <li>✓ One application for all equipment</li>
          <li>✓ Single monthly payment for entire fleet</li>
          <li>✓ Better terms than financing separately</li>
          <li>✓ Complete equipment compatibility</li>
          <li>✓ Start with everything you need</li>
          <li>✓ Bid on larger projects immediately</li>
          <li>✓ No need to add equipment later</li>
        </ul>
      </div>

      <!-- CTA Section -->
      <div class="bg-blue-900 text-white p-8 rounded-lg mb-8">
        <h2 class="text-2xl font-bold mb-4">Get Your Construction Package in 2026</h2>
        <p class="mb-6">0% down payment on the complete package. 100% full loan. No age limit. Start your construction business with a complete fleet today.</p>
        <a href="/calculator" class="inline-block bg-amber-500 hover:bg-amber-600 text-gray-900 font-bold py-3 px-8 rounded-lg transition">
          Calculate Your Payment
        </a>
      </div>

      <!-- Calculator Section -->
      
    </div>
    </div>

    <div class="mt-12 text-center">
      <CTAButton href="/en/contact">Apply for Equipment Financing</CTAButton>
    </div>
  </article>
</BaseLayout>
