  excerpt: 'Need new forklifts, reach trucks, or racking systems? Warehouse equipment financing in Malaysia helps SMEs scale without draining cash flow. 48-hour approval, low deposit.',
  date: '2026-02-16',
  author: 'Ing Heng Credit Team',
  readTime: 10,
  category: 'Warehouse Financing',
  image: '/images/blog/warehouse-financing.jpg'
};

const keywords = ['warehouse equipment financing malaysia', 'forklift financing malaysia', 'reach truck loan', 'logistics equipment loan malaysia', 'warehouse racking financing', 'SME warehouse funding'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
];
---

<BaseLayout title={post.title} description={post.excerpt} lang={lang} keywords={keywords}>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": post.title,
      "description": post.excerpt,
      "datePublished": post.date,
