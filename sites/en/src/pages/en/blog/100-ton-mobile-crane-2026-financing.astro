---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'en';
const post = {
  title: '100-Ton Mobile Crane 2026: Large Projects, 0% Down Payment',
  slug: '100-ton-mobile-crane-2026-financing',
  excerpt: '100-ton mobile crane financing for large construction projects 2026. 0% down payment, 100% full loan, no age limit.',
  date: '2026-01-12',
  author: 'Ing Heng Credit Team',
  readTime: 8,
  category: 'Crane Financing',
  image: '/images/blog/crane-financing.jpg'
};

const keywords = ['100 ton crane', 'mobile crane', 'large projects', 'crane financing', '0% down payment'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
