---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'en';
const post = {
  title: 'Used Crane 2026 Buying Guide: 0% Down, No Age Limit',
  slug: 'used-crane-2026-buying-guide',
  excerpt: 'Used crane buying guide 2026. 0% down payment, 100% full loan, no age limit. Banks reject, we approve.',
  date: '2026-01-12',
  author: 'Ing Heng Credit Team',
  readTime: 7,
  category: 'Crane Financing',
  image: '/images/blog/crane-financing.jpg'
};

const keywords = ['used crane', 'crane financing', '0% down payment', 'no age limit', 'crane buying guide'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
