  excerpt: 'Pre-CNY transport equipment 2026. Logistics readiness for Chinese New Year peak season.',
  date: '2026-01-05',
  author: 'Ing Heng Credit Team',
  readTime: 3,
  category: 'CNY Special',
  image: '/images/blog/pre-cny-transport.jpg'
};

const keywords = ["machinery-financing","cny-transport","logistics-readiness"],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
];

const markdownContent = `
