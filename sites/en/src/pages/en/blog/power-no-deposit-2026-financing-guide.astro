  excerpt: '2026 no deposit generator financing guide. 0% down payment power equipment. Full loan financing available.',
  date: '2026-01-14',
  author: 'Ing Heng Credit Team',
  readTime: 5,
  category: 'Financing Guide',
  image: '/images/blog/generator-financing.jpg'
};

const keywords = ['no deposit generator financing', '0% down payment generator malaysia', 'generator without deposit 2026', '100% loan'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
