---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'en';
const post = {
  title: 'Johor Equipment Financing 2026',
  slug: 'johor-equipment-financing-2026',
  excerpt: 'Equipment financing in Johor 2026. RTS link, Iskandar development equipment loans.',
  date: '2026-01-06',
  author: 'Ing Heng Credit Team',
  readTime: 3,
  category: 'Equipment Financing',
  image: '/images/blog/johor.jpg'
};

const keywords = ["machinery-financing","johor","southern-region"],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
