  />

  <!-- Subcategory Cards -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-5xl md:text-6xl font-display uppercase mb-6 text-navy-900">
          Marine <span class="text-secondary">Categories</span>
        </h2>
        <div class="w-24 h-2 bg-yellow-400 mx-auto mb-8"></div>
        <p class="text-xl text-gray-700">
          From luxury yachts to jet skis, find your perfect vessel
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {subcategoryCards.map((card) => (
          <HobbyCard
            lang={lang}
            title={card.title}
            description={card.description}
            icon={card.icon}
            href={card.href}
