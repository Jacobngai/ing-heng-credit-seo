  <!-- Hero Section -->
  <HobbyHero
    lang={lang}
    title="Boat & Yacht Financing Malaysia"
    subtitle="Hobby Financing"
    description="Set Sail with Financing. We finance boats, yachts, and personal watercraft that banks reject."
