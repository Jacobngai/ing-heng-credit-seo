    features: ['Turbine Engine', '5-Seat Capacity', 'Higher Performance', 'Commercial Ready']
  },
  {
    name: 'Cirrus SR22',
    priceRange: 'RM2M - RM4M',
    description: 'Modern composite aircraft with parachute safety system. The ultimate personal aircraft.',
    features: ['Composite Airframe', 'Parachute System', 'Glass Cockpit', 'High Performance']
  },
  {
    name: 'Bell 206 JetRanger',
    priceRange: 'RM2M - RM4M',
    description: 'The iconic turbine helicopter. Proven for charter, tourism, and corporate use.',
    features: ['Turbine Engine', '5-Seat Capacity', 'Proven Reliability', 'Commercial Workhorse']
  },
  {
    name: 'AutoGyro Cavalon',
