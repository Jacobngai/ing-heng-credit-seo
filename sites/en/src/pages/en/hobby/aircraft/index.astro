---
/**
 * Aircraft Category Page - English
 * Aircraft financing category landing page
 * SEO: Helicopter financing Malaysia, small aircraft financing, aviation financing
 */

import BaseLayout from '../../../../layouts/BaseLayout.astro';
import HobbyHero from '../../../../components/HobbyHero.astro';
import HobbyCard from '../../../../components/HobbyCard.astro';
import FAQItem from '../../../../components/FAQItem.astro';
import Breadcrumbs from '../../../../components/Breadcrumbs.astro';
import { encodeJSONLD } from '../../../../utils/schema';

const lang = 'en';

// SEO Data
const pageTitle = 'Aircraft Financing Malaysia | Helicopter, Small Plane & Aviation Loans';
const pageDescription = 'Finance your dream aircraft. Helicopters, small planes, ultralights. Up to RM5 million, flexible terms. Aviation financing specialists in Malaysia.';
const keywords = [
  'aircraft financing Malaysia',
  'helicopter financing',
  'small plane loan Malaysia',
  'aviation financing',
  'Robinson R44 financing',
  'Cessna financing Malaysia',
  'private aircraft loan',
  'helicopter loan Malaysia',
  'ultralight financing',
  'gyrocopter financing'
];

// Breadcrumbs
const breadcrumbs = [
  { label: 'Home', url: '/en' },
  { label: 'Hobby Financing', url: '/en/hobby' },
  { label: 'Aircraft', url: '/en/hobby/aircraft' },
];

// Subcategory Cards
const subcategoryCards = [
  {
    title: 'Helicopters',
    description: 'Personal and commercial helicopters. Robinson, Bell, Airbus - all brands financed.',
    image: '/images/hobby/helicopters-card.jpg',
    href: '#',
    items: ['Robinson R22/R44/R66', 'Bell 206/407', 'Airbus H125', 'MD 500', 'Private Tours', 'Charter Business']
  },
  {
    title: 'Single-Engine Aircraft',
    description: 'Personal flying and training aircraft. Cessna, Piper, Cirrus - your wings await.',
    image: '/images/hobby/single-engine-card.jpg',
    href: '#',
    items: ['Cessna 172/182', 'Piper Cherokee', 'Cirrus SR22', 'Beechcraft Bonanza', 'Diamond DA40', 'Training Aircraft']
  },
  {
    title: 'Ultralights & Gyrocopters',
    description: 'Recreational flying made accessible. Ultralights, gyrocopters, and sport aircraft.',
    image: '/images/hobby/ultralight-card.jpg',
    href: '#',
    items: ['Gyrocopters', 'Weight-Shift', 'Powered Parachutes', 'Light Sport Aircraft', 'Trikes', 'Paramotors']
  }
];

// Popular Models
const popularModels = [
  {
    name: 'Robinson R44',
