---
import Layout from '../../../layouts/Layout.astro';
import Hero from '../../../components/Hero.astro';
import Section from '../../../components/Section.astro';
import Button from '../../../components/Button.astro';
import EquipmentCard from '../../../components/EquipmentCard.astro';
import FAQ from '../../../components/FAQ.astro';
import { Image } from 'astro:assets';

const seo = {
  title: "Manufacturing Equipment Financing Malaysia | Machinery Loans | Ing Heng Credit",
  description: "Specialized manufacturing equipment financing for Malaysian SMEs. Finance CNC machines, production lines, and industrial machinery with competitive rates. 0% down payment available.",
  keywords: ["manufacturing equipment financing", "machinery loan malaysia", "industrial equipment loan", "SME manufacturing loan", "CNC machine financing", "production line financing"],
};

const equipmentTypes = [
  {
    title: "CNC Machines & Lathes",
    description: "Finance high-precision CNC milling, turning centers, and lathes. Upgrade your production capabilities with top brands like Mazak, DMG Mori, and Haas.",
    image: "/images/equipment/cnc-machine.jpg", // Placeholder - ensure image exists or use generic
    link: "/en/equipment/cnc-machine/"
  },
  {
    title: "Injection Molding Machines",
    description: "Scale your plastic manufacturing with financing for injection molding units. We cover brands like Haitian, Engel, and Arburg.",
    image: "/images/equipment/injection-molding.jpg",
    link: "#"
  },
  {
    title: "Packaging Machinery",
    description: "Automate your packaging lines. Finance fillers, cappers, labelers, and wrapping machines to increase throughput.",
    image: "/images/equipment/packaging-machine.jpg",
    link: "#"
  },
  {
    title: "Food Processing Equipment",
    description: "Hygienic equipment financing for food manufacturers. Mixers, ovens, conveyors, and processing lines.",
    image: "/images/equipment/food-processing.jpg",
    link: "/en/equipment/food-stall/"
  },
  {
    title: "Industrial Robotics",
    description: "Adopt Industry 4.0. Finance robotic arms, cobots, and automation cells to reduce labor costs and improve quality.",
    image: "/images/equipment/robot-arm.jpg",
    link: "#"
  },
  {
    title: "Woodworking Machinery",
    description: "Panel saws, edge banders, and CNC routers for furniture manufacturers. Flexible terms for woodworking SMEs.",
    image: "/images/equipment/woodworking.jpg",
    link: "#"
  }
];

const faqs = [
  {
    question: "What types of manufacturing equipment can I finance?",
    answer: "We finance a wide range of industrial machinery, including CNC machines, injection molding machines, packaging lines, food processing equipment, woodworking machinery, and industrial robots. Both new and used equipment are eligible."
  },
  {
    question: "Do you offer financing for used manufacturing machinery?",
    answer: "Yes, we finance used manufacturing equipment up to 10 years old (subject to condition assessment). This is a popular option for SMEs looking to expand capacity cost-effectively."
  },
  {
    question: "What is the typical interest rate for machinery loans?",
    answer: "Our interest rates for manufacturing equipment typically range from 6.5% to 8.5% per annum, depending on your company's credit profile, the equipment type, and the loan tenure."
  },
  {
    question: "Can I get 100% financing (0% down payment)?",
    answer: "Yes, for qualified SMEs with a strong track record, we offer up to 100% financing (0% down payment). This helps you preserve working capital for raw materials and operations."
  },
  {
    question: "How long does the approval process take?",
    answer: "We specialize in speed. For complete applications, we typically provide an approval decision within 3-5 working days, compared to weeks with traditional banks."
  },
  {
    question: "What documents are required for application?",
    answer: "Standard requirements include: Company SSM registration, latest 6 months bank statements, audited financial reports (if available), directors' IC copies, and the supplier's quotation for the machine."
  }
];

const schema = {
  "@context": "https://schema.org",
  "@type": "FinancialProduct",
  "name": "Manufacturing Equipment Financing",
  "description": "Specialized loan and hire purchase facilities for industrial manufacturing machinery in Malaysia.",
  "provider": {
    "@type": "FinancialService",
    "name": "Ing Heng Credit & Leasing Sdn Bhd",
    "image": "https://inghengcredit.com/logo.png",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Klang",
      "addressRegion": "Selangor",
      "addressCountry": "MY"
    }
  },
  "areaServed": "MY",
  "interestRate": {
    "@type": "QuantitativeValue",
    "minValue": 6.5,
    "maxValue": 8.5,
    "unitText": "PERCENT"
  },
  "feesAndCommissionsSpecification": "0% Down Payment Available"
};
---

<Layout seo={seo} schema={schema}>
  <Hero
    title="Manufacturing Equipment Financing Malaysia"
    subtitle="Scale Your Production with Fast, Flexible Machinery Loans. Up to 100% Financing Available."
    backgroundImage="/images/hero/manufacturing-bg.jpg" 
    primaryAction={{ text: "Get a Quote", href: "/en/contact/" }}
    secondaryAction={{ text: "WhatsApp Us", href: "https://wa.me/60175700889" }}
  />

  <Section className="bg-white">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-3xl font-bold mb-6">Grow Your Factory Without Draining Cash Flow</h2>
        <p class="text-lg text-gray-600 mb-6">
          In the competitive manufacturing sector, modern machinery is the key to efficiency and quality. However, purchasing high-end industrial equipment requires significant capital.
        </p>
        <p class="text-lg text-gray-600 mb-6">
          Ing Heng Credit provides specialized <strong>manufacturing equipment financing</strong> designed for Malaysian SMEs. Whether you need a single CNC machine or a complete production line, our flexible hire purchase solutions allow you to acquire the technology you need today while paying over time.
        </p>
        <ul class="space-y-3 mb-8">
          <li class="flex items-center text-gray-700">
            <span class="text-green-500 mr-2">✓</span> <strong>0% Down Payment Options:</strong> Preserve your cash for materials and labor.
          </li>
          <li class="flex items-center text-gray-700">
            <span class="text-green-500 mr-2">✓</span> <strong>Fast Approval (3-5 Days):</strong> Don't let machine lead times delay your projects.
          </li>
          <li class="flex items-center text-gray-700">
            <span class="text-green-500 mr-2">✓</span> <strong>New & Used Equipment:</strong> We finance both brand new and quality used machinery.
          </li>
          <li class="flex items-center text-gray-700">
            <span class="text-green-500 mr-2">✓</span> <strong>Tax Benefits:</strong> Claim Capital Allowances on your financed equipment.
          </li>
        </ul>
        <Button href="/en/contact/" variant="primary">Apply for Financing</Button>
      </div>
      <div class="relative">
         {/* Placeholder for an image component if available, using a div for structure */}
        <div class="bg-gray-100 rounded-lg aspect-video flex items-center justify-center text-gray-400">
            [Manufacturing Floor Image]
        </div>
      </div>
    </div>
  </Section>

  <Section className="bg-gray-50">
    <div class="text-center max-w-3xl mx-auto mb-12">
      <h2 class="text-3xl font-bold mb-4">Machinery We Finance</h2>
      <p class="text-gray-600">From precision engineering to food production, we cover a vast spectrum of industrial equipment.</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {equipmentTypes.map(item => (
        <EquipmentCard 
          title={item.title} 
          description={item.description}
          image={item.image}
          link={item.link}
        />
      ))}
    </div>
  </Section>

  <Section className="bg-blue-900 text-white">
    <div class="text-center max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold mb-6">Why Choose Ing Heng for Manufacturing Loans?</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mt-12">
        <div class="p-6 bg-blue-800 rounded-lg">
          <div class="text-4xl mb-4">40+</div>
          <div class="font-semibold">Years Experience</div>
        </div>
        <div class="p-6 bg-blue-800 rounded-lg">
          <div class="text-4xl mb-4">4,000+</div>
          <div class="font-semibold">SMEs Served</div>
        </div>
        <div class="p-6 bg-blue-800 rounded-lg">
          <div class="text-4xl mb-4">3-5</div>
          <div class="font-semibold">Day Approval</div>
        </div>
        <div class="p-6 bg-blue-800 rounded-lg">
          <div class="text-4xl mb-4">100%</div>
          <div class="font-semibold">Financing Available</div>
        </div>
      </div>
    </div>
  </Section>

  <Section className="bg-white">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-3xl font-bold text-center mb-12">Frequently Asked Questions</h2>
      <FAQ items={faqs} />
    </div>
  </Section>

  <Section className="bg-gray-50">
    <div class="text-center max-w-2xl mx-auto">
      <h2 class="text-3xl font-bold mb-6">Ready to Upgrade Your Production Line?</h2>
      <p class="text-lg text-gray-600 mb-8">
        Get a competitive financing quote for your manufacturing equipment today. No obligation, fast service.
      </p>
      <div class="flex gap-4 justify-center">
        <Button href="/en/contact/" variant="primary">Get a Free Quote</Button>
        <Button href="https://wa.me/60175700889" variant="outline">WhatsApp Us</Button>
      </div>
    </div>
  </Section>
</Layout>
