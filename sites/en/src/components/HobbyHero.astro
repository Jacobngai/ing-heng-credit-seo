---
/**
 * Hobby Hero Component
 * Hero section for hobby financing pages with headline, description, and CTAs
 */

import type { Locale } from '../utils/i18n';
import { t } from '../utils/i18n';
import { COMPANY_INFO } from '../utils/constants';

interface Props {
  lang: Locale;
  title?: string;
  titleKey?: string;
  subtitle?: string;
  subtitleKey?: string;
  description?: string;
  descriptionKey?: string;
  features?: string[];
  showContactCta?: boolean;
  showWhatsAppCta?: boolean;
  showApplyCta?: boolean;
  customCtaText?: string;
  backgroundColor?: 'beige' | 'white' | 'accent';
}

const {
  lang,
  title,
  titleKey = 'hobby.heroTitle',
  subtitle,
  subtitleKey,
  description,
  descriptionKey = 'hobby.heroDescription',
  features = [],
  showContactCta = true,
  showWhatsAppCta = true,
  showApplyCta = true,
  customCtaText,
  backgroundColor = 'beige',
} = Astro.props;

const heroTitle = title || t(titleKey, lang);
const heroSubtitle = subtitle || (subtitleKey ? t(subtitleKey, lang) : '');
const heroDescription = description || t(descriptionKey, lang);

const bgColors = {
  beige: 'bg-[#F5F1EB]',
  white: 'bg-white',
  accent: 'bg-[#8B6F47]',
};
---

<section class={`hobby-hero ${bgColors[backgroundColor]}`}>
  <div class="hobby-hero-container">
    <div class="hobby-hero-content">
      {heroSubtitle && (
        <p class="hobby-hero-subtitle">{heroSubtitle}</p>
      )}
      <h1 class="hobby-hero-title">
        {heroTitle}
      </h1>
      {heroDescription && (
        <p class="hobby-hero-description">
          {heroDescription}
        </p>
      )}

      {features && features.length > 0 && (
        <div class="hobby-hero-features">
          {features.map((feature) => (
            <span class="hobby-hero-feature">
              <svg class="hobby-hero-feature-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              {feature}
            </span>
          ))}
        </div>
      )}

      <div class="hobby-hero-ctas">
        {showWhatsAppCta && (
          <a
            href={COMPANY_INFO.whatsapp.link}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-whatsapp"
            aria-label="WhatsApp us"
          >
            <svg class="btn-icon" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
            {t('cta.whatsapp', lang)}
          </a>
        )}
        {showContactCta && (
          <a
            href={`/${lang}/contact`}
            class="btn-primary"
          >
            {customCtaText || t('cta.contactUs', lang)}
          </a>
        )}
        {showApplyCta && (
          <a
            href={`/${lang}/contact`}
            class="btn-secondary"
          >
            {t('cta.checkEligibility', lang)}
          </a>
        )}
      </div>
    </div>

    <div class="hobby-hero-decoration">
      <div class="decoration-circle decoration-circle-1"></div>
      <div class="decoration-circle decoration-circle-2"></div>
      <div class="decoration-circle decoration-circle-3"></div>
    </div>
  </div>
</section>

<style>
  .hobby-hero {
    padding: 4rem 0;
    position: relative;
    overflow: hidden;
  }

  .hobby-hero-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 1;
  }

  .hobby-hero-content {
    max-width: 800px;
  }

  .hobby-hero-subtitle {
    font-size: 1rem;
    font-weight: 700;
    color: #8B6F47;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 0.5rem 0;
  }

  .hobby-hero-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 900;
    color: #2D1810;
    margin: 0 0 1.5rem 0;
    line-height: 1.1;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  .hobby-hero-description {
    font-size: 1.125rem;
    color: #64748b;
    margin: 0 0 2rem 0;
    line-height: 1.7;
    max-width: 650px;
  }

  .hobby-hero-features {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin: 0 0 2rem 0;
  }

  .hobby-hero-feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    font-weight: 700;
    color: #2D1810;
    background: white;
    padding: 0.5rem 1rem;
    border: 2px solid #8B6F47;
    box-shadow: 2px 2px 0 #6B5437;
  }

  .hobby-hero-feature-icon {
    width: 1.125rem;
    height: 1.125rem;
    color: #10B981;
    flex-shrink: 0;
  }

  .hobby-hero-ctas {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .btn-whatsapp,
  .btn-primary,
  .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 2rem;
    font-size: 0.9375rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-decoration: none;
    border-radius: 0;
    transition: all 0.2s ease;
    min-height: 48px;
    border: 3px solid;
  }

  .btn-icon {
    width: 1.25rem;
    height: 1.25rem;
    flex-shrink: 0;
  }

  .btn-whatsapp {
    background: white;
    color: #25D366;
    border-color: #25D366;
    box-shadow: 4px 4px 0 #25D366;
  }

  .btn-whatsapp:hover {
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 #25D366;
    background: #F0FDF4;
  }

  .btn-primary {
    background: #8B6F47;
    color: white;
    border-color: #6B5437;
    box-shadow: 4px 4px 0 #6B5437;
  }

  .btn-primary:hover {
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 #6B5437;
    background: #6B5437;
  }

  .btn-secondary {
    background: white;
    color: #6B5437;
    border-color: #6B5437;
    box-shadow: 4px 4px 0 #6B5437;
  }

  .btn-secondary:hover {
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 #6B5437;
    background: #F5F1EB;
  }

  /* Decorations */
  .hobby-hero-decoration {
    position: absolute;
    top: 0;
    right: 0;
    width: 50%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
    z-index: 0;
  }

  .decoration-circle {
    position: absolute;
    border-radius: 50%;
    border: 3px solid #D4A574;
    opacity: 0.3;
  }

  .decoration-circle-1 {
    width: 200px;
    height: 200px;
    top: -50px;
    right: 100px;
  }

  .decoration-circle-2 {
    width: 150px;
    height: 150px;
    top: 100px;
    right: -30px;
    border-color: #8B6F47;
  }

  .decoration-circle-3 {
    width: 100px;
    height: 100px;
    bottom: 50px;
    right: 150px;
    border-color: #6B5437;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hobby-hero {
      padding: 3rem 0;
    }

    .hobby-hero-container {
      padding: 0 1rem;
    }

    .hobby-hero-title {
      font-size: 2rem;
    }

    .hobby-hero-description {
      font-size: 1rem;
    }

    .hobby-hero-features {
      flex-direction: column;
      gap: 0.5rem;
    }

    .hobby-hero-ctas {
      flex-direction: column;
      width: 100%;
    }

    .btn-whatsapp,
    .btn-primary,
    .btn-secondary {
      width: 100%;
      justify-content: center;
    }

    .hobby-hero-decoration {
      width: 100%;
      opacity: 0.5;
    }

    .decoration-circle-1 {
      width: 150px;
      height: 150px;
      top: -30px;
      right: 30px;
    }

    .decoration-circle-2 {
      width: 100px;
      height: 100px;
      top: 80px;
      right: -20px;
    }

    .decoration-circle-3 {
      width: 80px;
      height: 80px;
      bottom: 30px;
      right: 50px;
    }
  }
</style>
