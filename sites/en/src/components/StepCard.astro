---
/**
 * StepCard Component
 * Display step-by-step process with number badge and icon
 */

interface Props {
  stepNumber: number;
  title: string;
  description: string;
  icon?: string;
}

const {
  stepNumber,
  title,
  description,
  icon,
} = Astro.props;

// Icon SVGs
const icons = {
  contact: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>',
  document: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>',
  check: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>',
  clipboard: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" /></svg>',
  truck: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" /></svg>',
  default: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>',
};

const iconHtml = icon && icons[icon as keyof typeof icons] ? icons[icon as keyof typeof icons] : icons.default;
---

<div class="relative flex flex-col items-center text-center group">
  <!-- Step Number Badge -->
  <div class="relative mb-6">
    <!-- Icon Background Circle -->
    <div class="w-24 h-24 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center text-white shadow-[6px_6px_0_#2D1810] group-hover:scale-110 transition-transform duration-300">
      <div set:html={iconHtml} />
    </div>

    <!-- Step Number -->
    <div class="absolute -top-2 -right-2 w-10 h-10 rounded-full bg-accent text-primary font-bold text-lg flex items-center justify-center shadow-[4px_4px_0_#2D1810] border-4 border-white">
      {stepNumber}
    </div>
  </div>

  <!-- Content -->
  <div>
    <h3 class="text-xl font-bold text-primary mb-3 group-hover:text-secondary transition-colors">
      {title}
    </h3>
    <p class="text-gray-600 leading-relaxed">
      {description}
    </p>
  </div>

  <!-- Connector Line (Hidden on last item) -->
  <div class="hidden md:block absolute top-12 left-1/2 w-full h-1 bg-gradient-to-r from-primary/30 to-transparent -z-10" style="transform: translateX(50%);">
  </div>
</div>
