---
/**
 * Komatsu PC350 Financing Landing Page - Malay
 * Sasaran: Kontraktor besar, syarikat pembinaan, mining operators
 */

import BaseLayout from '../../../layouts/BaseLayout.astro';
import Hero from '../../../components/Hero.astro';
import ContactForm from '../../../components/ContactForm.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import RelatedEquipment from '../../../components/RelatedEquipment.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { SITE_CONFIG, COMPANY_INFO } from '../../../utils/constants';

const lang = 'ms';

// SEO Data
const pageTitle = 'Pembiayaan Komatsu PC350 Malaysia - Deposit 0% | Heavy Duty Excavator';
const pageDescription = 'Pembiayaan Komatsu PC350 dengan deposit 0%. Excavator 35-ton untuk projek besar, mining, quarry. Komatsu PC350LC, PC350HD tersedia.';
const keywords = ['pembiayaan Komatsu PC350', 'PC350 excavator loan', 'heavy duty excavator Malaysia', 'Komatsu PC350LC', '35 ton excavator'];

// Breadcrumbs
const breadcrumbs = [
  { label: 'Laman Utama', url: '/ms' },
  { label: 'Peralatan', url: '/ms/equipment' },
  { label: 'Pembiayaan Komatsu PC350', url: '/ms/equipment/komatsu-pc350' },
];
---

<BaseLayout title={pageTitle} description={pageDescription} lang={lang} keywords={keywords}>
  <!-- Hero Section -->
  <Hero
    title="Pembiayaan Komatsu PC350 - Deposit 0%"
    subtitle="Excavator 35-ton untuk projek besar dengan pembiayaan 100%"
    backgroundImage="/images/hero/komatsu-pc350.jpg"
    lang={lang}
  />

  <!-- Breadcrumbs -->
  <Breadcrumbs items={breadcrumbs} />

  <!-- Main Content -->
  <section class="section py-16 bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl font-black mb-8 text-[#2D1810] text-center">
          Komatsu PC350 - Heavy Duty Excavator
        </h2>
        
        <div class="prose prose-lg max-w-none text-gray-700 space-y-6">
          <p>
            <strong>Perlukan excavator berat untuk projek besar atau operasi mining?</strong> Kami menawarkan pembiayaan Komatsu PC350 dengan <strong>deposit 0% dan pembiayaan sehingga 100%</strong> nilai excavator.
          </p>
          
          <p>
            Komatsu PC350 adalah excavator 35-ton dengan kuasa dan ketahanan untuk kerja berat. Ideal untuk mining, quarry, pembinaan infrastruktur besar.
          </p>

          <div class="bg-[#F5F1EB] p-8 rounded-lg border-3 border-[#2D1810] shadow-brutal my-8">
            <h3 class="text-2xl font-bold mb-4 text-[#8B6F47]">Spesifikasi Komatsu PC350</h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Operating Weight</strong> - 35,000kg untuk kerja berat</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Engine Power</strong> - 257 HP untuk produktiviti tinggi</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Bucket Capacity</strong> - 1.4-1.8 m³ bergantung konfigurasi</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Reach</strong> - Maximum reach 10.6m untuk kerja dalam</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section py-16 bg-[#8B6F47] text-white">
    <div class="container-custom text-center">
      <h2 class="text-4xl font-black mb-4">Miliki Komatsu PC350 Hari Ini</h2>
      <p class="text-xl mb-8 opacity-90">Heavy duty excavator untuk projek besar</p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <CTAButton
          href={COMPANY_INFO.whatsapp.link}
          text="WhatsApp Kami"
          variant="whatsapp"
          lang={lang}
        />
        <CTAButton
          href={`/${lang}/contact`}
          text="Mohon Sekarang"
          variant="secondary"
          lang={lang}
        />
      </div>
    </div>
  </section>

  <!-- Related Equipment -->
  <RelatedEquipment lang={lang} currentEquipment="komatsu-pc350" />

  <!-- Contact Form -->
  <ContactForm lang={lang} />
</BaseLayout>