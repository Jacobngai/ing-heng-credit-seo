<BaseLayout
  title={pageTitle}
  description={pageDescription}
  lang={lang}
  keywords={['pembiayaan kren bergerak Malaysia', 'pinjaman kren bergerak', 'pembiayaan kren pembinaan', 'pembiayaan peralatan infrastruktur', 'Hitachi CX200-600', 'kren 20 tan', 'kren 30 tan', 'pembelian kren bergerak', 'pajakan kren bergerak']}
  ogType="website"
>
  <!-- Structured Data -->
  <Fragment slot="head">
    <script type="application/ld+json" set:html={encodeJSONLD(productSchema)} />
    <script type="application/ld+json" set:html={encodeJSONLD(faqSchema)} />
  </Fragment>

  <!-- Breadcrumbs -->
  <div class="container-custom py-4">
    <Breadcrumbs items={breadcrumbs} lang={lang} />
  </div>

  <!-- Hero Section -->
  <Hero
    title="Pembiayaan Kren Bergerak Hitachi CX200-600 Malaysia"
    subtitle="Kelulusan Pantas | 20-60 Tan | 0% Bayaran Muka | Terma 12-60 Bulan | Kredit Buruk Diterima"
    ctaText="Dapatkan Sebut Harga Percuma Melalui WhatsApp"
    ctaLink="https://wa.me/60175700889?text=Hi!%20I%27d%20like%20to%20get%20a%20quote%20for%20mobile%20crane%20financing."
    ctaSecondaryText="Hubungi: 017-570 0889"
    ctaSecondaryLink="tel:+60175700889"
    lang={lang}
    trustSignals={['40 Tahun dalam Perniagaan', 'Berlesen KPKT', 'Kadar Kelulusan Tinggi', 'Kelulusan Pantas']}
  />

  <!-- Application Types Section -->
  <section class="section bg-[#F5F5DC]">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-5xl md:text-6xl font-display uppercase mb-6 text-navy-900">
          Aplikasi Pembiayaan Kren Bergerak
        </h2>
        <div class="w-24 h-2 bg-yellow-400 mx-auto mb-8"></div>
        <p class="text-xl text-[#4F3E29] leading-relaxed max-w-4xl mx-auto">
          Biayai kren bergerak untuk pembinaan jalan, pembinaan jambatan, bangunan tinggi, loji perindustrian, projek infrastruktur, dan perkhidmatan penyelenggaraan.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {applications.map((app) => (
          <div class="bg-white p-8 rounded-lg shadow-[4px_4px_0_#2D1810] hover:shadow-[8px_8px_0_#2D1810] transition-all hover:-translate-y-1">
            <div class="text-2xl font-bold text-navy-900 mb-4">{app.title}</div>
            <p class="text-[#4F3E29] mb-4">{app.description}</p>
            <div class="space-y-3 mb-6">
              {app.features.map((feature) => (
                <div class="flex items-start space-x-3">
                  <div class="w-5 h-5 bg-yellow-400 border-2 border-navy-900 flex-shrink-0 mt-0.5"></div>
                  <span class="text-sm text-[#4F3E29]">{feature}</span>
                </div>
              ))}
            </div>
            <div class="mt-6 pt-6 border-t-4 border-navy-900">
              <a
                href="https://wa.me/60175700889?text=Hi!%20I%27d%20like%20to%20get%20a%20quote%20for%20mobile%20crane%20financing."
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-primary text-lg px-8 py-4 w-full"
              >
                Dapatkan Sebut Harga untuk {app.type}
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="section">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-5xl md:text-6xl font-display uppercase mb-6 text-navy-900">
          Mengapa Pilih <span class="text-secondary">Ing Heng Credit</span> untuk Pembiayaan Kren Bergerak?
        </h2>
        <div class="w-24 h-2 bg-yellow-400 mx-auto mb-8"></div>
        <p class="text-xl text-[#4F3E29] leading-relaxed max-w-4xl mx-auto">
          Kelulusan pantas, terma fleksibel, kadar kompetitif, kadar kelulusan cemerlang untuk kren bergerak termasuk Hitachi, Kato, Kobelco, dan banyak lagi jenama.
