---
/**
 * Excavator Financing for Construction Projects - Use-Case Page - Bahasa Malaysia
 * Target: Kontraktor dan pemaju yang mencari pembiayaan jengkaut pembinaan
 * Keywords: pembiayaan jengkaut pembinaan, pinjaman peralatan pembinaan, pembiayaan jengkaut kontraktor
 * Content Strategy: 60% template + 40% unique use-case content
 */

import BaseLayout from '../../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../../components/Breadcrumbs.astro';

const lang = 'ms';
const useCaseId = 'construction';

// Use-case specific data
const useCase = {
  name: 'Projek Pembinaan',
  icon: 'building',
  targetAudience: ['Kontraktor am', 'Pemaju hartanah', 'Syarikat pembinaan', 'Firma kejuruteraan awam'],
  description: 'Penyelesaian pembiayaan khusus untuk projek pembinaan pelbagai saiz. Dari pembangunan kediaman hingga projek infrastruktur besar.',
  industryStat: { value: 'RM180 bilion', description: 'Nilai industri pembinaan Malaysia (2024)' },
};

const equipment = {
  name: 'Jengkaut',
  type: 'excavator',
  priceRange: 'RM 30,000 - RM 3,000,000',
};

// SEO Data
const pageTitle = `Pembiayaan Jengkaut untuk Projek Pembinaan | Pinjaman Kontraktor | Kelulusan Pantas Malaysia`;
const pageDescription = `Pembiayaan jengkaut pembinaan untuk kontraktor dan pemaju. Kelulusan pantas, terma fleksibel selaras dengan garis masa projek. Biayai jengkaut baru & terpakai dari ${equipment.priceRange}. Kadar kelulusan 95% untuk perniagaan pembinaan.`;
const keywords = [
  'pembiayaan jengkaut pembinaan',
  'pinjaman peralatan pembinaan Malaysia',
  'pembiayaan jengkaut kontraktor',
  'pinjaman jentera pembinaan',
  'pembiayaan peralatan pemaju',
  'pinjaman peralatan berdasarkan projek',
];

const breadcrumbs = [
  { label: 'Laman Utama', url: '/ms' },
  { label: 'Peralatan', url: '/ms/equipment' },
  { label: 'Pembiayaan Jengkaut', url: '/ms/equipment/excavator' },
  { label: 'Projek Pembinaan', url: `/ms/equipment/excavator/construction-projects` },
];

// Construction-specific challenges and benefits
const challenges = [
  { icon: 'clock', problem: 'Tarikh Akhir Projek Ketat', solution: 'Kelulusan pantas untuk memenuhi tender dan garis masa projek' },
  { icon: 'cash', problem: 'Pengurusan Aliran Tunai', solution: 'Simpan modal kerja dengan pilihan bayaran muka 0%' },
  { icon: 'layers', problem: 'Keperluan Berbilang Peralatan', solution: 'Pembiayaan armada untuk berbilang unit dengan diskaun volume' },
  { icon: 'calendar', problem: 'Aliran Tunai Bermusim', solution: 'Pelan bayaran bermusim selaras dengan kitaran pembinaan' },
];

// Industry-specific benefits
const benefits = [
  { icon: 'clock', title: 'Kelulusan Pantas untuk Tender', description: 'Dapatkan kelulusan dengan pantas untuk memenuhi tarikh akhir tender yang ketat. Jangan kehilangan kontrak menunggu kelulusan bank.' },
  { icon: 'trending-up', title: 'Bayaran Selaras Projek', description: 'Struktur bayaran mengikut pencapaian projek dan aliran tunai. Bayar lebih semasa fasa puncak, kurang semasa tempoh perlahan.' },
  { icon: 'layers', title: 'Pembiayaan Armada Tersedia', description: 'Biayai berbilang jengkaut untuk projek besar. Diskaun volume tersedia untuk 3+ unit.' },
  { icon: 'shield', title: 'Pilihan Baru & Terpakai', description: 'Biayai jengkaut baru untuk projek jangka panjang atau unit terpakai untuk penglibatan lebih pendek.' },
  { icon: 'users', title: '0% Bayaran Muka', description: 'Simpan modal kerja anda untuk buruh, bahan, dan operasi. Kontraktor yang layak boleh bermula dengan sifar bayaran muka.' },
  { icon: 'percentage', title: 'Kadar Kompetitif Kontraktor', description: 'Kadar khas untuk syarikat pembinaan yang mantap. Kontrak projek anda menguatkan permohonan anda.' },
];

// Construction project types
const projectTypes = [
  { name: 'Pembangunan Kediaman', description: 'Projek perumahan, kondominium, pangsapuri', excavatorSize: 'Mini ke Sederhana (5-20 tan)' },
  { name: 'Pembinaan Komersial', description: 'Bangunan pejabat, pusat membeli-belah, hotel', excavatorSize: 'Sederhana (15-30 tan)' },
  { name: 'Projek Infrastruktur', description: 'Jalan, jambatan, lebuh raya, MRT', excavatorSize: 'Sederhana ke Besar (20-50 tan)' },
  { name: 'Pembinaan Perindustrian', description: 'Kilang, gudang, taman perindustrian', excavatorSize: 'Sederhana (15-25 tan)' },
  { name: 'Pembangunan Tanah', description: 'Pembersihan tapak, kerja tanah, pemerataan', excavatorSize: 'Sederhana ke Besar (20-40 tan)' },
  { name: 'Pemasangan Utiliti', description: 'Saliran, kumbahan, utiliti bawah tanah', excavatorSize: 'Mini ke Kecil (3-15 tan)' },
];

const steps = [
  { stepNumber: 1, icon: 'contact', title: 'Bincang Projek Anda', description: 'Beritahu kami tentang projek pembinaan anda. Kami akan cadangkan saiz jengkaut dan struktur pembiayaan yang tepat.' },
  { stepNumber: 2, icon: 'document', title: 'Hantar Dokumen & Kontrak', description: 'Sediakan dokumen syarikat serta kontrak projek/LOA. Kontrak aktif menguatkan permohonan anda.' },
  { stepNumber: 3, icon: 'check', title: 'Dapat Kelulusan Pantas', description: 'Kelulusan pantas untuk kontraktor dengan projek aktif. Kes segera untuk tarikh akhir tender diproses dalam 8-12 jam.' },
  { stepNumber: 4, icon: 'clipboard', title: 'Sesuaikan Struktur Bayaran', description: 'Bekerja dengan kami untuk menyelaraskan bayaran dengan garis masa projek dan aliran tunai yang dijangkakan.' },
  { stepNumber: 5, icon: 'truck', title: 'Dapatkan Jengkaut Anda di Tapak', description: 'Koordinasi penghantaran ke tapak projek anda. Mula kerja penggalian dengan segera.' },
];

// Case study (unique content)
const caseStudy = {
  company: 'BCM Construction Sdn Bhd',
  location: 'Selangor',
  project: 'Projek pembangunan bercampur di Shah Alam',
  challenge: 'Memerlukan 3 jengkaut dengan segera selepas memenangi tender besar. Bank memerlukan 3 minggu untuk kelulusan yang akan melambatkan permulaan projek.',
  solution: 'Ing Heng Credit meluluskan pembiayaan armada untuk 3 jengkaut CAT 320 dalam masa 36 jam dengan struktur bayaran bermusim.',
  result: 'Memulakan projek tepat pada jadual, selesai 2 bulan lebih awal daripada tarikh akhir. Syarikat telah membiayai 5 lagi jengkaut untuk projek lain.',
  equipment: '3x Jengkaut CAT 320',
  financing: 'RM 1.8 juta jumlah dengan bayaran muka 15%',
};

// Construction-specific FAQs
const faqs = [
  {
    question: 'Bolehkah saya gunakan kontrak projek saya untuk menguatkan permohonan pinjaman?',
    answer: 'Sudah tentu! Kontrak projek aktif, Surat Tawaran (LOA), dan tender yang disahkan menguatkan permohonan anda dengan ketara. Kami menilai: (1) Nilai dan tempoh kontrak, (2) Reputasi pelanggan (projek kerajaan sangat kuat), (3) Pencapaian bayaran, (4) Rekod prestasi anda dengan projek serupa. Kontraktor dengan projek yang disahkan sering mendapat kadar lebih baik dan jumlah kelulusan lebih tinggi walaupun dengan sejarah kredit terhad.'
  },
  {
    question: 'Bolehkah saya selaraskan bayaran pinjaman dengan aliran tunai projek saya?',
    answer: 'Ya! Kami pakar dalam struktur bayaran selaras projek untuk pembinaan. Pilihan termasuk: (1) Bayaran bermusim - lebih rendah semasa bulan perlahan, lebih tinggi semasa pembinaan puncak, (2) Bayaran berdasarkan pencapaian - selaras dengan jadual bayaran projek, (3) Bayaran belon - bayaran bulanan lebih kecil dengan bayaran akhir lebih besar apabila projek selesai, (4) Bayaran bergraduat - bermula lebih rendah, meningkat apabila hasil projek masuk. Kami akan bekerja dengan anda untuk menstruktur bayaran yang sepadan dengan aliran tunai yang dijangkakan.'
  },
  {
    question: 'Adakah anda membiayai jengkaut untuk projek kerajaan?',
    answer: 'Ya! Projek pembinaan kerajaan sangat baik untuk kelulusan pembiayaan kerana: (1) Bayaran dipercayai daripada agensi kerajaan, (2) Kontrak biasanya ditakrifkan dengan baik dengan pencapaian yang jelas, (3) Projek sering mempunyai garis masa lebih panjang membolehkan bayaran balik yang selesa. Kami telah membiayai peralatan untuk kontraktor yang bekerja pada pembinaan MRT, projek lebuh raya, perumahan awam, dan pembangunan infrastruktur. Pemegang kontrak kerajaan sering layak untuk kadar premium.'
  },
  {
    question: 'Bolehkah saya membiayai berbilang jengkaut untuk projek besar?',
    answer: 'Ya! Pembiayaan armada sesuai untuk projek pembinaan besar yang memerlukan berbilang jengkaut. Manfaat termasuk: (1) Permohonan tunggal dan kelulusan untuk semua unit, (2) Diskaun volume - biasanya 0.5-1% faedah lebih rendah untuk 3+ unit, (3) Penghantaran diselaraskan ke tapak projek, (4) Bayaran bulanan disatukan. Kami telah membiayai armada sehingga 8 jengkaut untuk projek pembinaan utama.'
  },
  {
    question: 'Bagaimana jika projek saya tertangguh?',
    answer: 'Kami faham projek pembinaan menghadapi kelewatan disebabkan cuaca, permit, atau isu pelanggan. Pilihan termasuk: (1) Penstrukturan semula bayaran - lanjutkan tempoh untuk mengurangkan bayaran bulanan, (2) Pengurangan bayaran sementara - bayaran lebih rendah semasa tempoh kelewatan, (3) Tempoh tangguh untuk kelewatan yang didokumenkan. Kami bekerja dengan kontraktor untuk mencari penyelesaian berbanding gagal bayar kepada penalti. Berkomunikasi awal jika anda meramalkan kelewatan.'
  },
  {
    question: 'Saiz jengkaut apa yang terbaik untuk projek pembinaan?',
    answer: 'Saiz yang tepat bergantung kepada jenis projek anda: (1) Jengkaut mini (1-6 tan) - landskap, parit utiliti, ruang sempit, (2) Jengkaut kecil (6-15 tan) - pembinaan kediaman, komersial kecil, (3) Jengkaut sederhana (15-30 tan) - kebanyakan projek pembinaan, kerja asas, persediaan tapak, (4) Jengkaut besar (30-50 tan) - kerja tanah utama, infrastruktur, komersial besar. Kami boleh membantu anda memilih saiz yang tepat dan membiayai dengan sewajarnya.'
  },
  {
    question: 'Apakah dokumen yang syarikat pembinaan perlukan untuk memohon?',
    answer: 'Untuk syarikat pembinaan: (1) Pendaftaran SSM (Borang 9/24/49), (2) Penyata bank syarikat (6 bulan), (3) Salinan IC pengarah, (4) Pendaftaran CIDB jika ada, (5) Kontrak projek aktif/LOA (menguatkan permohonan), (6) Penyata kewangan syarikat jika ada (tidak wajib untuk syarikat baru). Prosesnya mudah untuk kontraktor yang mantap.'
  },
];

// Other use cases for internal linking
const otherUseCases = [
  { name: 'Operasi Perlombongan', url: '/ms/equipment/excavator/mining-operations' },
  { name: 'Pembiayaan PKS', url: '/ms/equipment/excavator/sme-financing' },
  { name: 'Peralatan Terpakai', url: '/ms/equipment/excavator/used-equipment' },
  { name: 'Pengembangan Armada', url: '/ms/equipment/excavator/fleet-expansion' },
];

const productSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": `Pembiayaan Jengkaut untuk Projek Pembinaan`,
  "description": pageDescription,
  "provider": { "@type": "FinancialService", "name": "Ing Heng Credit" },
  "areaServed": { "@type": "Country", "name": "Malaysia" },
  "audience": { "@type": "Audience", "audienceType": "Kontraktor dan pemaju pembinaan" }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": { "@type": "Answer", "text": faq.answer }
  }))
};
---

<BaseLayout title={pageTitle} description={pageDescription} lang={lang} keywords={keywords}>
  <script type="application/ld+json" set:html={JSON.stringify(productSchema)} slot="head" />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} slot="head" />

  <Breadcrumbs items={breadcrumbs} />

  <!-- Hero Section -->
  <section class="hero-section bg-gradient-to-br from-blue-800 to-blue-950 text-white py-16 lg:py-24">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <span class="inline-block bg-blue-600/30 text-blue-200 px-4 py-2 rounded-full text-sm font-medium mb-6">
          Industri Pembinaan | Pasaran {useCase.industryStat.value}
        </span>
        <h1 class="text-4xl lg:text-5xl font-bold mb-6">
          Pembiayaan Jengkaut untuk Projek Pembinaan
        </h1>
        <p class="text-xl text-blue-100 mb-8 max-w-3xl mx-auto">
          Pembiayaan jengkaut yang pantas dan fleksibel direka untuk kontraktor dan pemaju pembinaan.
          Kelulusan pantas, bayaran selaras projek, pembiayaan armada tersedia.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="https://wa.me/60175700889?text=Hi%2C%20saya%20seorang%20kontraktor%20berminat%20dengan%20pembiayaan%20jengkaut%20untuk%20projek%20pembinaan%20saya"
