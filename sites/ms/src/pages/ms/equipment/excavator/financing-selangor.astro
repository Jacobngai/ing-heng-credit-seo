        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
          {location.industries.map(industry => (
            <div class="flex items-center gap-3 bg-stone-50 p-4 rounded-lg">
              <div class="w-10 h-10 bg-amber-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-amber-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <span class="font-medium text-stone-700">{industry}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section (Template Content) -->
  <section class="py-16 bg-stone-50">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-4 text-stone-800">Cara Mendapatkan Pembiayaan Jengkaut di {location.name}</h2>
        <p class="text-center text-stone-600 mb-12 max-w-2xl mx-auto">
          Proses 5 langkah mudah yang direka untuk kontraktor {location.name} yang sibuk. Mulakan hari ini, dapatkan kelulusan esok.
        </p>
        <div class="space-y-6">
          {steps.map(step => (
            <div class="flex gap-6 items-start bg-white p-6 rounded-xl shadow-sm">
              <div class="w-12 h-12 bg-amber-700 text-white rounded-full flex items-center justify-center font-bold text-lg flex-shrink-0">
                {step.stepNumber}
              </div>
              <div>
                <h3 class="text-lg font-semibold text-stone-800 mb-1">{step.title}</h3>
                <p class="text-stone-600">{step.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-4 text-stone-800">Soalan Lazim</h2>
        <p class="text-center text-stone-600 mb-12">
          Soalan biasa tentang pembiayaan jengkaut di {location.name}
        </p>
        <div class="space-y-4">
          {faqs.map(faq => (
            <details class="bg-stone-50 rounded-xl p-6 group">
              <summary class="font-semibold text-stone-800 cursor-pointer list-none flex justify-between items-center">
                {faq.question}
                <svg class="w-5 h-5 text-stone-500 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
