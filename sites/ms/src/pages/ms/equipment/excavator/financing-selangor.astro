        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {benefits.map(benefit => (
            <div class="bg-white p-6 rounded-xl shadow-sm border border-stone-200 hover:border-amber-300 transition-colors">
              <h3 class="text-lg font-semibold text-stone-800 mb-2">{benefit.title}</h3>
              <p class="text-stone-600">{benefit.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Industries Section (Unique Content) -->
  <section class="py-12 bg-white">
