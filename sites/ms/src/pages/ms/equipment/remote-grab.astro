---
/**
 * Grab Equipment Financing Landing Page - Malay
 * Sasaran: Kontraktor demolition, syarikat kitar semula, scrap dealers
 */

import BaseLayout from '../../../layouts/BaseLayout.astro';
import Hero from '../../../components/Hero.astro';
import ContactForm from '../../../components/ContactForm.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import RelatedEquipment from '../../../components/RelatedEquipment.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { SITE_CONFIG, COMPANY_INFO } from '../../../utils/constants';

const lang = 'ms';

// SEO Data
const pageTitle = 'Pembiayaan Grab Equipment Malaysia - Deposit 0% | Demolition Grab, Scrap Handler';
const pageDescription = 'Pembiayaan grab equipment dengan deposit 0%. Demolition grab, scrap handling grab, orange peel grab, magnet grab. Kelulusan pantas untuk kontraktor.';
const keywords = ['pembiayaan grab equipment', 'demolition grab Malaysia', 'scrap handler financing', 'orange peel grab', 'magnet grab loan'];

// Breadcrumbs
const breadcrumbs = [
  { label: 'Laman Utama', url: '/ms' },
  { label: 'Peralatan', url: '/ms/equipment' },
  { label: 'Pembiayaan Remote Control Grab', url: '/ms/equipment/remote-grab' },
];
---

<BaseLayout title={pageTitle} description={pageDescription} lang={lang} keywords={keywords}>
  <!-- Hero Section -->
  <Hero
    title="Pembiayaan Grab Equipment - Deposit 0%"
    subtitle="Demolition grab, scrap handler dengan pembiayaan 100%"
    backgroundImage="/images/hero/grab.jpg"
    lang={lang}
  />

  <!-- Breadcrumbs -->
  <Breadcrumbs items={breadcrumbs} />

  <!-- Main Content -->
  <section class="section py-16 bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl font-black mb-8 text-[#2D1810] text-center">
          Grab Equipment Untuk Demolition & Scrap
        </h2>
        
        <div class="prose prose-lg max-w-none text-gray-700 space-y-6">
          <p>
            <strong>Perlukan grab equipment untuk kerja demolition atau scrap handling?</strong> Kami menawarkan pembiayaan grab equipment dengan <strong>deposit 0% dan pembiayaan sehingga 100%</strong> nilai peralatan.
          </p>
          
          <p>
            Demolition grab, orange peel grab, magnet grab untuk scrap metal handling. Attachment yang boleh dipasang pada excavator sedia ada.
          </p>

          <div class="bg-[#F5F1EB] p-8 rounded-lg border-3 border-[#2D1810] shadow-brutal my-8">
            <h3 class="text-2xl font-bold mb-4 text-[#8B6F47]">Jenis Grab Equipment</h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Demolition Grab</strong> - Untuk kerja bongkaran bangunan</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Orange Peel Grab</strong> - Multi-tine grab untuk scrap metal</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Magnet Grab</strong> - Electromagnet untuk besi dan keluli</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Clamshell Grab</strong> - Untuk material loose seperti pasir</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section py-16 bg-[#8B6F47] text-white">
    <div class="container-custom text-center">
      <h2 class="text-4xl font-black mb-4">Tingkatkan Produktiviti Excavator</h2>
      <p class="text-xl mb-8 opacity-90">Grab attachment untuk kerja khusus</p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <CTAButton
          href={COMPANY_INFO.whatsapp.link}
          text="WhatsApp Kami"
          variant="whatsapp"
          lang={lang}
        />
        <CTAButton
          href={`/${lang}/contact`}
          text="Mohon Sekarang"
          variant="secondary"
          lang={lang}
        />
      </div>
    </div>
  </section>

  <!-- Related Equipment -->
  <RelatedEquipment lang={lang} currentEquipment="grab" />

  <!-- Contact Form -->
  <ContactForm lang={lang} />
</BaseLayout>