---
/**
 * Container Trailer Financing Landing Page - Malay
 * Sasaran: Syarikat logistik, pengusaha container, haulage company
 */

import BaseLayout from '../../../layouts/BaseLayout.astro';
import Hero from '../../../components/Hero.astro';
import ContactForm from '../../../components/ContactForm.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import RelatedEquipment from '../../../components/RelatedEquipment.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { SITE_CONFIG, COMPANY_INFO } from '../../../utils/constants';

const lang = 'ms';

// SEO Data
const pageTitle = 'Pembiayaan Container Trailer Malaysia - Deposit 0% | 20ft, 40ft';
const pageDescription = 'Pembiayaan container trailer dengan deposit 0%. Trailer 20ft, 40ft, skeletal trailer, flatbed trailer. Kelulusan pantas untuk syarikat logistik.';
const keywords = ['pembiayaan container trailer', 'skeletal trailer Malaysia', 'flatbed trailer loan', '20ft container trailer', '40ft trailer pembiayaan'];

// Breadcrumbs
const breadcrumbs = [
  { label: 'Laman Utama', url: '/ms' },
  { label: 'Peralatan', url: '/ms/equipment' },
  { label: 'Pembiayaan Container Trailer', url: '/ms/equipment/container-trailer' },
];
---

<BaseLayout title={pageTitle} description={pageDescription} lang={lang} keywords={keywords}>
  <!-- Hero Section -->
  <Hero
    title="Pembiayaan Container Trailer - Deposit 0%"
    subtitle="Skeletal trailer, flatbed trailer dengan pembiayaan 100%"
    backgroundImage="/images/hero/container-trailer.jpg"
    lang={lang}
  />

  <!-- Breadcrumbs -->
  <Breadcrumbs items={breadcrumbs} />

  <!-- Main Content -->
  <section class="section py-16 bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl font-black mb-8 text-[#2D1810] text-center">
          Container Trailer Untuk Logistik Port
        </h2>
        
        <div class="prose prose-lg max-w-none text-gray-700 space-y-6">
          <p>
            <strong>Perlukan trailer untuk angkut container dari port?</strong> Kami menawarkan pembiayaan container trailer dengan <strong>deposit 0% dan pembiayaan sehingga 100%</strong> nilai peralatan.
          </p>
          
          <p>
            Skeletal trailer, flatbed trailer untuk 20ft dan 40ft container. Ideal untuk syarikat logistik yang beroperasi di Port Klang, Johor Port dan Penang Port.
          </p>

          <div class="bg-[#F5F1EB] p-8 rounded-lg border-3 border-[#2D1810] shadow-brutal my-8">
            <h3 class="text-2xl font-bold mb-4 text-[#8B6F47]">Jenis Container Trailer</h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Skeletal Trailer</strong> - Untuk container 20ft dan 40ft standard</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Flatbed Trailer</strong> - Platform rata untuk pelbagai muatan</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Extendable Trailer</strong> - Boleh extend untuk 40ft container</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Multi-Axle Trailer</strong> - Untuk muatan berat industrial</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section py-16 bg-[#8B6F47] text-white">
    <div class="container-custom text-center">
      <h2 class="text-4xl font-black mb-4">Miliki Container Trailer Sendiri</h2>
      <p class="text-xl mb-8 opacity-90">Tingkatkan perniagaan logistik anda</p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <CTAButton
          href={COMPANY_INFO.whatsapp.link}
          text="WhatsApp Kami"
          variant="whatsapp"
          lang={lang}
        />
        <CTAButton
          href={`/${lang}/contact`}
          text="Mohon Sekarang"
          variant="secondary"
          lang={lang}
        />
      </div>
    </div>
  </section>

  <!-- Related Equipment -->
  <RelatedEquipment lang={lang} currentEquipment="container-trailer" />

  <!-- Contact Form -->
  <ContactForm lang={lang} />
</BaseLayout>