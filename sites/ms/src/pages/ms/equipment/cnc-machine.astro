---
/**
 * CNC Machine Financing Landing Page - Malay
 * Sasaran: Kilang, bengkel pembuatan, syarikat kejuruteraan
 */

import BaseLayout from '../../../layouts/BaseLayout.astro';
import Hero from '../../../components/Hero.astro';
import ContactForm from '../../../components/ContactForm.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import RelatedEquipment from '../../../components/RelatedEquipment.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { SITE_CONFIG, COMPANY_INFO } from '../../../utils/constants';

const lang = 'ms';

// SEO Data
const pageTitle = 'Pembiayaan Mesin CNC Malaysia - Deposit 0% | Lathe, Milling';
const pageDescription = 'Pembiayaan mesin CNC dengan deposit 0%. CNC lathe, milling, plasma cutting. Jenama Mazak, Haas, DMG Mori diterima. Pembiayaan 100%.';
const keywords = ['pembiayaan mesin CNC', 'CNC lathe Malaysia', 'CNC milling pembiayaan', 'Mazak pembiayaan', 'mesin CNC terpakai'];

// Breadcrumbs
const breadcrumbs = [
  { label: 'Laman Utama', url: '/ms' },
  { label: 'Peralatan', url: '/ms/equipment' },
  { label: 'Pembiayaan Mesin CNC', url: '/ms/equipment/cnc-machine' },
];
---

<BaseLayout title={pageTitle} description={pageDescription} lang={lang} keywords={keywords}>
  <!-- Hero Section -->
  <Hero
    title="Pembiayaan Mesin CNC - Deposit 0%"
    subtitle="Tingkatkan kapasiti pengeluaran dengan mesin CNC moden"
    backgroundImage="/images/hero/cnc-machine.jpg"
    lang={lang}
  />

  <!-- Breadcrumbs -->
  <Breadcrumbs items={breadcrumbs} />

  <!-- Main Content -->
  <section class="section py-16 bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl font-black mb-8 text-[#2D1810] text-center">
          Pembiayaan Mesin CNC Untuk Kilang
        </h2>
        
        <div class="prose prose-lg max-w-none text-gray-700 space-y-6">
          <p>
            <strong>Perlukan mesin CNC untuk meningkatkan pengeluaran?</strong> Kami menawarkan pembiayaan dengan <strong>deposit 0% dan pembiayaan 100%</strong> untuk mesin CNC baharu dan terpakai.
          </p>

          <div class="bg-[#F5F1EB] p-8 rounded-lg border-3 border-[#2D1810] shadow-brutal my-8">
            <h3 class="text-2xl font-bold mb-4 text-[#8B6F47]">Mesin CNC Yang Dibiayai</h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>CNC Lathe</strong> - Untuk kerja turning presisi tinggi</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>CNC Milling</strong> - 3-axis, 4-axis, 5-axis</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>CNC Plasma Cutting</strong> - Untuk pemotongan logam</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>CNC Router</strong> - Untuk kayu dan plastik</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section py-16 bg-[#8B6F47] text-white">
    <div class="container-custom text-center">
      <h2 class="text-4xl font-black mb-4">Mulakan Pembiayaan CNC Anda</h2>
      <p class="text-xl mb-8 opacity-90">Kelulusan pantas untuk kilang dan bengkel</p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <CTAButton
          href={COMPANY_INFO.whatsapp.link}
          text="WhatsApp Kami"
          variant="whatsapp"
          lang={lang}
        />
        <CTAButton
          href={`/${lang}/contact`}
          text="Mohon Sekarang"
          variant="secondary"
          lang={lang}
        />
      </div>
    </div>
  </section>

  <!-- Related Equipment -->
  <RelatedEquipment lang={lang} currentEquipment="cnc-machine" />

  <!-- Contact Form -->
  <ContactForm lang={lang} />
</BaseLayout>