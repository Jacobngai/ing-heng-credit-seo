---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'ms';
const post = {
  title: 'Lori Flatbed 2026 - Pengangkutan Mesin & Equipment',
  slug: 'lori-flatbed-2026-pengangkutan',
  excerpt: 'Dapatkan pembiayaan lori flatbed 2026 - pengangkutan mesin & equipment dengan 0% down payment dari Ing Heng Credit. Kelulusan pantas, tiada had umur peralatan.',
  date: 'undefined',
  author: 'Ing Heng Credit Team',
  readTime: 3,
  category: 'Pembiayaan Lori',
  image: 'undefined'
};

const keywords = [],
  breadcrumbItems = [
  { label: 'Laman Utama', href: '/ms' },
  { label: 'Blog', href: '/ms/blog' },
  { label: post.title, href: `/ms/blog/${post.slug}` }
