    text-decoration: none;
    font-weight: bold;
    display: inline-block;
  }

  .btn-primary {
    background: white;
    color: #cd7f32;
  }

  .btn-secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .contact-info {
    margin-top: 2rem;
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    .hero-section h1 {
      font-size: 1.875rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .requirements-box {
      grid-template-columns: 1fr;
    }

    .process-step {
      flex-direction: column;
      text-align: center;
    }

    .step-number {
      margin: 0 auto;
    }
  }
</style>
