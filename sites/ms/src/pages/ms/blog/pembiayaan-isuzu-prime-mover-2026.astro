    padding: 2rem;
    border-radius: 8px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .requirements-box h3 {
    color: #cd7f32;
    margin-bottom: 1rem;
  }

  .requirements-box ul {
    list-style: none;
    padding: 0;
  }

  .requirements-box li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
  }

  .requirements-box li:before {
    content: "✓";
    position: absolute;
    left: 0;
    color: #cd7f32;
    font-weight: bold;
  }

  .process-timeline {
    display: grid;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .process-step {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 1.5rem;
    background: #f9f9f9;
    border-radius: 8px;
  }

  .step-number {
    background: #cd7f32;
    color: white;
    width: 50px;
    height: 50px;
    border-radius: 50%;
