// Breadcrumbs
const breadcrumbs = [
  { label: '首页', url: '/zh' },
  { label: '设备', url: '/zh/equipment' },
  { label: '压路机融资', url: '/zh/equipment/compactor' },
];

// Benefits
const benefits = [
  { icon: 'road', title: '道路建设专家', description: '专门服务道路建设承包商，了解基础设施项目需求和周期。' },
  { icon: 'percentage', title: '0%押金融资*', description: '符合条件者可获100%融资。保留现金用于其他项目投资。*受条款及条件约束' },
  { icon: 'clock', title: '快速批准', description: '快速处理批准，配合政府项目时间要求。快速决定。' },
  { icon: 'calendar', title: '项目配套期限', description: '12-60个月灵活期限，可配合长期基建项目周期。' },
  { icon: 'shield', title: '政府项目支持', description: '支持政府基建项目融资，包括道路、机场、港口建设。' },
  { icon: 'users', title: '全程技术支持', description: '提供设备选择建议和操作培训支持。' },
];

// Product Schema
const productSchema = generateProductSchema({
  name: '压路机融资马来西亚',
  description: '专业压路机融资，0%押金，支持道路建设项目。永兴信贷基建专业服务。',
  imageUrl: `${SITE_CONFIG.url}/images/compactor-financing.jpg`,
  category: '金融服务 - 设备融资',
  offers: {
    price: '80000',
    currency: 'MYR',
    availability: 'https://schema.org/InStock',
  },
});
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  lang={lang}
  keywords={keywords}
  ogType="website"
