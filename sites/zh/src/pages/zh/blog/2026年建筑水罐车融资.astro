---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'zh';
const post = {
  title: '2026年建筑水罐车融资 - 工地供水洒水方案',
  slug: '2026年建筑水罐车融资',
  excerpt: '2026年建筑水罐车融资方案。0%首付，100%全额贷款，建筑工地供水洒水水罐车融资。',
  date: '2026-01-09',
  author: 'Ing Heng Credit Team',
  readTime: 3,
  category: '专用设备',
  image: '/images/blog/default.jpg'
};

const keywords = ["建筑水罐车","工地供水","洒水车","建筑设备"],
  breadcrumbItems = [
  { label: '首页', href: '/zh' },
  { label: '博客', href: '/zh/blog' },
  { label: post.title, href: `/zh/blog/${post.slug}` }
];
---

<BaseLayout title={post.title} description={post.excerpt} lang={lang} keywords={keywords}>
  <script type="application/ld+json">
