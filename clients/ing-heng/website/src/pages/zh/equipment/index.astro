---
/**
 * Equipment Index Page - Mandarin Chinese
 * Catalog page showcasing all equipment types available for financing
 * SEO: 马来西亚设备融资, 重型设备贷款
 */

import BaseLayout from '../../../layouts/BaseLayout.astro';
import Hero from '../../../components/Hero.astro';
import BenefitCard from '../../../components/BenefitCard.astro';
import StepCard from '../../../components/StepCard.astro';
import ProductCard from '../../../components/ProductCard.astro';
import FAQItem from '../../../components/FAQItem.astro';
import Calculator from '../../../components/Calculator.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import { encodeJSONLD } from '../../../utils/schema';

import { SITE_CONFIG } from '../../../utils/constants';
const lang = 'zh';

// SEO Data
const pageTitle = '马来西亚设备融资 | 挖掘机、卡车、叉车、起重机贷款';
const pageDescription = '融资任何建筑、物流或工业设备。快速快速批准，Industry-Leading批准率，灵活还款。挖掘机、卡车、叉车、起重机等设备贷款。';
const keywords = ['马来西亚设备融资', '重型设备贷款', '建筑设备贷款', '机械融资', '马来西亚设备租赁'];

// Breadcrumbs
const breadcrumbs = [
  { label: '首页', url: '/zh' },
  { label: '设备融资', url: '/zh/equipment' },
];

// Equipment Categories
const equipmentCategories = [
  {
    name: '建筑设备',
    description: '土方、挖掘和建筑工程的重型机械',
    icon: 'construction',
    items: ['挖掘机', '推土机', '起重机', '装载机', '混凝土搅拌机'],
    link: '#construction-equipment'
  },
  {
    name: '物流运输设备',
    description: '货运、物流和配送业务的商用车辆',
    icon: 'truck',
    items: ['商用卡车', '牵引车', '冷藏车', '厢式货车', '油罐车'],
    link: '#logistics-equipment'
  },
  {
    name: '工业仓储设备',
    description: '工厂物料搬运和制造设备',
    icon: 'warehouse',
    items: ['叉车', '数控机床', '托盘车', '输送系统', '工业工具'],
    link: '#industrial-equipment'
  }
];

// Featured Equipment Listings
const featuredEquipment = [
  {
    name: '挖掘机',
    description: '小型到大型挖掘机（1-30吨），适用于建筑、土方和拆除工程。',
    image: '/images/equipment/excavator.jpg',
    priceRange: 'RM 80,000 - RM 800,000',
    monthlyFrom: 2400,
    link: '/zh/equipment/excavator',
    badge: '最受欢迎'
  },
  {
    name: '商用卡车',
    description: '轻型到重型卡车（1-40吨），用于物流、配送和货运业务。',
    image: '/images/equipment/lorry.jpg',
    priceRange: 'RM 50,000 - RM 500,000',
    monthlyFrom: 1500,
    link: '/zh/equipment/lorry',
    badge: '快速批准'
  },
  {
    name: '叉车',
    description: '电动和柴油叉车（1-10吨），用于仓库、工厂和物流操作。',
    image: '/images/equipment/forklift.jpg',
    priceRange: 'RM 30,000 - RM 200,000',
    monthlyFrom: 900,
    link: '/zh/equipment/forklift'
  },
  {
    name: '移动式起重机',
    description: '液压起重机（5-100吨），用于建筑、基础设施和重型起吊工程。',
    image: '/images/equipment/crane.jpg',
    priceRange: 'RM 300,000 - RM 2,000,000',
    monthlyFrom: 9000,
    link: '/zh/equipment/crane'
  },
  {
    name: '牵引车',
    description: '拖车牵引车，用于拖车运输、集装箱运输和长途货运。',
    image: '/images/equipment/prime-mover.jpg',
    priceRange: 'RM 200,000 - RM 600,000',
    monthlyFrom: 6000,
    link: '/zh/equipment/prime-mover'
  },
  {
    name: '推土机',
    description: '履带式推土机，用于清地、平整和重型土方作业。',
    image: '/images/equipment/bulldozer.jpg',
    priceRange: 'RM 150,000 - RM 1,000,000',
    monthlyFrom: 4500,
    link: '/zh/equipment/bulldozer'
  },
  {
    name: '冷藏车',
    description: '冷链物流冷藏车，用于食品配送和温控运输。',
    image: '/images/equipment/reefer-truck.jpg',
    priceRange: 'RM 80,000 - RM 350,000',
    monthlyFrom: 2400,
    link: '/zh/equipment/refrigerated-truck'
  },
  {
    name: '数控机床',
    description: '计算机控制机床，用于精密制造、铣削和工业生产。',
    image: '/images/equipment/cnc-machine.jpg',
    priceRange: 'RM 100,000 - RM 2,000,000',
    monthlyFrom: 3000,
    link: '/zh/equipment/cnc-machinery'
  }
];

// Benefits
const benefits = [
  { icon: 'clock', title: '快速快速批准', description: '紧急设备需求可在快速内获得初步批准。' },
  { icon: 'percentage', title: 'Industry-Leading批准率', description: '行业领先的批准率。我们批准其他机构拒绝的申请。' },
  { icon: 'calendar', title: '灵活12-60月期限', description: '选择符合您业务现金流的还款期限。' },
  { icon: 'shield', title: '所有设备类型', description: '融资任何设备，从挖掘机到数控机床，新旧皆可。' },
  { icon: 'users', title: '低至10%首付', description: '最低前期投资。保留营运资金。' },
  { icon: 'lightning', title: '车队融资', description: '多台设备融资享受折扣利率和简化流程。' },
];

// How It Works Steps
const steps = [
  { stepNumber: 1, icon: 'contact', title: '选择设备', description: '浏览我们的目录或带上您自己的设备供应商。' },
  { stepNumber: 2, icon: 'document', title: '提交申请', description: '5分钟完成在线表格或WhatsApp申请。' },
  { stepNumber: 3, icon: 'check', title: '快速批准', description: '快速初步批准，迅速最终确认。' },
  { stepNumber: 4, icon: 'truck', title: '收到设备', description: '资金直接发放给供应商。立即开始运营。' },
];

// Industries We Serve
const industries = [
  { name: '建筑与土木工程', icon: 'building', equipment: '挖掘机、推土机、起重机、混凝土搅拌机' },
  { name: '物流与运输', icon: 'truck', equipment: '卡车、牵引车、拖车、配送车' },
  { name: '制造与生产', icon: 'factory', equipment: '数控机床、工业工具、生产线' },
  { name: '仓储与配送', icon: 'warehouse', equipment: '叉车、托盘车、物料搬运设备' },
  { name: '农业与种植园', icon: 'leaf', equipment: '拖拉机、收割机、棕油设备' },
  { name: '采矿与采石', icon: 'mountain', equipment: '自卸车、挖掘机、破碎设备' },
];

// FAQs
const faqs = [
  { question: '你们可以融资哪些设备类型？', answer: '我们融资所有类型的商用和工业设备，包括建筑机械（挖掘机、推土机、起重机）、物流车辆（卡车、牵引车、货车）、工业设备（叉车、数控机床、制造工具）和专用设备。只要设备能为您的业务创造收入，我们就可以融资。' },
  { question: '批准需要多长时间？', answer: '初步批准：快速。最终批准：提交完整文件后迅速进行。紧急情况可加急处理，满足关键项目截止日期。' },
  { question: '可以融资二手设备吗？', answer: '可以！我们融资任何信誉良好品牌的10年内二手设备。设备必须处于良好工作状态并通过我们的检查。二手设备通常可获得与新设备相同的利率。' },
  { question: '最低和最高贷款金额是多少？', answer: '最低：RM 30,000。最高：RM 2,000,000，取决于设备类型和您的财务状况。我们可以融资设备价值的90%，首付10%。' },
  { question: '可以融资多台设备吗？', answer: '可以！2台以上设备享受车队融资折扣利率。批量采购文件简化。适合扩展业务的承包商和物流公司。' },
  { question: '如果我有不良信用或贷款违约怎么办？', answer: '我们逐一考虑每个申请。不良信用不意味着自动拒绝。我们关注您当前的业务表现、项目合同和设备价值。Industry-Leading的批准率包括许多有信用问题的客户。' },
  { question: '可以以旧换新吗？', answer: '当然可以！提供以旧换新和升级计划。我们可以为您现有设备再融资，并提供额外资金购买更新/更大的机器。包含免费设备估值服务。' },
  { question: '需要哪些文件？', answer: '个人：身份证、6个月银行对账单、收入证明。公司：SSM注册、公司银行对账单、董事身份证、财务报表（如有）。简单直接的流程。' },
  { question: '你们服务马来西亚所有州吗？', answer: '是的！我们服务所有州：雪兰莪、吉隆坡、柔佛、槟城、霹雳、彭亨、沙巴、砂拉越等。偏远地区申请可通过在线和WhatsApp处理。全国覆盖，本地专业知识。' },
  { question: '提前还款有罚款吗？', answer: '没有提前还款罚款！随时还清贷款无需额外费用。许多客户在12-18个月后业务增长时再融资，获得更好的利率。' },
];

// ItemList Schema for Equipment Categories
const itemListSchema = {
  '@context': 'https://schema.org',
  '@type': 'ItemList',
  name: '设备融资目录',
  description: '马来西亚建筑、物流和工业设备的全面融资选项',
  itemListElement: featuredEquipment.map((equipment, index) => ({
    '@type': 'ListItem',
    position: index + 1,
    item: {
      '@type': 'Product',
      name: equipment.name,
      description: equipment.description,
      image: `${SITE_CONFIG.url}${equipment.image}`,
      offers: {
        '@type': 'Offer',
        priceCurrency: 'MYR',
        price: equipment.monthlyFrom,
        priceSpecification: {
          '@type': 'UnitPriceSpecification',
          price: equipment.monthlyFrom,
          priceCurrency: 'MYR',
          unitText: 'MONTH'
        },
        availability: 'https://schema.org/InStock',
        seller: {
          '@type': 'Organization',
          name: 'Ing Heng Credit & Leasing'
        }
      }
    }
  }))
};

// Service Schema
const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'FinancialService',
  name: '马来西亚设备融资',
  description: '建筑、物流和工业设备的全面融资，快速批准和灵活条款',
  provider: {
    '@type': 'Organization',
    name: 'Ing Heng Credit & Leasing'
  },
  areaServed: {
    '@type': 'Country',
    name: 'Malaysia'
  },
  hasOfferCatalog: {
    '@type': 'OfferCatalog',
    name: '设备融资选项',
    itemListElement: [
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: '建筑设备融资',
          description: '挖掘机、推土机、起重机和重型机械融资'
        }
      },
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: '物流设备融资',
          description: '商用卡车、牵引车、货车和配送车辆'
        }
      },
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: '工业设备融资',
          description: '叉车、数控机床、制造设备和工具'
        }
      }
    ]
  }
};

// FAQ Schema
const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqs.map((faq) => ({
    '@type': 'Question',
    name: faq.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: faq.answer,
    },
  })),
};
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  lang={lang}
  keywords={keywords}
  ogType="website"
>
  <!-- Structured Data -->
  <Fragment slot="head">
    <script type="application/ld+json" set:html={encodeJSONLD(itemListSchema)} />
    <script type="application/ld+json" set:html={encodeJSONLD(serviceSchema)} />
    <script type="application/ld+json" set:html={encodeJSONLD(faqSchema)} />
  </Fragment>

  <!-- Breadcrumbs -->
  <div class="container-custom py-4">
    <Breadcrumbs items={breadcrumbs} lang={lang} />
  </div>

  <!-- Hero Section -->
  <Hero
    title="融资任何设备 - 快速快速批准"
    subtitle="建筑、物流和工业设备 | Industry-Leading批准率 | 灵活12-60月期限 | RM 30,000 - RM 2,000,000"
    ctaText="WhatsApp免费报价"
    ctaLink="https://wa.me/60175700889?text=您好！我想咨询设备融资报价。"
    ctaSecondaryText="致电：017-570 0889"
    ctaSecondaryLink="tel:+60175700889"
    lang={lang}
    trustSignals={['40年经验', 'KPKT持牌', 'Industry-Leading批准率', '快速快速批准']}
  />

  <!-- Equipment Categories Overview -->
  <section class="section bg-[#F5F5DC]">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">
          我们融资的设备类别
        </h2>
        <p class="text-xl text-[#4F3E29]">
          从建筑机械到物流车辆和工业设备
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {equipmentCategories.map((category) => (
          <div class="bg-white p-8 rounded-lg shadow-[6px_6px_0_#2D1810] hover:shadow-[8px_8px_0_#2D1810] transition-shadow">
            <div class="text-4xl mb-4">
              {category.icon === 'construction' && '🏗️'}
              {category.icon === 'truck' && '🚛'}
              {category.icon === 'warehouse' && '🏭'}
            </div>
            <h3 class="text-2xl font-bold text-primary mb-3">{category.name}</h3>
            <p class="text-[#4F3E29] mb-4">{category.description}</p>
            <ul class="space-y-2 mb-6">
              {category.items.map((item) => (
                <li class="text-sm text-[#4F3E29] flex items-center space-x-2">
                  <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
            <a href={category.link} class="text-[#D4A574] font-semibold hover:text-primary transition-colors">
              查看设备 →
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Equipment -->
  <section class="section" id="construction-equipment">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">
          特色融资设备
        </h2>
        <p class="text-xl text-[#4F3E29]">
          热门设备选择，具有竞争力的月付款率
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {featuredEquipment.map((equipment) => (
          <ProductCard
            name={equipment.name}
            description={equipment.description}
            monthlyPayment={equipment.monthlyFrom}
            features={equipment.features}
            link={equipment.link}
            lang={lang}
            image={equipment.image}
            badge={equipment.badge}
          />
        ))}
      </div>

      <!-- Additional Equipment Note -->
      <div class="mt-12 text-center p-6 bg-[#F5F5DC] rounded-lg">
        <h3 class="text-xl font-bold text-primary mb-3">没看到您的设备？</h3>
        <p class="text-[#4F3E29] mb-4">
          我们融资所有类型的商用和工业设备。联系我们获取专用机械、农业设备、采矿工具等的定制报价。
        </p>
        <a
          href="https://wa.me/60175700889?text=您好！我想咨询设备融资。"
          class="btn btn-primary inline-block"
          target="_blank"
          rel="noopener noreferrer"
        >
          联系我们获取定制报价
        </a>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="section bg-[#F5F5DC]">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">
          为什么选择荣兴信贷设备融资？
        </h2>
        <p class="text-xl text-[#4F3E29]">
          快速批准、灵活条款和所有设备类型的竞争利率
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {benefits.map((benefit) => (
          <BenefitCard
            icon={benefit.icon}
            title={benefit.title}
            description={benefit.description}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Payment Calculator -->
  <section class="section bg-[#F5F5DC]">
    <div class="container-custom">
      <div class="text-center mb-8">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">
          计算您的月付款
        </h2>
        <p class="text-xl text-[#4F3E29]">
          看看设备融资对您的业务有多实惠
        </p>
      </div>
      <div class="max-w-3xl mx-auto">
        <Calculator lang={lang} equipmentType="设备" defaultPrice={150000} />
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="section">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">
          设备融资流程
        </h2>
        <p class="text-xl text-[#4F3E29]">
          从申请到设备交付的简单4步流程
        </p>
      </div>

      <div class="grid md:grid-cols-4 gap-8">
        {steps.map((step) => (
          <StepCard
            stepNumber={step.stepNumber}
            icon={step.icon}
            title={step.title}
            description={step.description}
          />
        ))}
      </div>

      <div class="text-center mt-12">
        <a
          href="https://wa.me/60175700889?text=您好！我想申请设备融资。"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-primary btn-lg inline-block"
        >
          立即开始申请
        </a>
      </div>
    </div>
  </section>

  <!-- Industries We Serve -->
  <section class="section bg-[#F5F5DC]" id="logistics-equipment">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">
          我们服务的行业
        </h2>
        <p class="text-xl text-[#4F3E29]">
          每个商业领域的专业融资解决方案
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {industries.map((industry) => (
          <div class="bg-white p-6 rounded-lg shadow-[4px_4px_0_#2D1810] hover:shadow-[6px_6px_0_#2D1810] transition-shadow">
            <div class="text-3xl mb-3">
              {industry.icon === 'building' && '🏗️'}
              {industry.icon === 'truck' && '🚛'}
              {industry.icon === 'factory' && '🏭'}
              {industry.icon === 'warehouse' && '📦'}
              {industry.icon === 'leaf' && '🌾'}
              {industry.icon === 'mountain' && '⛏️'}
            </div>
            <h3 class="text-xl font-bold text-primary mb-2">{industry.name}</h3>
            <p class="text-sm text-[#4F3E29]">{industry.equipment}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Trust Signals & Stats -->
  <section class="section bg-[#8B6F47] text-white" id="industrial-equipment">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          4,000多家马来西亚企业的信赖之选
