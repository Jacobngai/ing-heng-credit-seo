  imageUrl: `${SITE_CONFIG.url}/images/side-loader-financing.jpg`,
  category: '金融服务 - 设备融资',
  offers: {
    price: '250000',
    currency: 'MYR',
    availability: 'https://schema.org/InStock',
  },
});
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  lang={lang}
  keywords={keywords}
  ogType="website"
>
  <!-- Structured Data -->
  <Fragment slot="head">
    <script type="application/ld+json" set:html={encodeJSONLD(productSchema)} />
  </Fragment>

  <!-- Breadcrumbs -->
  <div class="container-custom py-4">
