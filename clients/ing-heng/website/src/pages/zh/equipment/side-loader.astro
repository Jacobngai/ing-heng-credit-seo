// Breadcrumbs
const breadcrumbs = [
  { label: '首页', url: '/zh' },
  { label: '设备', url: '/zh/equipment' },
  { label: '侧装机融资', url: '/zh/equipment/side-loader' },
];

// Benefits
const benefits = [
