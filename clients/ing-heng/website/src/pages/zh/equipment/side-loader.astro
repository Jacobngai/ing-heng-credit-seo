import BenefitCard from '../../../../components/BenefitCard.astro';
import ContactForm from '../../../../components/ContactForm.astro';
import RelatedEquipment from '../../../../components/RelatedEquipment.astro';
import Breadcrumbs from '../../../../components/Breadcrumbs.astro';
import { generateProductSchema, encodeJSONLD } from '../../../../utils/schema';

import { SITE_CONFIG } from '../../../../utils/constants';
const lang = 'zh';

// SEO Data
const pageTitle = '侧装机融资马来西亚 | 0%押金 | 永兴信贷 | 物流设备专家';
