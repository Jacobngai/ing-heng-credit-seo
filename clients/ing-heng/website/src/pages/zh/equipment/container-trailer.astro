/**
 * Container Trailer Financing Landing Page - Mandarin Chinese
 * Target: Logistics companies, port operators, shipping businesses
 * Keywords: 集装箱拖车融资, 货柜车贷款, 物流设备融资
 * Cultural Focus: Port trade, international logistics, business expansion
 */

import BaseLayout from '../../../layouts/BaseLayout.astro';
import Hero from '../../../components/Hero.astro';
import BenefitCard from '../../../components/BenefitCard.astro';
import ContactForm from '../../../components/ContactForm.astro';
import RelatedEquipment from '../../../components/RelatedEquipment.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import { generateProductSchema, encodeJSONLD } from '../../../utils/schema';

import { SITE_CONFIG } from '../../../utils/constants';
const lang = 'zh';

// SEO Data
const pageTitle = '集装箱拖车融资马来西亚 | 0%押金 | 永兴信贷 | 物流专家';
const pageDescription = '专业集装箱拖车融资服务。0%押金，100%融资，支持港口物流业务。永兴信贷40年信誉，物流专业融资。';
const keywords = ['集装箱拖车融资', '货柜车贷款', '物流设备融资', '港口运输融资'];

// Breadcrumbs
const breadcrumbs = [
  { label: '首页', url: '/zh' },
  { label: '设备', url: '/zh/equipment' },
  { label: '集装箱拖车融资', url: '/zh/equipment/container-trailer' },
];

// Benefits
const benefits = [
  { icon: 'truck', title: '物流行业专家', description: '深入了解港口物流运营，专门为集装箱运输业务提供融资支持。' },
  { icon: 'percentage', title: '0%押金融资*', description: '符合条件者可获100%融资。快速扩展车队，抓住更多运输合同。*受条款及条件约束' },
  { icon: 'clock', title: '快速批准', description: '了解物流行业时间敏感性，快速处理审批。24-48小时决定。' },
  { icon: 'calendar', title: '灵活期限', description: '12-84个月还款期，配合长期运输合同安排。' },
  { icon: 'globe', title: '港口业务支持', description: '支持巴生港、槟城港、柔佛港等主要港口的物流业务。' },
  { icon: 'shield', title: '保险配套', description: '协助安排货物运输保险和第三者责任保险。' },
];

// Product Schema
const productSchema = generateProductSchema({
  name: '集装箱拖车融资马来西亚',
  description: '专业集装箱拖车融资，0%押金，支持港口物流业务。永兴信贷物流专家服务。',
  imageUrl: `${SITE_CONFIG.url}/images/container-trailer-financing.jpg`,
  category: '金融服务 - 设备融资',
  offers: {
    price: '120000',
    currency: 'MYR',
    availability: 'https://schema.org/InStock',
  },
});
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  lang={lang}
  keywords={keywords}
  ogType="website"
>
  <!-- Structured Data -->
  <Fragment slot="head">
    <script type="application/ld+json" set:html={encodeJSONLD(productSchema)} />
  </Fragment>

  <!-- Breadcrumbs -->
  <div class="container-custom py-4">
    <Breadcrumbs items={breadcrumbs} lang={lang} />
  </div>

  <!-- Hero Section -->
  <Hero
    title="马来西亚集装箱拖车融资"
    subtitle="0%押金 | 100%融资 | 港口专业 | 永兴信贷物流支持"
    ctaText="WhatsApp免费咨询"
    ctaLink="https://wa.me/60175700889?text=你好！我想了解集装箱拖车融资。"
    ctaSecondaryText="立即致电: 017-570 0889"
    ctaSecondaryLink="tel:+60175700889"
    lang={lang}
    trustSignals={['40年经验', 'KPKT执照', '服务4000+公司', '物流专家']}
  />

  <!-- Main Content Section -->
  <section class="section">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-6">
          集装箱拖车融资专家
        </h2>
        <p class="text-xl text-[#4F3E29] leading-relaxed">
