    ctaLink="https://wa.me/60175700889?text=Hi!%20I%27d%20like%20to%20get%20a%20quote%20for%20self-loader%20truck%20financing."
    ctaSecondaryText="Call Now: 017-570 0889"
    ctaSecondaryLink="tel:+60175700889"
    lang={lang}
    trustSignals={['0% Deposit Option', '40 Years Experience', 'Equipment 10+ Years Old Accepted', 'Business Financing Specialists']}
