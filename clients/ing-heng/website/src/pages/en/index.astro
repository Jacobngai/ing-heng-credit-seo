---
/**
 * English Homepage - Updated with Live Site Hero
 * Equipment Financing Malaysia - Ing Heng Credit & Leasing
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import CTAButton from '../../components/CTAButton';
import { COMPANY_INFO } from '../../utils/constants';

const lang = 'en';
---

<BaseLayout
  title="Equipment Financing Malaysia | Fast Approval | Ing Heng"
  description="Equipment financing with fast approval and competitive rates. Excavators, lorries, forklifts and all business equipment. 40+ years serving Malaysia. WhatsApp for quote."
  lang={lang}
  keywords={[
    'equipment financing Malaysia',
    'excavator financing',
    'lorry financing',
    'forklift financing',
    'construction equipment loan',
    'business loan Malaysia',
    'hire purchase Malaysia',
    'equipment leasing Klang'
  ]}
>
  <!-- Hero Section - Matching Live Site Design -->
  <section class="hero-section relative overflow-hidden bg-gradient-to-br from-accent to-primary-dark min-h-screen flex items-center">
    <!-- Strong dark overlay for maximum text contrast -->
    <div class="absolute inset-0 bg-black/60 z-0"></div>
    <!-- Additional gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-black/30 z-5"></div>

    <div class="container-custom relative z-10">
      <div class="max-w-5xl mx-auto text-center">
        <h1 class="text-6xl md:text-7xl lg:text-8xl font-display uppercase leading-none mb-6 text-white font-black" style="text-shadow: 3px 3px 6px rgba(0,0,0,0.9), 1px 1px 3px rgba(0,0,0,0.8), 0px 0px 10px rgba(0,0,0,0.5);">
          Equipment Financing <span class="text-yellow-400" style="text-shadow: 3px 3px 6px rgba(0,0,0,0.9), 1px 1px 3px rgba(0,0,0,0.8), 0px 0px 10px rgba(0,0,0,0.5);">Made Simple</span>
        </h1>
        <p class="text-xl md:text-2xl text-white mb-8 font-medium leading-relaxed max-w-3xl mx-auto" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.9), 1px 1px 2px rgba(0,0,0,0.8), 0px 0px 8px rgba(0,0,0,0.6);">
          Fast Approval with Malaysia's Most Trusted Equipment Financing Partner Since 1985
        </p>

        <!-- Trust Signals -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12 max-w-4xl mx-auto">
          <div class="bg-black/40 backdrop-blur-sm border-2 border-white/30 p-4">
            <div class="text-3xl md:text-4xl font-display text-yellow-400 mb-1" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">40+</div>
            <div class="text-sm text-white font-semibold" style="text-shadow: 1px 1px 2px rgba(0,0,0,0.8);">Years Experience</div>
          </div>
          <div class="bg-black/40 backdrop-blur-sm border-2 border-white/30 p-4">
            <div class="text-3xl md:text-4xl font-display text-yellow-400 mb-1" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">KPKT</div>
            <div class="text-sm text-white font-semibold" style="text-shadow: 1px 1px 2px rgba(0,0,0,0.8);">Licensed</div>
          </div>
          <div class="bg-black/40 backdrop-blur-sm border-2 border-white/30 p-4">
            <div class="text-3xl md:text-4xl font-display text-yellow-400 mb-1" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">⚡</div>
            <div class="text-sm text-white font-semibold" style="text-shadow: 1px 1px 2px rgba(0,0,0,0.8);">Fast Approval</div>
          </div>
          <div class="bg-black/40 backdrop-blur-sm border-2 border-white/30 p-4">
            <div class="text-3xl md:text-4xl font-display text-yellow-400 mb-1" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">4,000+</div>
            <div class="text-sm text-white font-semibold" style="text-shadow: 1px 1px 2px rgba(0,0,0,0.8);">Companies Served</div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={`/${lang}/contact`} class="bg-white text-[#8B6F47] font-black uppercase tracking-tight text-xl px-12 py-5 border-3 border-[#2D1810] shadow-[6px_6px_0_#2D1810] hover:shadow-[4px_4px_0_#2D1810] hover:translate-x-[2px] hover:translate-y-[2px] hover:bg-[#8B6F47] hover:text-white transition-all inline-block text-center">
            Get Free Quote Now
          </a>
          <a href={COMPANY_INFO.whatsapp.link} class="btn btn-outline-white text-xl px-12 py-5">
            WhatsApp Us
          </a>
        </div>
      </div>
    </div>
    <div class="absolute bottom-0 left-0 right-0 h-2 bg-yellow-400"></div>
  </section>

  <!-- About Preview Section -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="text-center max-w-4xl mx-auto mb-16">
        <div class="inline-block mb-4">
          <span class="text-sm font-display uppercase tracking-wider text-navy-900 px-4 py-2 bg-yellow-400 border-2 border-navy-900">Since 1985</span>
        </div>
        <h2 class="text-5xl md:text-6xl font-display uppercase mb-8 text-navy-900">
          Your Trusted <span class="text-secondary">Financial Partner</span>
        </h2>
        <p class="text-xl text-gray-700 leading-relaxed mb-6">
          Ing Heng Credit & Leasing has been helping entrepreneurs, self-employed professionals,
          and businesses across Malaysia solve their equipment financing challenges for over 40 years.
        </p>
        <p class="text-lg text-gray-600 leading-relaxed">
          As a KPKT-licensed financial company, we specialize in providing fast, affordable, and flexible
          financing solutions for construction equipment, logistics vehicles, and industrial machinery.
        </p>
      </div>

      <!-- Stats Section -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-5xl mx-auto">
        <div class="text-center bg-white border-3 border-navy-900 shadow-brutal-lg p-8 hover:shadow-brutal-xl transition-all hover:-translate-y-1">
          <div class="text-5xl font-display text-secondary mb-3">40+</div>
          <div class="text-gray-700 font-semibold uppercase text-sm tracking-wide">Years Experience</div>
        </div>
        <div class="text-center bg-white border-3 border-navy-900 shadow-brutal-lg p-8 hover:shadow-brutal-xl transition-all hover:-translate-y-1">
          <div class="text-5xl font-display text-secondary mb-3">4,000+</div>
          <div class="text-gray-700 font-semibold uppercase text-sm tracking-wide">Companies Served</div>
        </div>
        <div class="text-center bg-white border-3 border-navy-900 shadow-brutal-lg p-8 hover:shadow-brutal-xl transition-all hover:-translate-y-1">
          <div class="text-5xl font-display text-secondary mb-3">✓</div>
          <div class="text-gray-700 font-semibold uppercase text-sm tracking-wide">High Approval</div>
        </div>
        <div class="text-center bg-white border-3 border-navy-900 shadow-brutal-lg p-8 hover:shadow-brutal-xl transition-all hover:-translate-y-1">
          <div class="text-5xl font-display text-secondary mb-3">⚡</div>
          <div class="text-gray-700 font-semibold uppercase text-sm tracking-wide">Fast Processing</div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero-section {
    font-family: 'Bebas Neue', sans-serif;
  }

  .text-display {
    font-family: 'Bebas Neue', sans-serif;
  }

  .font-display {
    font-family: 'Bebas Neue', sans-serif;
  }

  .text-accent {
    color: #0F172A;
  }

  .text-primary-dark {
    color: #1E3A8A;
  }

  .text-secondary {
    color: #8B6F47;
  }

  .text-navy-900 {
    color: #2D1810;
  }

  .border-navy-900 {
    border-color: #2D1810;
  }

  .shadow-brutal-lg {
    box-shadow: 8px 8px 0 rgba(45, 24, 16, 0.3);
  }

  .shadow-brutal-xl {
    box-shadow: 12px 12px 0 rgba(45, 24, 16, 0.3);
  }

  .hover\:shadow-brutal-xl:hover {
    box-shadow: 8px 8px 0 rgba(45, 24, 16, 0.3);
  }

  .hover\:shadow-brutal-lg:hover {
    box-shadow: 4px 4px 0 rgba(45, 24, 16, 0.3);
  }

  .btn-outline-white {
    display: inline-block;
    background: transparent;
    color: white;
    border: 3px solid white;
    padding: 1rem 2rem;
    font-weight: bold;
    text-decoration: none;
    transition: all 0.3s;
  }

  .btn-outline-white:hover {
    background: white;
    color: #8B6F47;
  }
</style>
