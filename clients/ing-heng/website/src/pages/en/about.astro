---
/**
 * About Us Page - English
 * Professional B2B About page for equipment financing company
 * Target: Business owners, contractors, decision makers
 * Keywords: equipment financing Malaysia, hire purchase financing, licensed financial company
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import BenefitCard from '../../components/BenefitCard.astro';
import CTAButton from '../../components/CTAButton.astro';
import StructuredData from '../../components/StructuredData.astro';
import { generateOrganizationSchema } from '../../utils/schema';
import { COMPANY_INFO } from '../../utils/constants';

const lang = 'en';
const organizationSchema = generateOrganizationSchema();

// SEO Data
const pageTitle = 'About Us - Equipment Financing Malaysia Since 1985 | Ing Heng Credit';
const pageDescription = 'Trusted equipment financing partner since 1985. KPKT licensed, 95% approval rate, 40+ years experience. Serving 4,000+ companies in construction, logistics & manufacturing.';
const keywords = [
  'equipment financing Malaysia',
  'hire purchase financing',
  'licensed financial company Malaysia',
  'equipment leasing Klang',
  'construction equipment financing',
  'KPKT licensed',
  'business financing Malaysia'
];

// Key Milestones
const milestones = [
  { year: '1985', title: 'Founded', description: 'Established in Klang, Selangor to serve local businesses' },
  { year: '1995', title: 'KPKT Licensed', description: 'Received official financial services license from Malaysian government' },
  { year: '2005', title: '1,000 Clients', description: 'Reached milestone of serving 1,000+ businesses across Malaysia' },
  { year: '2015', title: 'Fleet Expansion', description: 'Expanded services to include logistics and transportation equipment' },
  { year: '2020', title: 'Digital Transformation', description: 'Launched online application and WhatsApp services for faster approvals' },
  { year: '2025', title: '40 Years Strong', description: 'Celebrating 40 years of trust with 4,000+ companies financed' },
];

// Core Values
const values = [
  {
    icon: 'shield',
    title: 'Trust & Integrity',
    description: 'We build long-term relationships based on honesty, transparency, and fair dealings. No hidden fees, no surprise charges.'
  },
  {
    icon: 'lightning',
    title: 'Speed & Efficiency',
    description: '24-hour approval process because we understand time is money. Fast processing without compromising quality.'
  },
  {
    icon: 'users',
    title: 'Customer First',
    description: 'Your success is our success. We customize solutions to fit your business needs, not the other way around.'
  },
  {
    icon: 'check-badge',
    title: 'Expertise & Experience',
    description: '40 years of industry knowledge. We understand your challenges and provide solutions that work.'
  }
];

// Team Expertise
const expertise = [
  {
    title: 'Construction Equipment Specialists',
    description: 'Deep understanding of excavators, bulldozers, road rollers, and heavy machinery financing requirements.'
  },
  {
    title: 'Logistics Financing Experts',
    description: 'Specialized knowledge in lorry, truck, and fleet financing for transportation businesses.'
  },
  {
    title: 'Industrial Equipment Advisors',
    description: 'Expert guidance for forklifts, generators, compressors, and warehouse equipment financing.'
  },
  {
    title: 'Credit & Risk Assessment',
    description: 'Fair evaluation process with 95% approval rate. We approve applications others reject.'
  }
];

// Why Choose Us Benefits
const whyChooseUs = [
  { icon: 'clock', title: '24-Hour Approval', description: 'Fast processing with same-day decisions for urgent cases' },
  { icon: 'percentage', title: '95% Approval Rate', description: 'Industry-leading approval rate - we say YES more often' },
  { icon: 'shield', title: 'KPKT Licensed', description: 'Government-approved financial services provider since 1995' },
  { icon: 'calendar', title: 'Flexible Terms 12-60 Months', description: 'Customized payment plans to match your cash flow' },
  { icon: 'users', title: '4,000+ Companies Served', description: 'Trusted by businesses across Malaysia for 40 years' },
  { icon: 'location', title: 'Klang Valley Location', description: 'Convenient location serving KL, Selangor, and nationwide' },
];

// Service Areas
const serviceAreas = [
  'Klang Valley (Klang, Shah Alam, Petaling Jaya)',
  'Kuala Lumpur & Selangor',
  'Johor Bahru & Southern Region',
  'Penang & Northern Region',
  'Kuantan & East Coast',
  'Sabah & Sarawak (East Malaysia)',
  'All Malaysian States',
  'Remote Applications via WhatsApp'
];
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  lang={lang}
  keywords={keywords}
  ogType="website"
>
  <StructuredData schema={organizationSchema} />

  <!-- Hero Section -->
  <Hero
    title="40 Years of Trust in Equipment Financing"
    subtitle="Since 1985, Ing Heng Credit Has Been Malaysia's Trusted Partner for Construction, Logistics & Industrial Equipment Financing"
    ctaText="Get Free Quote Now"
    ctaLink="/en/contact"
    ctaSecondaryText="WhatsApp Us"
    ctaSecondaryLink={COMPANY_INFO.whatsapp.link}
    lang={lang}
    trustSignals={['Established 1985', 'KPKT Licensed', '95% Approval Rate', '4,000+ Companies Financed']}
    backgroundImage="/images/about-hero.jpg"
  />

  <!-- Company Introduction -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-bold text-primary mb-6">
            About Ing Heng Credit & Leasing
          </h2>
          <div class="w-20 h-1 bg-accent mx-auto mb-8"></div>
          <p class="text-xl text-gray-700 leading-relaxed">
            For over <strong>40 years</strong>, Ing Heng Credit & Leasing Sdn Bhd has been helping Malaysian businesses acquire the equipment they need to succeed. From small contractors to large logistics companies, we've financed over <strong>4,000 businesses</strong> across construction, logistics, and manufacturing sectors.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 mb-12">
          <div class="bg-gradient-to-br from-primary/5 to-secondary/5 p-8 rounded-lg">
            <h3 class="text-2xl font-bold text-primary mb-4">Our Mission</h3>
            <p class="text-gray-700 leading-relaxed">
              To empower Malaysian businesses with fast, affordable, and flexible equipment financing solutions that fuel growth and success. We believe every business deserves access to quality equipment, regardless of size or credit history.
            </p>
          </div>

          <div class="bg-gradient-to-br from-secondary/5 to-accent/10 p-8 rounded-lg">
            <h3 class="text-2xl font-bold text-primary mb-4">Our Vision</h3>
            <p class="text-gray-700 leading-relaxed">
              To be Malaysia's most trusted and customer-centric equipment financing partner, known for our speed, flexibility, and unwavering commitment to helping businesses thrive through accessible financial solutions.
            </p>
          </div>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-12">
          <div class="text-center bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow">
            <div class="text-5xl font-bold text-primary mb-2">40+</div>
            <div class="text-gray-600 font-medium">Years Experience</div>
          </div>
          <div class="text-center bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow">
            <div class="text-5xl font-bold text-primary mb-2">4,000+</div>
            <div class="text-gray-600 font-medium">Companies Financed</div>
          </div>
          <div class="text-center bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow">
            <div class="text-5xl font-bold text-primary mb-2">95%</div>
            <div class="text-gray-600 font-medium">Approval Rate</div>
          </div>
          <div class="text-center bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow">
            <div class="text-5xl font-bold text-primary mb-2">24h</div>
            <div class="text-gray-600 font-medium">Fast Approval</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Company History & Milestones -->
  <section class="section bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">
          Our Journey: 40 Years of Excellence
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          From a local Klang financial service to a nationwide trusted partner
        </p>
      </div>

      <div class="max-w-5xl mx-auto">
        <div class="space-y-8">
          {milestones.map((milestone, index) => (
            <div class="flex gap-6 items-start">
              <div class="flex-shrink-0 w-24 text-right">
                <div class="text-3xl font-bold text-primary">{milestone.year}</div>
              </div>
              <div class="flex-shrink-0 w-1 bg-accent rounded-full"></div>
              <div class="flex-1 bg-white p-6 rounded-lg shadow-md">
                <h3 class="text-xl font-bold text-primary mb-2">{milestone.title}</h3>
                <p class="text-gray-700">{milestone.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">
          Why Choose Ing Heng Credit?
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          We're not just a financing company - we're your business growth partner
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        {whyChooseUs.map((benefit) => (
          <BenefitCard
            icon={benefit.icon}
            title={benefit.title}
            description={benefit.description}
          />
        ))}
      </div>

      <!-- Additional Highlights -->
      <div class="max-w-4xl mx-auto bg-gradient-to-r from-primary to-secondary text-white p-8 rounded-lg">
        <h3 class="text-2xl font-bold mb-6 text-center">What Makes Us Different?</h3>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <ul class="space-y-3">
              <li class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-accent flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>We approve applications banks reject</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-accent flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Low 10% down payment requirements</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-accent flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Finance used equipment up to 10 years old</span>
              </li>
            </ul>
          </div>
          <div>
            <ul class="space-y-3">
              <li class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-accent flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Seasonal payment plans for contractors</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-accent flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Multilingual service (English, Mandarin, Malay)</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-accent flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>No early repayment penalties</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Core Values -->
  <section class="section bg-gradient-to-br from-primary/5 to-secondary/5">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">
          Our Core Values
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          The principles that guide every decision we make
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {values.map((value) => (
          <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow text-center">
            <BenefitCard
              icon={value.icon}
              title={value.title}
              description={value.description}
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Team Expertise -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">
          Our Team & Expertise
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Industry specialists who understand your business needs
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        {expertise.map((expert) => (
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-lg shadow-md border-l-4 border-primary">
            <h3 class="text-xl font-bold text-primary mb-3">{expert.title}</h3>
            <p class="text-gray-700 leading-relaxed">{expert.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Licenses & Certifications -->
  <section class="section bg-gray-50">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">
            Licenses & Certifications
          </h2>
          <p class="text-xl text-gray-600">
            Fully licensed and regulated for your protection
          </p>
        </div>

        <div class="bg-white p-8 rounded-lg shadow-lg">
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-bold text-primary mb-4">KPKT Licensed Financial Company</h3>
              <p class="text-gray-700 mb-4">
                Ing Heng Credit & Leasing Sdn Bhd is licensed by the Ministry of Housing and Local Government (KPKT) to provide financial services in Malaysia.
              </p>
              <ul class="space-y-2 text-gray-700">
                <li class="flex items-start space-x-2">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span>Licensed since 1995</span>
                </li>
                <li class="flex items-start space-x-2">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span>Full regulatory compliance</span>
                </li>
                <li class="flex items-start space-x-2">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span>Regular government audits</span>
                </li>
              </ul>
            </div>

            <div>
              <h3 class="text-xl font-bold text-primary mb-4">Industry Memberships</h3>
              <ul class="space-y-2 text-gray-700">
                <li class="flex items-start space-x-2">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span>Malaysian Financial Services Association</span>
                </li>
                <li class="flex items-start space-x-2">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span>Selangor Business Chamber</span>
                </li>
                <li class="flex items-start space-x-2">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span>Equipment Leasing Association of Malaysia</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">
          Service Areas Across Malaysia
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Headquartered in Klang, serving businesses nationwide
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-2 gap-4 mb-8">
          {serviceAreas.map((area) => (
            <div class="flex items-center space-x-3 bg-gray-50 p-4 rounded-lg">
              <svg class="w-6 h-6 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700 font-medium">{area}</span>
            </div>
          ))}
        </div>

        <div class="bg-blue-50 border-l-4 border-primary p-6 rounded-lg">
          <h3 class="font-bold text-primary mb-2">Our Klang Office</h3>
          <p class="text-gray-700 mb-3">
            <strong>Address:</strong> {COMPANY_INFO.address.full}
          </p>
          <p class="text-gray-700 mb-3">
            <strong>Phone:</strong> <a href={`tel:${COMPANY_INFO.phone.international}`} class="text-primary hover:underline">{COMPANY_INFO.phone.display}</a> / {COMPANY_INFO.phone.office}
          </p>
          <p class="text-gray-700 mb-3">
            <strong>WhatsApp:</strong> <a href={COMPANY_INFO.whatsapp.link} class="text-primary hover:underline">{COMPANY_INFO.phone.display}</a>
          </p>
          <p class="text-gray-700 mb-4">
            <strong>Email:</strong> <a href={`mailto:${COMPANY_INFO.email}`} class="text-primary hover:underline">{COMPANY_INFO.email}</a>
          </p>
          <a
            href={COMPANY_INFO.address.googleMapsUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center text-primary font-medium hover:underline"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            Get Directions on Google Maps
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="section bg-gradient-to-r from-primary to-secondary text-white">
    <div class="container-custom text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        Ready to Partner with Malaysia's Most Trusted Equipment Financing Company?
      </h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto opacity-90">
        Join 4,000+ businesses who trust Ing Heng Credit for fast approvals, competitive rates, and exceptional service. Get your free quote today.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <CTAButton
          text="Get Free Quote on WhatsApp"
          link={COMPANY_INFO.whatsapp.link}
          variant="accent"
          size="large"
          icon="whatsapp"
        />
        <CTAButton
          text="View Our Services"
          link="/en/services"
          variant="outline-white"
          size="large"
        />
      </div>
      <div class="mt-8 text-sm opacity-80">
        <p>Or call us directly: <a href={`tel:${COMPANY_INFO.phone.international}`} class="underline hover:text-accent">{COMPANY_INFO.phone.display}</a></p>
      </div>
    </div>
  </section>
</BaseLayout>
