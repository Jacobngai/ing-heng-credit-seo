---
/**
 * Services Overview Page - English
 * Complete financing solutions for all your equipment needs
 */

import BaseLayout from '../../../layouts/BaseLayout.astro';
import Hero from '../../../components/Hero.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import ContactForm from '../../../components/ContactForm.astro';
import CTAButton from '../../../components/CTAButton.astro';
import StructuredData from '../../../components/StructuredData.astro';
import { generateOrganizationSchema } from '../../../utils/schema';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'en';

// SEO Configuration
const title = 'Our Services - Equipment Financing Solutions | Ing Heng Credit';
const description = 'Complete financing solutions for all your equipment needs. Hire purchase financing, business loans, and insurance services. 95% approval rate, fast 24-hour processing. Get your free quote today!';
const keywords = [
  'equipment financing services',
  'hire purchase Malaysia',
  'business loan services',
  'equipment insurance',
  'financing solutions Malaysia',
  'Ing Heng Credit services',
  'construction equipment financing',
  'logistics equipment loan'
];

// Breadcrumbs
const breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Services', href: '/en/services' }
];

const organizationSchema = generateOrganizationSchema();
---

<BaseLayout
  title={title}
  description={description}
  lang={lang}
  keywords={keywords}
>
