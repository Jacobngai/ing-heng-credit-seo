        </div>
      </div>
    </div>
  </section>

  <!-- Quick Comparison Section -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-black text-navy-900 mb-4" style="font-family: 'Bebas Neue', sans-serif; text-transform: uppercase;">
          Quick Comparison: Hire Purchase vs Operating Lease
        </h2>
        <p class="text-gray-600 text-lg">
          Key differences at a glance for logistics business owners
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {keyComparison.map((item) => (
          <div class="card-brutalist p-6">
            <div class="text-5xl mb-4 text-center">{item.icon}</div>
            <h3 class="text-lg font-black text-navy-900 mb-3 text-center">{item.title}</h3>
