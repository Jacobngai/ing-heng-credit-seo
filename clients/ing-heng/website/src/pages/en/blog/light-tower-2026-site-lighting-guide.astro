---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../../components/Breadcrumbs.astro';
import CTAButton from '../../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../../utils/constants';

const lang = 'en';
const post = {
  title: 'Light Tower 2026 - Construction Site Lighting Guide',
  slug: 'light-tower-2026-site-lighting-guide',
  excerpt: '2026 light tower financing guide. Construction site lighting for night work. 0% down payment, fast approval.',
  date: '2026-01-14',
  author: 'Ing Heng Credit Team',
  readTime: 5,
  category: 'Equipment Guide',
  image: '/images/blog/generator-financing.jpg'
};

const keywords = ['light tower financing', 'site lighting malaysia', 'construction lighting 2026', '0% down payment'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
