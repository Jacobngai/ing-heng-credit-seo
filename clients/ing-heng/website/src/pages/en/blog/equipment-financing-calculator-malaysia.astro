                <p class="text-2xl font-bold text-primary">{example.monthlyPayment}</p>
              </div>

              <div class="grid grid-cols-2 gap-4 text-xs">
                <div>
                  <p class="text-stone-600">Total Interest</p>
                  <p class="font-semibold">{example.totalInterest}</p>
                </div>
                <div>
                  <p class="text-stone-600">Total Payable</p>
                  <p class="font-semibold">{example.totalPayable}</p>
                </div>
              </div>
            </div>
          </div>
