  title: 'VNA Truck 2026: Narrow Aisle Warehouse Guide',
  slug: 'vna-truck-2026-narrow-aisle',
  excerpt: 'VNA truck financing guide 2026. 0% down payment, 100% full loan. Narrow aisle warehouse equipment Malaysia. Bank vs our rates.',
  date: '2026-01-11',
  author: 'Ing Heng Credit Team',
  readTime: 6,
  category: 'Warehouse Equipment',
  image: '/images/blog/forklift-financing.jpg'
};

const keywords = ['vna truck', 'narrow aisle', 'warehouse equipment', '0% down payment', 'vna financing'];
const breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
