---

<BaseLayout
  title={meta.title}
  description={meta.description}
  lang={lang}
  keywords={[
    'JPJ lorry rules',
    'PUSPAKOM inspection',
    'commercial lorry compliance',
    'lorry licensing requirements',
    'PUSPAKOM 6-month inspection',
    'lorry brake test Malaysia',
    'JPJ license renewal lorry',
    'commercial vehicle financing Malaysia'
  ]}
>
  <!-- Schema Markup -->
  <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />

  <!-- Breadcrumbs -->
  <section class="bg-gray-50 border-b border-gray-200">
