---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'en';
const post = {
  title: 'Warehouse Equipment 0% Deposit 2026: Full Loan Guide',
  slug: 'warehouse-equipment-0-percent-deposit-2026',
  excerpt: 'Warehouse equipment 0% deposit financing 2026. 100% full loan, no down payment. All warehouse equipment Malaysia. Bank rates 4.6-6.0% vs our rates.',
  date: '2026-01-11',
  author: 'Ing Heng Credit Team',
  readTime: 6,
  category: 'Warehouse Equipment',
  image: '/images/blog/forklift-financing.jpg'
};

const keywords = ['warehouse equipment', '0% deposit', '100% full loan', 'warehouse financing', 'no down payment'];
const breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
