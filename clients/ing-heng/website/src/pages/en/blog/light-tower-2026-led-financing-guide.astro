---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../../components/Breadcrumbs.astro';
import CTAButton from '../../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../../utils/constants';

const lang = 'en';
const post = {
  title: 'Light Tower 2026 - LED Site Lighting Financing Guide',
  slug: 'light-tower-2026-led-financing-guide',
  excerpt: '2026 LED light tower financing guide. Energy efficient site lighting. 0% down payment, fast approval.',
  date: '2026-01-14',
  author: 'Ing Heng Credit Team',
  readTime: 5,
  category: 'Equipment Guide',
  image: '/images/blog/generator-financing.jpg'
};

const keywords = ['led light tower financing', 'led site lighting malaysia', 'led tower 2026', '0% down payment'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
