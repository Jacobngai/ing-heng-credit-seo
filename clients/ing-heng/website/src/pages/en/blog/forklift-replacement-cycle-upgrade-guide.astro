  slug: 'forklift-replacement-cycle-upgrade-guide',
  excerpt: 'Your forklift fleet is aging. Repair costs are rising. But is it time to replace or continue maintaining? Learn the optimal replacement cycle for maximum ROI and when new financing makes sense.',
  date: '2025-01-23',
  author: 'Ing Heng Credit Team',
  readTime: 8,
  category: 'Forklift Financing',
  image: '/images/blog/forklift-financing.jpg'
};

const keywords = ['forklift replacement', 'equipment upgrade', 'maintenance costs', '0% down payment', 'ROI calculation'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
];
---

<BaseLayout title={post.title} description={post.excerpt} lang={lang} keywords={keywords}>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": post.title,
      "description": post.excerpt,
      "datePublished": post.date,
