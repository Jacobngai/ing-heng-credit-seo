---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'en';
const post = {
  title: 'Power Support Equipment 2026 - Complete Support Equipment Financing',
  slug: 'power-support-equipment-2026-complete-guide',
  excerpt: '2026 power support equipment financing guide. Complete backup and support equipment. 0% down payment, fast approval.',
  date: '2026-01-14',
  author: 'Ing Heng Credit Team',
  readTime: 5,
  category: 'Equipment Package',
  image: '/images/blog/generator-financing.jpg'
};

const keywords = ['power support equipment financing', 'backup equipment malaysia', 'support equipment 2026', '0% down payment'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
