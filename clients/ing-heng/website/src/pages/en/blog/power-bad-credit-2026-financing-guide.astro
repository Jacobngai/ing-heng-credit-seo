      <table style="width: 100%; border-collapse: collapse; margin: 1.5rem 0;">
        <thead>
          <tr style="background: #2D1810; color: #fff;">
            <th style="padding: 1rem; text-align: left; border: 1px solid #D4A574;">Feature</th>
            <th style="padding: 1rem; text-align: left; border: 1px solid #D4A574;">Bank</th>
            <th style="padding: 1rem; text-align: left; border: 1px solid #D4A574;">Ing Heng Credit</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td style="padding: 1rem; border: 1px solid #D4A574;">Credit Check</td>
            <td style="padding: 1rem; border: 1px solid #D4A574;">Strict CTOS required</td>
            <td style="padding: 1rem; border: 1px solid #D4A574;"><strong>Flexible consideration</strong></td>
          </tr>
          <tr style="background: #F5F0E8;">
            <td style="padding: 1rem; border: 1px solid #D4A574;">Bad Credit</td>
            <td style="padding: 1rem; border: 1px solid #D4A574;">Usually rejected</td>
            <td style="padding: 1rem; border: 1px solid #D4A574;"><strong>Often approved</strong></td>
          </tr>
          <tr>
            <td style="padding: 1rem; border: 1px solid #D4A574;">Down Payment</td>
            <td style="padding: 1rem; border: 1px solid #D4A574;">20% - 30% if approved</td>
            <td style="padding: 1rem; border: 1px solid #D4A574;"><strong>0%</strong></td>
          </tr>
          <tr style="background: #F5F0E8;">
            <td style="padding: 1rem; border: 1px solid #D4A574;">Collateral</td>
            <td style="padding: 1rem; border: 1px solid #D4A574;">Required</td>
            <td style="padding: 1rem; border: 1px solid #D4A574;"><strong>Not required</strong></td>
          </tr>
          <tr>
