---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../../components/Breadcrumbs.astro';
import CTAButton from '../../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../../utils/constants';

const lang = 'en';
const post = {
  title: 'CNY Construction Continuity 2026',
  slug: 'cny-construction-continuity-2026',
  excerpt: 'CNY Construction Continuity 2026. Get 0% down payment equipment financing in Malaysia.',
  date: '2026-01-05',
  author: 'Ing Heng Credit Team',
  readTime: 3,
  category: 'CNY Special',
  image: '/images/blog/cny-construction-continuity-2026.jpg'
};

const keywords = ["cny-special","equipment-financing","0-down-payment"],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
];
---

<BaseLayout title={post.title} description={post.excerpt} lang={lang} keywords={keywords}>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": post.title,
      "description": post.excerpt,
      "datePublished": post.date,
      "author": { "@type": "Organization", "name": post.author },
      "publisher": {
        "@type": "Organization",
        "name": "Ing Heng Credit & Leasing Sdn Bhd",
        "logo": {
          "@type": "ImageObject",
          "url": "https://inghengcredit.com/logo.png"
        }
      }
    }
  </script>

  <Breadcrumbs items={breadcrumbItems} />

  <article class="max-w-4xl mx-auto px-4 py-12">
    <header class="mb-8">
      <span class="text-sm font-semibold" style="color: #D4A574;">CNY Special</span>
      <h1 class="text-4xl font-bold mt-2" style="color: #2D1810; font-family: 'Bebas Neue', sans-serif; text-transform: uppercase;">{post.title}</h1>
      <p class="text-gray-600 mt-4">{post.excerpt}</p>
      <div class="flex items-center gap-4 text-sm text-gray-500 mt-4">
        <span>{post.author}</span>
        <span>•</span>
        <time>{new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
        <span>•</span>
        <span>{post.readTime} min read</span>
      </div>
    </header>

    <div class="prose prose-lg max-w-none">
<div class="max-w-4xl mx-auto px-4 py-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-6">CNY Construction Continuity 2026</h1>

      <p class="text-xl text-gray-700 mb-8 leading-relaxed">
        Keep your construction projects running during Chinese New Year 2026. We offer 0% down payment equipment financing so you don't have to wait.
      </p>

      <!-- Quick Stats -->
      <div class="bg-amber-50 border-l-4 border-amber-500 p-6 mb-8">
        <h2 class="text-2xl font-bold text-amber-800 mb-4">Why Construction Continues During CNY</h2>
        <ul class="space-y-2 text-gray-700">
          <li>• No holiday delays with fast approval</li>
          <li>• 0% down payment - start immediately</li>
          <li>• 100% full loan available</li>
          <li>• No age limit on equipment</li>
          <li>• Work continues while competitors wait</li>
        </ul>
      </div>

      <!-- Comparison Table -->
      <div class="overflow-x-auto mb-8">
        <table class="w-full bg-white shadow-lg rounded-lg overflow-hidden">
          <thead class="bg-gray-800 text-white">
            <tr>
              <th class="px-6 py-3 text-left">Feature</th>
              <th class="px-6 py-3 text-center">Banks</th>
              <th class="px-6 py-3 text-center">Us</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b">
              <td class="px-6 py-4 font-medium">Down Payment</td>
              <td class="px-6 py-4 text-center text-red-600">10-20%</td>
              <td class="px-6 py-4 text-center text-green-600 font-bold">0%</td>
            </tr>
            <tr class="border-b">
              <td class="px-6 py-4 font-medium">Financing Amount</td>
              <td class="px-6 py-4 text-center text-red-600">90%</td>
              <td class="px-6 py-4 text-center text-green-600 font-bold">100%</td>
            </tr>
            <tr class="border-b">
              <td class="px-6 py-4 font-medium">Equipment Age Limit</td>
              <td class="px-6 py-4 text-center text-red-600">5 years max</td>
              <td class="px-6 py-4 text-center text-green-600 font-bold">NO limit</td>
            </tr>
            <tr class="border-b">
              <td class="px-6 py-4 font-medium">Interest Rate</td>
              <td class="px-6 py-4 text-center">4.6-6.0%</td>
              <td class="px-6 py-4 text-center text-green-600 font-bold">Competitive</td>
            </tr>
            <tr>
              <td class="px-6 py-4 font-medium">CNY Approval</td>
              <td class="px-6 py-4 text-center text-red-600">Delays</td>
              <td class="px-6 py-4 text-center text-green-600 font-bold">Fast</td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- Benefits Section -->
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Benefits of CNY Construction Financing</h2>
      <div class="grid md:grid-cols-2 gap-6 mb-8">
        <div class="bg-white p-6 rounded-lg shadow">
          <h3 class="text-xl font-bold text-gray-900 mb-3">No Holiday Delay</h3>
          <p class="text-gray-700">Get approved before CNY 2026. Your equipment is ready when you need it. No waiting until banks reopen.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow">
          <h3 class="text-xl font-bold text-gray-900 mb-3">Zero Down Payment</h3>
          <p class="text-gray-700">Keep your cash for operations. Start with 0% down and 100% financing on all construction equipment.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow">
          <h3 class="text-xl font-bold text-gray-900 mb-3">No Age Limit</h3>
          <p class="text-gray-700">Finance any equipment regardless of age. Unlike banks that reject equipment over 5 years old.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow">
          <h3 class="text-xl font-bold text-gray-900 mb-3">Full Loan Coverage</h3>
          <p class="text-gray-700">Get 100% financing. Banks only give 90% but we cover the full equipment cost.</p>
        </div>
      </div>

      <!-- Equipment List -->
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Equipment Available for CNY 2026</h2>
      <div class="bg-white p-6 rounded-lg shadow mb-8">
        <ul class="grid md:grid-cols-2 gap-3 text-gray-700">
          <li>✓ Excavators - All sizes</li>
          <li>✓ Backhoe Loaders</li>
          <li>✓ Wheel Loaders</li>
          <li>✓ Skid Steers</li>
          <li>✓ Telehandlers</li>
          <li>✓ Rollers & Compactors</li>
          <li>✓ Pavers</li>
          <li>✓ Graders</li>
          <li>✓ Scrapers</li>
          <li>✓ Concrete Mixers</li>
          <li>✓ Concrete Pumps</li>
          <li>✓ Cranes</li>
          <li>✓ All construction equipment</li>
        </ul>
      </div>

      <!-- CTA Section -->
      <div class="bg-blue-900 text-white p-8 rounded-lg mb-8">
        <h2 class="text-2xl font-bold mb-4">Ready for CNY 2026?</h2>
        <p class="mb-6">Don't let Chinese New Year slow down your construction projects. Get approved today with 0% down payment.</p>
        <a href="/calculator" class="inline-block bg-amber-500 hover:bg-amber-600 text-gray-900 font-bold py-3 px-8 rounded-lg transition">
          Calculate Your Payment
        </a>
      </div>

      <!-- Calculator Section -->
      
    </div>
    </div>

    <div class="mt-12 text-center">
      <CTAButton href="/en/contact">Apply for Equipment Financing</CTAButton>
    </div>
  </article>
</BaseLayout>