---
/**
 * Dynamic Blog Post: Equipment Financing by Location
 * URL: /en/blog/location/selangor/excavator
 * Multi-tag: Equipment + Location
 */

import BaseLayout from '../../../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../../../components/Breadcrumbs.astro';
import CTAButton from '../../../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../../../utils/constants';
import { generateFAQSchema } from '../../../../../utils/schema';
import {
  getLocationTags,
  getEquipmentTags,
  getLocationTagBySlug,
  getEquipmentTagBySlug,
  getTagName,
  buildBlogPostUrl,
  type Locale
} from '../../../../../utils/blog-tags';

const lang: Locale = 'en';

// Generate static paths for all location+equipment combinations
export function getStaticPaths() {
  const locations = getLocationTags();
  const equipment = getEquipmentTags();
  const paths = [];

  for (const loc of locations) {
    for (const equip of equipment) {
      paths.push({
        params: {
          location: loc.slug.en,
          equipment: equip.slug.en
        },
        props: {
          locationId: loc.id,
          equipmentId: equip.id
        }
      });
    }
  }

  return paths;
}

const { location, equipment } = Astro.params;
const { locationId, equipmentId } = Astro.props;

// Get tag data
const locationTag = getLocationTagBySlug(location as string, lang);
const equipmentTag = getEquipmentTagBySlug(equipment as string, lang);

if (!locationTag || !equipmentTag) {
  return Astro.redirect('/en/blog');
}

const locationName = getTagName(locationTag, lang);
const equipmentName = getTagName(equipmentTag, lang);

// Equipment-specific data
const equipmentData: Record<string, { priceRange: string; tenure: string; downPayment: string; uses: string[] }> = {
  'excavator': {
    priceRange: 'RM 150,000 - RM 800,000',
    tenure: 'Up to 7 years',
    downPayment: '0% available',
    uses: ['Construction', 'Mining', 'Land Clearing', 'Foundation Work']
  },
  'forklift': {
    priceRange: 'RM 50,000 - RM 300,000',
    tenure: 'Up to 5 years',
    downPayment: '0% available',
    uses: ['Warehousing', 'Manufacturing', 'Logistics', 'Retail']
  },
  'lorry': {
    priceRange: 'RM 80,000 - RM 500,000',
    tenure: 'Up to 7 years',
    downPayment: '0% available',
    uses: ['Logistics', 'Construction', 'Agriculture', 'Retail Delivery']
  },
  'prime-mover': {
    priceRange: 'RM 200,000 - RM 600,000',
    tenure: 'Up to 7 years',
    downPayment: '0% available',
    uses: ['Port Haulage', 'Long-distance Transport', 'Heavy Cargo', 'Container Transport']
  },
  'crane': {
    priceRange: 'RM 300,000 - RM 2,000,000',
    tenure: 'Up to 7 years',
    downPayment: '0% available',
    uses: ['Construction', 'Port Operations', 'Heavy Lifting', 'Infrastructure']
  },
  'bulldozer': {
    priceRange: 'RM 400,000 - RM 1,500,000',
    tenure: 'Up to 7 years',
    downPayment: '0% available',
    uses: ['Land Clearing', 'Mining', 'Road Construction', 'Site Preparation']
  },
  'backhoe': {
    priceRange: 'RM 150,000 - RM 500,000',
    tenure: 'Up to 7 years',
    downPayment: '0% available',
    uses: ['Excavation', 'Trenching', 'Landscaping', 'Utility Work']
  },
  'wheel-loader': {
    priceRange: 'RM 200,000 - RM 800,000',
    tenure: 'Up to 7 years',
    downPayment: '0% available',
    uses: ['Material Handling', 'Mining', 'Construction', 'Quarry Operations']
  },
  'road-roller': {
    priceRange: 'RM 100,000 - RM 400,000',
    tenure: 'Up to 5 years',
    downPayment: '0% available',
    uses: ['Road Construction', 'Paving', 'Compaction', 'Infrastructure']
  }
};

const equipInfo = equipmentData[equipmentTag.id] || {
  priceRange: 'RM 100,000 - RM 500,000',
  tenure: 'Up to 7 years',
  downPayment: '0% available',
  uses: ['Construction', 'Manufacturing', 'Logistics']
};

// Location-specific additions
const locationIndustries: Record<string, string[]> = {
  'selangor': ['Construction', 'Manufacturing', 'Logistics', 'Industrial'],
  'kuala-lumpur': ['Commercial Construction', 'Property', 'Infrastructure'],
  'johor': ['Port Operations', 'Manufacturing', 'Property Development'],
  'penang': ['Electronics', 'Manufacturing', 'Tourism'],
  'perak': ['Mining', 'Agriculture', 'Manufacturing']
};

const industries = locationIndustries[locationTag.id] || ['Construction', 'Manufacturing', 'Logistics'];

// FAQs
const faqs = [
  {
    question: `How do I apply for ${equipmentName.toLowerCase()} financing in ${locationName}?`,
    answer: `Applying for ${equipmentName.toLowerCase()} financing in ${locationName} is simple with Ing Heng Credit. You need: Company registration documents (SSM), 3 months bank statements, IC copy of directors. WhatsApp us your documents and get approval within 24 hours.`
  },
  {
    question: `What is the interest rate for ${equipmentName.toLowerCase()} financing in ${locationName}?`,
    answer: `Our ${equipmentName.toLowerCase()} financing rates in ${locationName} start from 2.88% p.a. flat rate. Final rate depends on your company profile, credit history, and the ${equipmentName.toLowerCase()} model. Contact us for a personalized quote.`
  },
  {
    question: `Can new companies get ${equipmentName.toLowerCase()} financing in ${locationName}?`,
    answer: `Yes! We finance new companies (less than 2 years old) for ${equipmentName.toLowerCase()}s in ${locationName}. Requirements may include higher down payment or personal guarantee, but we work to find solutions for all eligible businesses.`
  },
  {
    question: `Is there 0% down payment for ${equipmentName.toLowerCase()} in ${locationName}?`,
    answer: `Yes, 0% down payment is available for qualified applicants in ${locationName}. Eligibility depends on your company's credit profile and the ${equipmentName.toLowerCase()} value. Many of our ${locationName} clients have successfully obtained 0% down payment financing.`
  },
  {
    question: `How long does ${equipmentName.toLowerCase()} financing approval take in ${locationName}?`,
    answer: `For ${locationName} applicants, we provide approval within 24 hours for complete applications. Document submission via WhatsApp speeds up the process. Full disbursement typically occurs within 3-5 business days after approval.`
  }
];

// Breadcrumbs
const breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: 'By Location', href: '/en/blog/location' },
  { label: locationName, href: `/en/blog/location/${location}` },
  { label: equipmentName, href: `/en/blog/location/${location}/${equipment}` }
];

// Schema markup
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": `${equipmentName} Financing in ${locationName}: Complete Guide`,
  "description": `Learn how to finance a ${equipmentName.toLowerCase()} in ${locationName}. Requirements, rates, approval process, and expert tips from 40+ years of experience.`,
  "author": {
    "@type": "Organization",
    "name": "Ing Heng Credit & Leasing Sdn Bhd"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Ing Heng Credit & Leasing Sdn Bhd",
    "logo": {
      "@type": "ImageObject",
      "url": "https://www.inghengcredit.com/logo.png"
    }
  },
  "datePublished": "2025-01-22",
  "dateModified": "2025-01-22",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://www.inghengcredit.com/en/blog/location/${location}/${equipment}`
  }
};

// Current date for article
const articleDate = new Date().toISOString().split('T')[0];
---

<BaseLayout
  title={`${equipmentName} Financing in ${locationName} | Complete Guide | Ing Heng Credit`}
  description={`Complete guide to ${equipmentName.toLowerCase()} financing in ${locationName}. Learn about requirements, rates from 2.88% p.a., 0% down payment options, and get approved in 24 hours.`}
  lang={lang}
  keywords={[
    `${equipmentName.toLowerCase()} financing ${locationName}`,
    `${equipmentName.toLowerCase()} loan ${locationName}`,
    `finance ${equipmentName.toLowerCase()} ${locationName}`,
    `${locationName} ${equipmentName.toLowerCase()} hire purchase`,
    `heavy equipment financing ${locationName}`,
    `construction equipment loan ${locationName}`
  ]}
>
  <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(generateFAQSchema(faqs))} />

  <!-- Breadcrumbs -->
  <section class="bg-gray-50 border-b border-gray-200">
    <div class="container-custom">
      <Breadcrumbs items={breadcrumbItems} />
    </div>
  </section>

  <!-- Article Header -->
  <section class="section bg-navy-900">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <!-- Tags -->
        <div class="flex flex-wrap gap-2 mb-6">
          <a href={`/en/blog/location/${location}`} class="badge-brutalist text-xs hover:bg-yellow-300 transition-colors">
            {locationName}
          </a>
          <a href={`/en/blog/equipment/${equipment}`} class="badge-brutalist bg-white text-xs hover:bg-yellow-100 transition-colors">
            {equipmentName}
          </a>
          <span class="badge-brutalist bg-green-400 text-xs">Financing Guide</span>
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-black text-white mb-6 leading-tight" style="font-family: 'Bebas Neue', sans-serif; text-transform: uppercase;">
          {equipmentName} Financing in <span class="text-yellow-400">{locationName}</span>: Complete Guide
        </h1>

        <p class="text-xl text-gray-300 mb-8 leading-relaxed">
          Everything you need to know about financing a {equipmentName.toLowerCase()} in {locationName}. From requirements to approval, get expert guidance backed by 40+ years of industry experience.
        </p>

        <!-- Article Meta -->
        <div class="flex flex-wrap items-center gap-6 text-gray-400 text-sm border-t border-white/20 pt-6">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
            </svg>
            <span>Updated {new Date(articleDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
            </svg>
            <span>8 min read</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
            </svg>
            <span>By Ing Heng Credit Team</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Stats Bar -->
  <section class="bg-yellow-400 border-y-4 border-navy-900">
    <div class="container-custom py-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
        <div>
          <div class="text-2xl font-black text-navy-900" style="font-family: 'Bebas Neue', sans-serif;">
            {equipInfo.priceRange}
          </div>
          <div class="text-sm font-bold text-navy-900/70">Price Range</div>
        </div>
        <div>
          <div class="text-2xl font-black text-navy-900" style="font-family: 'Bebas Neue', sans-serif;">
            From 2.88% p.a.
          </div>
          <div class="text-sm font-bold text-navy-900/70">Interest Rate</div>
        </div>
        <div>
          <div class="text-2xl font-black text-navy-900" style="font-family: 'Bebas Neue', sans-serif;">
            {equipInfo.tenure}
          </div>
          <div class="text-sm font-bold text-navy-900/70">Tenure</div>
        </div>
        <div>
          <div class="text-2xl font-black text-navy-900" style="font-family: 'Bebas Neue', sans-serif;">
            {equipInfo.downPayment}
          </div>
          <div class="text-sm font-bold text-navy-900/70">Down Payment</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Article Content -->
  <article class="section bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2 prose prose-lg max-w-none">

          <h2 class="text-3xl font-black text-navy-900" style="font-family: 'Bebas Neue', sans-serif; text-transform: uppercase;">
            Why Finance a {equipmentName} in {locationName}?
          </h2>

          <p>
            {locationName} is one of Malaysia's most active regions for {industries.slice(0, 2).join(' and ').toLowerCase()} businesses.
            Whether you're expanding operations or starting a new project, having the right equipment is crucial for success.
          </p>

          <p>
            A {equipmentName.toLowerCase()} is an essential piece of equipment for businesses in {locationName} involved in:
          </p>

          <ul>
            {equipInfo.uses.map((use) => (
              <li><strong>{use}</strong> - High demand in {locationName} area</li>
            ))}
          </ul>

          <p>
            With Ing Heng Credit, you can get your {equipmentName.toLowerCase()} financed with rates starting from <strong>2.88% p.a.</strong>,
            tenure up to <strong>{equipInfo.tenure}</strong>, and <strong>0% down payment</strong> options for qualified applicants.
          </p>

          <h2 class="text-3xl font-black text-navy-900 mt-12" style="font-family: 'Bebas Neue', sans-serif; text-transform: uppercase;">
            {equipmentName} Financing Requirements in {locationName}
          </h2>

          <p>To apply for {equipmentName.toLowerCase()} financing in {locationName}, you'll need:</p>

          <div class="bg-gray-50 border-4 border-navy-900 p-6 my-6" style="box-shadow: 6px 6px 0 #1E3A8A;">
            <h3 class="text-xl font-black text-navy-900 mb-4" style="font-family: 'Bebas Neue', sans-serif;">
              Required Documents
            </h3>
            <ul class="space-y-2 text-gray-700">
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
