                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span>Serving {locationName}</span>
                </li>
              </ul>
              <CTAButton
                text="WhatsApp Us Now"
                link={COMPANY_INFO.whatsapp.link}
                variant="accent"
                size="large"
                icon="whatsapp"
                fullWidth={true}
              />
              <p class="text-center text-sm text-gray-400 mt-4">
                Or call: <a href={`tel:${COMPANY_INFO.phone.international}`} class="text-yellow-400 hover:underline">{COMPANY_INFO.phone.display}</a>
              </p>
            </div>

            <!-- Other Equipment in this Location -->
            <div class="bg-white border-4 border-navy-900 p-6" style="box-shadow: 6px 6px 0 #1E3A8A;">
              <h3 class="text-lg font-black text-navy-900 mb-4" style="font-family: 'Bebas Neue', sans-serif; text-transform: uppercase;">
                Other Equipment in {locationName}
              </h3>
              <ul class="space-y-2">
                {getEquipmentTags().filter(e => e.id !== equipmentTag.id).slice(0, 5).map((equip) => (
                  <li>
                    <a
                      href={buildBlogPostUrl(lang, locationTag.id, equip.id)}
                      class="flex items-center justify-between py-2 text-gray-700 hover:text-yellow-600 transition-colors border-b border-gray-200 last:border-0"
                    >
                      <span class="font-medium">{getTagName(equip, lang)}</span>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  </li>
                ))}
              </ul>
              <a href={`/en/blog/location/${location}`} class="block text-center mt-4 text-yellow-600 font-bold hover:underline">
                View All Equipment →
              </a>
            </div>

            <!-- Other Locations for this Equipment -->
            <div class="bg-gray-50 border-4 border-navy-900 p-6" style="box-shadow: 6px 6px 0 #1E3A8A;">
              <h3 class="text-lg font-black text-navy-900 mb-4" style="font-family: 'Bebas Neue', sans-serif; text-transform: uppercase;">
                {equipmentName} in Other Locations
              </h3>
              <div class="flex flex-wrap gap-2">
