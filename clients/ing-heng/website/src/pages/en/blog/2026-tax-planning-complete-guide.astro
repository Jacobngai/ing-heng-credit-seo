import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'en';
const post = {
  title: '2026 Tax Planning Complete Guide: Equipment Purchase Strategies',
  slug: '2026-tax-planning-complete-guide',
  excerpt: 'Plan your 2026 equipment purchases for maximum tax benefits. Learn capital allowance, timing strategies, and how 0% down payment helps your cash flow.',
  date: '2026-01-22',
  author: 'Ing Heng Credit Team',
  readTime: 7,
  category: 'Tax Planning',
  image: '/images/blog/tax-planning.jpg'
};

const keywords = ['2026 tax planning', 'equipment financing', 'capital allowance', '0% down payment'],
  breadcrumbItems = [
  { label: 'Home', href: '/en' },
  { label: 'Blog', href: '/en/blog' },
  { label: post.title, href: `/en/blog/${post.slug}` }
