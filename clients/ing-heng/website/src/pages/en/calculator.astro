---
/**
 * Calculator Page - English
 * Interactive payment calculator for equipment financing
 * Target: Business owners, contractors, decision makers researching financing options
 * Keywords: equipment financing calculator, payment calculator Malaysia, hire purchase calculator
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import Calculator from '../../components/Calculator.astro';
import BenefitCard from '../../components/BenefitCard.astro';
import CTAButton from '../../components/CTAButton.astro';
import StructuredData from '../../components/StructuredData.astro';
import { generateOrganizationSchema } from '../../utils/schema';
import { COMPANY_INFO } from '../../utils/constants';

const lang = 'en';

// SEO Data
const pageTitle = 'Equipment Financing Calculator - Instant Payment Estimates | Ing Heng Credit';
const pageDescription = 'Calculate your equipment financing payments instantly. Free online calculator for excavators, lorries, forklifts & more. Get accurate monthly payment estimates with flexible terms from 12-60 months.';
const keywords = [
  'equipment financing calculator Malaysia',
  'payment calculator hire purchase',
  'equipment loan calculator',
  'excavator financing calculator',
  'lorry financing calculator',
  'forklift payment calculator',
  'construction equipment calculator',
  'monthly payment estimator'
];

// Schema for the page
const schema = generateOrganizationSchema();

// Calculator Benefits
const benefits = [
  {
    icon: 'calculator',
    title: 'Instant Estimates',
    description: 'Get accurate monthly payment calculations in real-time as you adjust your financing parameters'
  },
  {
    icon: 'chart-bar',
    title: 'Transparent Pricing',
    description: 'See the full breakdown of your payments, interest rates, and total costs with no hidden fees'
  },
  {
    icon: 'adjustments',
    title: 'Flexible Options',
    description: 'Customize down payment (10-50%) and loan terms (12-60 months) to match your budget'
  },
  {
    icon: 'lightning',
    title: 'Fast Approval',
    description: 'Once you find the right plan, apply via WhatsApp and get approved quickly'
  }
];

// Quick Tips
const tips = [
  {
    title: 'Optimize Your Down Payment',
    description: 'A higher down payment (20-30%) reduces monthly payments and total interest paid. However, our low 10% minimum ensures accessibility for most businesses.'
  },
  {
    title: 'Choose the Right Term',
    description: 'Shorter terms (12-24 months) save on total interest but have higher monthly payments. Longer terms (48-60 months) offer lower monthly payments but higher total costs.'
  },
  {
    title: 'Consider Cash Flow',
    description: 'Match your loan term to your equipment\'s revenue-generating cycle. Construction equipment with seasonal work may benefit from flexible payment arrangements.'
  },
  {
    title: 'Tax Benefits',
    description: 'Equipment financing offers tax deductions on interest payments and potential capital allowances. Consult your accountant to maximize benefits.'
  }
];

// Popular Equipment Examples
const equipmentExamples = [
  {
    name: 'Excavator (Komatsu PC200)',
    price: 250000,
    link: '/en/equipment/excavator'
  },
  {
    name: 'Commercial Lorry (3-Ton)',
    price: 120000,
    link: '/en/equipment/lorry'
  },
  {
    name: 'Forklift (2.5-Ton)',
    price: 80000,
    link: '/en/equipment/forklift'
  },
  {
    name: 'Prime Mover (Volvo)',
    price: 350000,
    link: '/en/equipment/prime-mover'
  }
];
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  lang={lang}
  keywords={keywords}
  ogType="website"
>
  <StructuredData schema={schema} />

  <!-- Hero Section with Bold Industrial Style -->
  <section class="relative bg-gradient-to-br from-blue-900 via-blue-800 to-blue-600 text-white overflow-hidden">
    <!-- Industrial Pattern Background -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 35px, rgba(255,255,255,.1) 35px, rgba(255,255,255,.1) 70px);"></div>
    </div>

    <div class="container-custom relative z-10 py-16 md:py-24">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Bold Uppercase Headline (Bebas Neue style) -->
        <h1 class="text-5xl md:text-7xl font-extrabold uppercase tracking-wider mb-6" style="font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.05em;">
          <span class="text-white">Equipment Financing</span><br/>
          <span class="text-yellow-400">Payment Calculator</span>
        </h1>

        <!-- Industrial Divider -->
        <div class="flex items-center justify-center gap-4 mb-6">
          <div class="h-1 w-20 bg-yellow-400"></div>
          <div class="h-2 w-2 bg-yellow-400 rotate-45"></div>
          <div class="h-1 w-20 bg-yellow-400"></div>
        </div>

        <p class="text-xl md:text-2xl text-white leading-relaxed mb-8">
          Calculate your monthly payments instantly. Customize your financing plan.<br/>
          <strong class="text-yellow-400">Get accurate estimates in seconds.</strong>
        </p>

        <!-- Trust Signals with Industrial Badge Style -->
        <div class="flex flex-wrap justify-center gap-4 mb-8">
          <div class="bg-blue-950/50 border-2 border-yellow-400 px-6 py-3 backdrop-blur-sm">
            <div class="text-yellow-400 font-bold text-sm uppercase tracking-wider">KPKT Licensed</div>
          </div>
          <div class="bg-blue-950/50 border-2 border-yellow-400 px-6 py-3 backdrop-blur-sm">
            <div class="text-yellow-400 font-bold text-sm uppercase tracking-wider">95% Approval</div>
          </div>
          <div class="bg-blue-950/50 border-2 border-yellow-400 px-6 py-3 backdrop-blur-sm">
            <div class="text-yellow-400 font-bold text-sm uppercase tracking-wider">Fast Processing</div>
          </div>
          <div class="bg-blue-950/50 border-2 border-yellow-400 px-6 py-3 backdrop-blur-sm">
            <div class="text-yellow-400 font-bold text-sm uppercase tracking-wider">40+ Years</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Angled Bottom Edge -->
    <div class="absolute bottom-0 left-0 right-0 h-16 bg-white" style="clip-path: polygon(0 100%, 100% 100%, 100% 0);"></div>
  </section>

  <!-- Calculator Section -->
  <section class="section bg-gray-50 -mt-8 relative z-20">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <!-- Calculator Card with Industrial Border Style -->
        <div class="bg-white rounded-lg shadow-2xl border-8 border-blue-900 relative">
          <!-- Yellow Corner Accent -->
          <div class="absolute top-0 left-0 w-20 h-20 bg-yellow-400 clip-triangle"></div>
          <div class="absolute bottom-0 right-0 w-20 h-20 bg-yellow-400 clip-triangle-br"></div>

          <div class="p-8 md:p-12">
            <Calculator lang={lang} />
          </div>
        </div>

        <!-- Quick Equipment Examples -->
        <div class="mt-12">
          <h3 class="text-2xl font-bold text-center mb-6 text-gray-900" style="font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.05em;">
            Popular Equipment Financing Examples
          </h3>
          <div class="grid md:grid-cols-2 gap-4">
            {equipmentExamples.map((equipment) => (
              <a
                href={equipment.link}
                class="bg-white p-6 rounded-lg border-4 border-blue-900 hover:border-yellow-400 transition-all hover:shadow-xl group"
              >
                <div class="flex justify-between items-center">
                  <div>
                    <div class="font-bold text-lg text-gray-900 group-hover:text-blue-900">{equipment.name}</div>
                    <div class="text-sm text-gray-600">Typical Price Range</div>
                  </div>
                  <div class="text-right">
                    <div class="text-2xl font-bold text-blue-900" style="font-family: 'Bebas Neue', sans-serif;">
                      RM {equipment.price.toLocaleString()}
                    </div>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold text-blue-900 mb-4" style="font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.05em;">
          Why Use Our Calculator?
        </h2>
        <div class="flex items-center justify-center gap-4 mb-6">
          <div class="h-1 w-20 bg-yellow-400"></div>
          <div class="h-2 w-2 bg-yellow-400 rotate-45"></div>
          <div class="h-1 w-20 bg-yellow-400"></div>
        </div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Make informed financing decisions with our transparent, easy-to-use calculator
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-6xl mx-auto">
        {benefits.map((benefit) => (
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-lg border-4 border-blue-900 hover:border-yellow-400 transition-all">
            <BenefitCard
              icon={benefit.icon}
              title={benefit.title}
              description={benefit.description}
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Tips & Best Practices -->
  <section class="section bg-gradient-to-br from-blue-50 to-yellow-50">
    <div class="container-custom">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-bold text-blue-900 mb-4" style="font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.05em;">
            Smart Financing Tips
          </h2>
          <div class="flex items-center justify-center gap-4 mb-6">
            <div class="h-1 w-20 bg-yellow-400"></div>
            <div class="h-2 w-2 bg-yellow-400 rotate-45"></div>
            <div class="h-1 w-20 bg-yellow-400"></div>
          </div>
          <p class="text-xl text-gray-600">
            Expert advice to maximize your equipment financing benefits
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          {tips.map((tip, index) => (
            <div class="bg-white p-8 rounded-lg border-l-8 border-blue-900 shadow-lg hover:shadow-xl transition-shadow">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-yellow-400 flex items-center justify-center font-bold text-2xl text-blue-900" style="font-family: 'Bebas Neue', sans-serif;">
                  {index + 1}
                </div>
                <div>
                  <h3 class="text-xl font-bold text-blue-900 mb-3">{tip.title}</h3>
                  <p class="text-gray-700 leading-relaxed">{tip.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-bold text-blue-900 mb-4" style="font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.05em;">
            From Calculator to Approval
          </h2>
          <div class="flex items-center justify-center gap-4 mb-6">
            <div class="h-1 w-20 bg-yellow-400"></div>
            <div class="h-2 w-2 bg-yellow-400 rotate-45"></div>
            <div class="h-1 w-20 bg-yellow-400"></div>
          </div>
          <p class="text-xl text-gray-600">
            Four simple steps to get your equipment financed
          </p>
        </div>

        <div class="relative">
          <!-- Connection Line -->
          <div class="hidden md:block absolute top-24 left-0 right-0 h-1 bg-blue-200" style="top: 4rem;"></div>

          <div class="grid md:grid-cols-4 gap-8 relative">
            <div class="text-center">
              <div class="w-24 h-24 bg-blue-900 text-yellow-400 rounded-full flex items-center justify-center mx-auto mb-4 text-4xl font-bold border-8 border-white shadow-xl" style="font-family: 'Bebas Neue', sans-serif;">
                1
              </div>
              <h3 class="text-xl font-bold text-blue-900 mb-2">Calculate</h3>
              <p class="text-gray-600">Use our calculator to estimate monthly payments</p>
            </div>

            <div class="text-center">
              <div class="w-24 h-24 bg-blue-900 text-yellow-400 rounded-full flex items-center justify-center mx-auto mb-4 text-4xl font-bold border-8 border-white shadow-xl" style="font-family: 'Bebas Neue', sans-serif;">
                2
              </div>
              <h3 class="text-xl font-bold text-blue-900 mb-2">Apply</h3>
              <p class="text-gray-600">Submit via WhatsApp with minimal documentation</p>
            </div>

            <div class="text-center">
              <div class="w-24 h-24 bg-blue-900 text-yellow-400 rounded-full flex items-center justify-center mx-auto mb-4 text-4xl font-bold border-8 border-white shadow-xl" style="font-family: 'Bebas Neue', sans-serif;">
                3
              </div>
              <h3 class="text-xl font-bold text-blue-900 mb-2">Get Approved</h3>
              <p class="text-gray-600">Receive decision quickly</p>
            </div>

            <div class="text-center">
              <div class="w-24 h-24 bg-yellow-400 text-blue-900 rounded-full flex items-center justify-center mx-auto mb-4 text-4xl font-bold border-8 border-white shadow-xl" style="font-family: 'Bebas Neue', sans-serif;">
                4
              </div>
              <h3 class="text-xl font-bold text-blue-900 mb-2">Get Equipment</h3>
              <p class="text-gray-600">Start using your equipment immediately</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="section bg-gradient-to-br from-blue-900 via-blue-800 to-blue-600 text-white relative overflow-hidden">
    <!-- Industrial Pattern Background -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 35px, rgba(255,255,255,.1) 35px, rgba(255,255,255,.1) 70px);"></div>
    </div>

    <div class="container-custom relative z-10 text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 uppercase" style="font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.05em;">
        Ready to Finance Your Equipment?
      </h2>
      <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto text-white">
        Found the perfect payment plan? Apply now via WhatsApp and get<br/>
        <strong class="text-yellow-400">approved quickly</strong> with our 95% approval rate.
      </p>

      <div class="flex flex-col sm:flex-row gap-6 justify-center mb-8">
        <a
          href={COMPANY_INFO.whatsapp.link}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center gap-3 bg-yellow-400 hover:bg-yellow-300 text-blue-900 font-bold px-10 py-5 text-xl uppercase transition-all shadow-xl hover:shadow-2xl border-4 border-blue-900"
          style="font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.05em;"
        >
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          Apply via WhatsApp
        </a>

        <a
          href="/en/contact"
          class="inline-flex items-center justify-center gap-3 bg-transparent hover:bg-white/10 text-white font-bold px-10 py-5 text-xl uppercase transition-all border-4 border-yellow-400 hover:border-white"
          style="font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.05em;"
        >
          Contact Us
        </a>
      </div>

      <div class="flex flex-wrap justify-center gap-8 text-sm">
        <div class="flex items-center gap-2">
          <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>Fast Approval</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>95% Approval Rate</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>KPKT Licensed</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>40+ Years Experience</span>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .clip-triangle {
    clip-path: polygon(0 0, 100% 0, 0 100%);
  }

  .clip-triangle-br {
    clip-path: polygon(100% 0, 100% 100%, 0 100%);
  }
</style>
