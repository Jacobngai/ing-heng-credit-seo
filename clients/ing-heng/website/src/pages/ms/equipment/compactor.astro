---
/**
 * Compactor Financing Landing Page - Malay
 * Sasaran: Kontraktor jalan, syarikat pembinaan, pengusaha landskap
 */

import BaseLayout from '../../../../layouts/BaseLayout.astro';
import Hero from '../../../../components/Hero.astro';
import ContactForm from '../../../../components/ContactForm.astro';
import Breadcrumbs from '../../../../components/Breadcrumbs.astro';
import RelatedEquipment from '../../../../components/RelatedEquipment.astro';
import CTAButton from '../../../../components/CTAButton.astro';
import { SITE_CONFIG, COMPANY_INFO } from '../../../../utils/constants';

const lang = 'ms';

// SEO Data
const pageTitle = 'Pembiayaan Compactor Malaysia - Deposit 0% | Road Roller, Vibratory';
const pageDescription = 'Pembiayaan compactor dan road roller dengan deposit 0%. Vibratory compactor, steel drum roller, pneumatic roller. Kelulusan pantas untuk kontraktor.';
const keywords = ['pembiayaan compactor Malaysia', 'road roller loan', 'vibratory compactor pembiayaan', 'steel drum roller', 'pneumatic compactor'];

// Breadcrumbs
const breadcrumbs = [
  { label: 'Laman Utama', url: '/ms' },
  { label: 'Peralatan', url: '/ms/equipment' },
  { label: 'Pembiayaan Compactor', url: '/ms/equipment/compactor' },
];
---

<BaseLayout title={pageTitle} description={pageDescription} lang={lang} keywords={keywords}>
  <!-- Hero Section -->
  <Hero
    title="Pembiayaan Compactor - Deposit 0%"
    subtitle="Road roller, vibratory compactor dengan pembiayaan 100%"
    backgroundImage="/images/hero/compactor.jpg"
    lang={lang}
  />

  <!-- Breadcrumbs -->
  <Breadcrumbs items={breadcrumbs} />

  <!-- Main Content -->
  <section class="section py-16 bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl font-black mb-8 text-[#2D1810] text-center">
          Miliki Compactor Untuk Projek Jalan Raya
        </h2>
        
        <div class="prose prose-lg max-w-none text-gray-700 space-y-6">
          <p>
            <strong>Kontraktor jalan memerlukan compactor untuk kerja pemadatan.</strong> Kami menawarkan pembiayaan compactor dan road roller dengan <strong>deposit 0% dan pembiayaan sehingga 100%</strong> nilai peralatan.
          </p>
          
          <p>
            Vibratory compactor, steel drum roller, pneumatic roller - semua jenis compactor untuk projek jalan raya, landskap dan pembinaan asas.
          </p>

          <div class="bg-[#F5F1EB] p-8 rounded-lg border-3 border-[#2D1810] shadow-brutal my-8">
            <h3 class="text-2xl font-bold mb-4 text-[#8B6F47]">Jenis Compactor Yang Dibiayai</h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Vibratory Compactor</strong> - Untuk pemadatan tanah dan aspal</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Steel Drum Roller</strong> - Smooth drum untuk kerja aspal</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Pneumatic Roller</strong> - Tayar getah untuk finishing aspal</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Sheep Foot Compactor</strong> - Untuk pemadatan tanah liat</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section py-16 bg-[#8B6F47] text-white">
    <div class="container-custom text-center">
      <h2 class="text-4xl font-black mb-4">Dapatkan Compactor Anda</h2>
      <p class="text-xl mb-8 opacity-90">Pembiayaan pantas untuk peralatan pemadatan</p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <CTAButton
          href={COMPANY_INFO.whatsapp.link}
          text="WhatsApp Kami"
          variant="whatsapp"
          lang={lang}
        />
        <CTAButton
          href={`/${lang}/contact`}
          text="Mohon Sekarang"
          variant="secondary"
          lang={lang}
        />
      </div>
    </div>
  </section>

  <!-- Related Equipment -->
  <RelatedEquipment lang={lang} currentEquipment="compactor" />

  <!-- Contact Form -->
  <ContactForm lang={lang} />
</BaseLayout>