---
/**
 * Sand Mixer Financing Landing Page - Malay
 * Sasaran: Kontraktor concrete, ready mix plant, precast manufacturers
 */

import BaseLayout from '../../../layouts/BaseLayout.astro';
import Hero from '../../../components/Hero.astro';
import ContactForm from '../../../components/ContactForm.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import RelatedEquipment from '../../../components/RelatedEquipment.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { SITE_CONFIG, COMPANY_INFO } from '../../../utils/constants';

const lang = 'ms';

// SEO Data
const pageTitle = 'Pembiayaan Sand Mixer Malaysia - Deposit 0% | Concrete Mixer, Ready Mix';
const pageDescription = 'Pembiayaan sand mixer dan concrete mixing equipment dengan deposit 0%. Pan mixer, twin shaft mixer, ready mix plant. Kelulusan untuk concrete contractors.';
const keywords = ['pembiayaan sand mixer', 'concrete mixer Malaysia', 'ready mix plant loan', 'pan mixer financing', 'twin shaft mixer'];

// Breadcrumbs
const breadcrumbs = [
  { label: 'Laman Utama', url: '/ms' },
  { label: 'Peralatan', url: '/ms/equipment' },
  { label: 'Pembiayaan Sand Mixer', url: '/ms/equipment/sand-mixer' },
];
---

<BaseLayout title={pageTitle} description={pageDescription} lang={lang} keywords={keywords}>
  <!-- Hero Section -->
  <Hero
    title="Pembiayaan Sand Mixer - Deposit 0%"
    subtitle="Concrete mixer, ready mix plant dengan pembiayaan 100%"
    backgroundImage="/images/hero/sand-mixer.jpg"
    lang={lang}
  />

  <!-- Breadcrumbs -->
  <Breadcrumbs items={breadcrumbs} />

  <!-- Main Content -->
  <section class="section py-16 bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl font-black mb-8 text-[#2D1810] text-center">
          Sand Mixer Untuk Concrete Production
        </h2>
        
        <div class="prose prose-lg max-w-none text-gray-700 space-y-6">
          <p>
            <strong>Perlukan sand mixer untuk pengeluaran concrete atau ready mix?</strong> Kami menawarkan pembiayaan sand mixer dengan <strong>deposit 0% dan pembiayaan sehingga 100%</strong> nilai peralatan.
          </p>
          
          <p>
            Pan mixer, twin shaft mixer, planetary mixer untuk pelbagai keperluan concrete production. Dari portable mixer hingga ready mix plant lengkap.
          </p>

          <div class="bg-[#F5F1EB] p-8 rounded-lg border-3 border-[#2D1810] shadow-brutal my-8">
            <h3 class="text-2xl font-bold mb-4 text-[#8B6F47]">Jenis Sand & Concrete Mixer</h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Pan Mixer</strong> - Intensive mixing untuk high quality concrete</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Twin Shaft Mixer</strong> - High capacity untuk ready mix plant</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Portable Mixer</strong> - Mobile unit untuk site mixing</span>
              </li>
              <li class="flex items-start">
                <span class="text-[#8B6F47] mr-3">✓</span>
                <span><strong>Planetary Mixer</strong> - Untuk precast dan specialty concrete</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section py-16 bg-[#8B6F47] text-white">
    <div class="container-custom text-center">
      <h2 class="text-4xl font-black mb-4">Tingkatkan Concrete Production</h2>
      <p class="text-xl mb-8 opacity-90">Mixing equipment untuk kontraktor concrete</p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <CTAButton
          href={COMPANY_INFO.whatsapp.link}
          text="WhatsApp Kami"
          variant="whatsapp"
          lang={lang}
        />
        <CTAButton
          href={`/${lang}/contact`}
          text="Mohon Sekarang"
          variant="secondary"
          lang={lang}
        />
      </div>
    </div>
  </section>

  <!-- Related Equipment -->
  <RelatedEquipment lang={lang} currentEquipment="sand-mixer" />

  <!-- Contact Form -->
  <ContactForm lang={lang} />
</BaseLayout>