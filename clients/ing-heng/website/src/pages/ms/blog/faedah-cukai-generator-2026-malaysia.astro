---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'ms';
const post = {
  title: 'Faedah Cukai Generator 2026 Malaysia - Penjana untuk Perniagaan',
  slug: 'faedah-cukai-generator-2026-malaysia',
  excerpt: 'Pembiayaan generator untuk perniagaan tawarkan faedah cukai besar 2026. Capital allowance 40%, potongan faedah, insurans. Bank hanya tawarkan 90% dengan deposit. Ing Heng tawarkan 0% deposit, 100% pinjaman untuk generator baharu dan terpakai.',
  date: '2026-01-02',
  author: 'Pasukan Ing Heng Credit',
  readTime: 6,
  category: 'Pembiayaan Peralatan',
  image: '/images/blog/generator-financing.jpg'
};

const keywords = ['faedah cukai generator', 'pembiayaan generator', 'penjana diesel', 'capital allowance', 'kuasa backup'];
const breadcrumbItems = [
  { label: 'Utama', href: '/ms' },
  { label: 'Blog', href: '/ms/blog' },
  { label: post.title, href: `/ms/blog/${post.slug}` }
