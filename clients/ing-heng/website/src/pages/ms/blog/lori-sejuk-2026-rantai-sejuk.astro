---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'ms';
const post = {
  title: 'Lori Sejuk 2026 - Rantai Sejuk & Food Transport',
  slug: 'lori-sejuk-2026-rantai-sejuk',
  excerpt: 'Dapatkan pembiayaan lori sejuk 2026 - rantai sejuk & food transport dengan 0% down payment dari Ing Heng Credit. Kelulusan 24-48 jam, tiada had umur peralatan.',
  date: 'undefined',
  author: 'Ing Heng Credit Team',
  readTime: 3,
  category: 'Pembiayaan Lori',
  image: 'undefined'
};

const keywords = [],
  breadcrumbItems = [
  { label: 'Laman Utama', href: '/ms' },
  { label: 'Blog', href: '/ms/blog' },
  { label: post.title, href: `/ms/blog/${post.slug}` }
