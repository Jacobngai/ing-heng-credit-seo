  date: '2026-01-02',
  author: 'Pasukan Ing Heng Credit',
  readTime: 6,
  category: 'Pembiayaan Armada',
  image: '/images/blog/fleet-financing.jpg'
};

const keywords = ['pembiayaan armada', '10 unit armada', 'kontraktor besar', 'pembiayaan pukal', 'armada berat'];
