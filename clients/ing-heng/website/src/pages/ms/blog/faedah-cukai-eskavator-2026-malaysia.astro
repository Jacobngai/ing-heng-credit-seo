---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../../components/Breadcrumbs.astro';
import CTAButton from '../../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../../utils/constants';

const lang = 'ms';
const post = {
  title: 'Faedah Cukai Eskavator 2026 Malaysia - Potongan Kontraktor',
  slug: 'faedah-cukai-eskavator-2026-malaysia',
  excerpt: 'Pembiayaan eskavator tawarkan faedah cukai besar untuk kontraktor Malaysia 2026. Capital allowance 40% tahun pertama, 20% tahun seterusnya. Bank hanya tawarkan 90% dengan deposit. Ing Heng tawarkan 0% deposit, 100% pinjaman untuk faedah cukai maksimum.',
  date: '2026-01-02',
  author: 'Pasukan Ing Heng Credit',
  readTime: 7,
  category: 'Pembiayaan Jentera',
  image: '/images/blog/excavator-financing.jpg'
};

const keywords = ['faedah cukai eskavator', 'potongan cukai', 'pembiayaan eskavator', 'capital allowance', 'kontraktor'];
const breadcrumbItems = [
  { label: 'Utama', href: '/ms' },
  { label: 'Blog', href: '/ms/blog' },
  { label: post.title, href: `/ms/blog/${post.slug}` }
