---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../../components/Breadcrumbs.astro';
import CTAButton from '../../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../../utils/constants';

const lang = 'ms';
const post = {
  title: 'Kecemasan 2026 - Pembiayaan Pantas 24 Jam Peralatan',
  slug: 'kecemasan-2026-pembiayaan-pantas',
  excerpt: 'Pembiayaan kecemasan peralatan Malaysia 2026. Kelulusan 24 jam untuk projek mendesak. Bank hanya tawarkan 90% dengan 2-4 minggu. Ing Heng tawarkan 0% deposit, 100% pinjaman dalam 24-48 jam untuk situasi kecemasan.',
  date: '2026-01-02',
  author: 'Pasukan Ing Heng Credit',
  readTime: 6,
  category: 'Pembiayaan Kecemasan',
  image: '/images/blog/emergency-financing.jpg'
};

const keywords = ['pembiayaan kecemasan', 'kelulusan 24 jam', 'pembiayaan pantas', 'pinjaman peralatan', '0% deposit'];
const breadcrumbItems = [
  { label: 'Utama', href: '/ms' },
  { label: 'Blog', href: '/ms/blog' },
  { label: post.title, href: `/ms/blog/${post.slug}` }
];
---

<BaseLayout title={post.title} description={post.excerpt} lang={lang} keywords={keywords}>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": post.title,
      "description": post.excerpt,
      "datePublished": post.date,
      "author": { "@type": "Organization", "name": post.author },
      "publisher": {
        "@type": "Organization",
        "name": "Ing Heng Credit & Leasing Sdn Bhd",
        "logo": {
          "@type": "ImageObject",
          "url": "https://inghengcredit.com/logo.png"
        }
      }
    }
  </script>

  <Breadcrumbs items={breadcrumbItems} />

  <article class="max-w-4xl mx-auto px-4 py-12">
    <header class="mb-8">
      <span class="text-sm font-semibold" style="color: #D4A574;">Pembiayaan Kecemasan</span>
      <h1 class="text-4xl font-bold mt-2" style="color: #2D1810; font-family: 'Bebas Neue', sans-serif; text-transform: uppercase;">{post.title}</h1>
      <p class="text-gray-600 mt-4">{post.excerpt}</p>
      <div class="flex items-center gap-4 text-sm text-gray-500 mt-4">
        <span>{post.author}</span>
        <span>•</span>
        <time>{new Date(post.date).toLocaleDateString('ms-MY', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
        <span>•</span>
        <span>{post.readTime} min bacaan</span>
      </div>
    </header>

    <div class="prose prose-lg max-w-none">
