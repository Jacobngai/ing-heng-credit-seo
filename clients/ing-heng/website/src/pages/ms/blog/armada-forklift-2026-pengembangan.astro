---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'ms';
const post = {
  title: 'Armada Forklift 2026 Pengembangan - Fleet Financing',
  slug: 'armada-forklift-2026-pengembangan',
  excerpt: 'Dapatkan pembiayaan armada forklift 2026 pengembangan - fleet financing dengan 0% down payment dari Ing Heng Credit. Kelulusan 24-48 jam, tiada had umur peralatan.',
