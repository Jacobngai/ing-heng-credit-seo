---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import CTAButton from '../../../components/CTAButton.astro';
import { COMPANY_INFO } from '../../../utils/constants';

const lang = 'ms';
const post = {
  title: 'Lori Dump 10-Ton 2026 - Perlombongan & Large Projects',
  slug: 'lori-dump-10-ton-2026-perlombongan',
  excerpt: 'Dapatkan pembiayaan lori dump 10-ton 2026 - perlombongan & large projects dengan 0% down payment dari Ing Heng Credit. Kelulusan 24-48 jam, tiada had umur peralatan.',
  date: 'undefined',
