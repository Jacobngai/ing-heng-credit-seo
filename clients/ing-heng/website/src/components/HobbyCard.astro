---
/**
 * Hobby Card Component
 * Card for displaying hobby categories with large image, title, and description
 * Design matches ProductCard from equipment page
 */

import type { Locale } from '../utils/i18n';
import { t } from '../utils/i18n';

interface Props {
  lang: Locale;
  title?: string;
  titleKey?: string;
  description?: string;
  descriptionKey?: string;
  icon?: string;
  image?: string;
  href?: string;
  items?: string[];
  badge?: string;
  comingSoon?: boolean;
}

const { lang, title, titleKey, description, descriptionKey, icon, image, href, items, badge, comingSoon } = Astro.props;

const cardTitle = title || (titleKey ? t(titleKey, lang) : '');
const cardDescription = description || (descriptionKey ? t(descriptionKey, lang) : '');
const cardIcon = icon || 'ðŸ“‹';
const cardImage = image || null;
const cardHref = href || '#';
const cardBadge = badge || '';
const isComingSoon = comingSoon || false;
const hasItems = items && items.length > 0;
---

<div class={`hobby-card group ${isComingSoon ? 'coming-soon' : ''}`}>
  {/* Large Image Section - matching equipment page design */}
  {cardImage && (
    <div class="relative aspect-[4/3] overflow-hidden">
      <img
        src={cardImage}
        alt={cardTitle}
        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
        loading="lazy"
      />
      {cardBadge && (
        <span class={`absolute top-4 right-4 hobby-badge badge-${cardBadge}`}>
          {cardBadge}
        </span>
      )}
      {isComingSoon && (
        <span class="absolute top-4 right-4 hobby-badge badge-coming-soon">
          Coming Soon
        </span>
      )}
    </div>
  )}

  {/* Fallback icon if no image */}
  {!cardImage && (
    <div class="hobby-icon-section">
      <span class="hobby-card-icon">{cardIcon}</span>
      {cardBadge && (
        <span class={`hobby-badge badge-${cardBadge}`}>
          {cardBadge}
        </span>
      )}
      {isComingSoon && (
        <span class="hobby-badge badge-coming-soon">
          Coming Soon
        </span>
      )}
    </div>
  )}

  <div class="hobby-card-body">
    {/* Title */}
    <h3 class="hobby-card-title group-hover:text-secondary transition-colors">
      {cardTitle}
    </h3>

    {/* Description */}
    {cardDescription && (
      <p class="hobby-card-description">
        {cardDescription}
      </p>
    )}

    {/* Items/Tags */}
    {hasItems && (
      <ul class="hobby-card-items">
        {items.map((item) => (
          <li class="hobby-card-item">{item}</li>
        ))}
      </ul>
    )}

    {/* CTA Button */}
    {!isComingSoon && cardHref !== '#' && !cardHref.includes('wa.me') && (
      <a href={cardHref} class="hobby-card-cta-btn">
        View More
      </a>
    )}

    {/* Coming Soon - disabled state */}
    {isComingSoon && (
      <span class="hobby-card-cta-btn disabled">
        Coming Soon
      </span>
    )}

    {/* Contact card - special handling for WhatsApp links */}
    {!isComingSoon && cardHref.includes('wa.me') && (
      <a href={cardHref} target="_blank" rel="noopener noreferrer" class="hobby-card-cta-btn whatsapp">
        Contact Us
      </a>
    )}
  </div>
</div>

<style>
  .hobby-card {
    display: flex;
    flex-direction: column;
    background: white;
    border: 3px solid #6B5437;
    border-radius: 0;
    box-shadow: 4px 4px 0 #6B5437;
    text-decoration: none;
    transition: all 0.2s ease;
    height: 100%;
    overflow: hidden;
  }

  .hobby-card:not(.coming-soon):hover {
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 #6B5437;
  }

  .hobby-card.coming-soon {
    opacity: 0.7;
  }

  /* Icon fallback section */
  .hobby-icon-section {
    position: relative;
    background: linear-gradient(135deg, #F5F1EB 0%, #E8E0D5 100%);
    aspect-ratio: 4/3;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 3px solid #6B5437;
  }

  .hobby-card-icon {
    font-size: 4rem;
  }

  /* Card body */
  .hobby-card-body {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    flex-grow: 1;
  }

  .hobby-card-title {
    font-size: 1.5rem;
    font-weight: 800;
    color: #4A3A28;
    margin: 0 0 0.75rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .hobby-card-description {
    font-size: 0.9375rem;
    color: #64748b;
    margin: 0 0 1rem 0;
    line-height: 1.6;
    flex-grow: 1;
  }

  .hobby-card-items {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .hobby-card-item {
    font-size: 0.8125rem;
    color: #6B5437;
    background: #F5F1EB;
    padding: 0.25rem 0.625rem;
    border: 1px solid #D4A574;
  }

  /* Badge styles */
  .hobby-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
    border-radius: 0;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .badge-popular {
    background: #D4A574;
    color: white;
    border: 2px solid #6B5437;
    box-shadow: 2px 2px 0 #6B5437;
  }

  .badge-custom {
    background: #8B6F47;
    color: white;
    border: 2px solid #6B5437;
    box-shadow: 2px 2px 0 #6B5437;
  }

  .badge-new {
    background: #10B981;
    color: white;
    border: 2px solid #065F46;
    box-shadow: 2px 2px 0 #065F46;
  }

  .badge-coming-soon {
    background: #94a3b8;
    color: white;
    border: 2px solid #64748b;
    box-shadow: 2px 2px 0 #64748b;
  }

  /* CTA Button */
  .hobby-card-cta-btn {
    display: block;
    width: 100%;
    text-align: center;
    padding: 0.875rem 1.5rem;
    background: #8B6F47;
    color: white;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.875rem;
    border: 2px solid #4A3A28;
    box-shadow: 3px 3px 0 #4A3A28;
    text-decoration: none;
    transition: all 0.2s ease;
    margin-top: auto;
  }

  .hobby-card-cta-btn:hover {
    background: #6B5437;
    transform: translate(-1px, -1px);
    box-shadow: 4px 4px 0 #4A3A28;
  }

  .hobby-card-cta-btn.disabled {
    background: #94a3b8;
    border-color: #64748b;
    box-shadow: 3px 3px 0 #64748b;
    cursor: not-allowed;
  }

  .hobby-card-cta-btn.whatsapp {
    background: #25D366;
    border-color: #128C7E;
    box-shadow: 3px 3px 0 #128C7E;
  }

  .hobby-card-cta-btn.whatsapp:hover {
    background: #128C7E;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hobby-card-body {
      padding: 1.25rem;
    }

    .hobby-card-title {
      font-size: 1.25rem;
    }

    .hobby-card-icon {
      font-size: 3rem;
    }
  }
</style>
