---
interface Props {
  title: string;
  description: string;
  ctaText: string;
  ctaLink: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
  variant?: 'primary' | 'dark';
}

const {
  title,
  description,
  ctaText,
  ctaLink,
  secondaryCtaText,
  secondaryCtaLink,
  variant = 'primary'
} = Astro.props;

const bgClass = variant === 'primary'
  ? 'bg-gradient-to-br from-primary-400 to-primary-600'
  : 'bg-gradient-to-br from-gray-900 to-gray-800';
---

<section class={`${bgClass} text-white rounded-2xl overflow-hidden`}>
  <div class="container-custom py-16 md:py-20">
    <div class="max-w-3xl mx-auto text-center space-y-6">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold">
        {title}
      </h2>
      <p class="text-lg md:text-xl text-white/90">
        {description}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center pt-4">
        <a href={ctaLink} class="btn bg-white text-primary-700 hover:bg-gray-50">
          {ctaText}
        </a>
        {secondaryCtaText && secondaryCtaLink && (
          <a
            href={secondaryCtaLink}
            class="btn bg-transparent border-2 border-white text-white hover:bg-white/10"
          >
            {secondaryCtaText}
          </a>
        )}
      </div>
    </div>
  </div>
</section>
