---
/**
 * KeywordStatsCard - Simple display of keyword data
 * No technical terms, just what matters: searches and difficulty
 */
interface Props {
  keyword: string;
  searchVolume: number;
  difficulty: number;
  intent?: 'commercial' | 'transactional' | 'navigational' | 'informational';
}

const { keyword, searchVolume, difficulty, intent = 'commercial' } = Astro.props;

// Simplified difficulty label
const difficultyText = difficulty < 20 ? 'Easy to rank' : difficulty < 40 ? 'Medium' : 'Hard';

// Intent in simple terms
const intentText = {
  commercial: 'Looking to buy',
  transactional: 'Ready to buy now',
  navigational: 'Searching for company',
  informational: 'Just looking'
}[intent];
---

<div class="keyword-stats-card bg-white rounded-card p-6 shadow-card border border-gray-200">
  <!-- Keyword -->
  <div class="mb-4">
    <p class="text-xs text-gray-500 uppercase tracking-wide font-semibold mb-1">People search for:</p>
    <h3 class="text-lg font-bold text-gray-900">{keyword}</h3>
  </div>

  <!-- Metrics -->
  <div class="grid grid-cols-2 gap-4 mb-4">
    <!-- Search Volume -->
    <div class="bg-gray-50 rounded-lg p-3">
      <p class="text-xs text-gray-600 mb-1">Every month:</p>
      <p class="text-2xl font-bold text-gray-900">{searchVolume}</p>
      <p class="text-xs text-gray-500">people search</p>
    </div>

    <!-- Difficulty -->
    <div class="bg-gray-50 rounded-lg p-3">
      <p class="text-xs text-gray-600 mb-1">How hard to rank:</p>
      <p class="text-2xl font-bold {difficulty < 30 ? 'text-green-600' : 'text-orange-600'}">{difficultyText}</p>
    </div>
  </div>

  <!-- Intent -->
  <div class="flex items-center justify-between bg-gray-50 rounded-lg p-3">
    <span class="text-sm text-gray-600">What they want:</span>
    <span class="text-sm font-bold text-gray-900">{intentText}</span>
  </div>
</div>

<style>
  .keyword-stats-card {
    background: #ffffff;
  }
</style>
