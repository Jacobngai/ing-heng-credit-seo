---
/**
 * WhatsAppCTA - Pre-filled WhatsApp call-to-action button
 * Creates a WhatsApp link with context-specific message
 */
interface Props {
  keyword?: string;
  industry?: string;
  message?: string;
  phoneNumber?: string;
  variant?: 'primary' | 'secondary' | 'disruptive';
  size?: 'sm' | 'md' | 'lg';
  fullWidth?: boolean;
}

const {
  keyword = '',
  industry = 'SEO services',
  message,
  phoneNumber = '60175032281',
  variant = 'primary',
  size = 'md',
  fullWidth = false
} = Astro.props;

// Generate context-aware message
const defaultMessage = keyword
  ? `Hi, I'm interested in the RM399 trial for ${keyword} (${industry}). Can you help me get ranked?`
  : `Hi, I want to try the RM399 trial for ${industry}.`;

const whatsappMessage = encodeURIComponent(message || defaultMessage);
const whatsappUrl = `https://wa.me/${phoneNumber}?text=${whatsappMessage}`;

// Variant styles
const variantStyles = {
  primary: 'bg-success-500 hover:bg-success-600 text-white shadow-glow-green',
  secondary: 'bg-secondary-800 hover:bg-secondary-900 text-white',
  disruptive: 'bg-gradient-to-r from-accent-500 to-primary-500 hover:from-accent-600 hover:to-primary-600 text-white shadow-disruptive'
};

const sizeStyles = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg'
};

const iconSizes = {
  sm: 'w-4 h-4',
  md: 'w-5 h-5',
  lg: 'w-6 h-6'
};
---

<a
  href={whatsappUrl}
  target="_blank"
  rel="noopener noreferrer"
  class={[
    'whatsapp-cta inline-flex items-center justify-center gap-3 font-bold rounded-button transition-all duration-300 transform hover:scale-105 hover:-translate-y-0.5',
    variantStyles[variant],
    sizeStyles[size],
    fullWidth && 'w-full'
  ].join(' ')}
>
  <!-- WhatsApp Icon -->
  <svg class={iconSizes[size]} fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
  </svg>

  <!-- CTA Text -->
  <span>
    {keyword ? (
      <>
        Get Ranked for <span class="font-black italic">&quot;{keyword}&quot;</span>
      </>
    ) : (
      `Start RM399 Trial (${industry})`
    )}
  </span>

  <!-- Arrow Icon -->
  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
  </svg>
</a>

<style>
  .whatsapp-cta {
    box-shadow: 0 4px 14px rgba(132, 204, 22, 0.3);
  }

  .whatsapp-cta:hover {
    box-shadow: 0 6px 20px rgba(132, 204, 22, 0.4);
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.9;
    }
  }

  .whatsapp-cta:active {
    transform: scale(0.98);
  }
</style>
