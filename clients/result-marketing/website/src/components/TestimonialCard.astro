---
interface Props {
  quote: string;
  author: string;
  role: string;
  company: string;
  image?: string;
  rating?: number;
}

const { quote, author, role, company, image, rating = 5 } = Astro.props;
---

<div class="card h-full flex flex-col">
  <!-- Rating Stars -->
  <div class="flex gap-1 mb-4">
    {Array.from({ length: 5 }).map((_, i) => (
      <svg
        class={`h-5 w-5 ${i < rating ? 'text-yellow-400' : 'text-gray-300'}`}
        fill="currentColor"
        viewBox="0 0 20 20"
      >
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
      </svg>
    ))}
  </div>

  <!-- Quote -->
  <blockquote class="text-gray-700 mb-6 flex-grow italic">
    "{quote}"
  </blockquote>

  <!-- Author Info -->
  <div class="flex items-center gap-4 pt-4 border-t border-gray-200">
    {image ? (
      <img src={image} alt={author} class="w-12 h-12 rounded-full object-cover" />
    ) : (
      <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center text-primary-700 font-bold text-lg">
        {author.charAt(0)}
      </div>
    )}
    <div>
      <div class="font-semibold text-dark">{author}</div>
      <div class="text-sm text-gray-600">{role}</div>
      <div class="text-sm text-gray-500">{company}</div>
    </div>
  </div>
</div>
