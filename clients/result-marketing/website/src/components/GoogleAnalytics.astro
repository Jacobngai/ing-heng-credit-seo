---
const GA_ID = import.meta.env.GOOGLE_ANALYTICS_ID;

// Only load Google Analytics if ID is provided
if (!GA_ID) {
  console.warn('Google Analytics ID not found. Set GOOGLE_ANALYTICS_ID in .env');
}
---

{GA_ID && (
  <>
    <!-- Google tag (gtag.js) -->
    <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}></script>
    <script is:inline define:vars={{ GA_ID }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', GA_ID);
    </script>
  </>
)}
