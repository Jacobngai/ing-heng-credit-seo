    stats: [
      { label: 'Share of Searches', value: '8%', bad: true },
      { label: 'Competition Level', value: 'Very High', bad: true },
      { label: 'Conversion Rate', value: '11%', bad: true },
      { label: 'Time to Rank', value: 'Years', bad: true }
    ]
