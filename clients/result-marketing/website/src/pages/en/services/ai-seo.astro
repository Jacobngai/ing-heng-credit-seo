const process = [
  {
    phase: 'Week 1',
    title: 'AI Discovery',
    tasks: [
      'Automated competitor analysis',
      'AI keyword clustering (100+ terms)',
      'Search intent mapping',
      'Quick win identification'
    ]
  },
  {
    phase: 'Week 2-3',
    title: 'Content Production',
    tasks: [
      'AI-generated outlines',
      'Human expert writing/editing',
      'SEO optimization',
      'Quality assurance review'
    ]
  },
  {
    phase: 'Week 4',
    title: 'Deployment',
    tasks: [
      'Content publishing',
      'Technical SEO implementation',
      'Internal linking',
      'Performance monitoring setup'
    ]
  },
  {
    phase: 'Ongoing',
