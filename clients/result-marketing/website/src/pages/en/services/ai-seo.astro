---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const lang = 'en';

const benefits = [
  {
    title: '10x Faster Production',
    description: 'What takes traditional agencies 3 months, we accomplish in 3 weeks using AI automation.',
    icon: 'âš¡'
  },
  {
    title: 'Lower Cost',
    description: 'No bloated teams or overhead. Pass the AI efficiency gains directly to you.',
    icon: 'ðŸ’°'
  },
  {
