    description: 'Ensure your content gets cited by ChatGPT, Perplexity, and other AI engines.',
    tools: ['Citation Tracking', 'Structured Data', 'Authority Signals']
  }
];

const comparison = [
  {
    aspect: 'Keywords Covered',
    traditional: '10-20/month',
    resultMarketing: '100+/month',
    advantage: '5-10x more coverage'
  },
  {
    aspect: 'Time to Results',
    traditional: '6-12 months',
    resultMarketing: '90 days',
    advantage: '4x faster'
  },
  {
    aspect: 'Monthly Cost',
    traditional: 'RM 10K-20K',
    resultMarketing: 'RM 2.5K-10K',
    advantage: '50-80% cheaper'
  },
  {
