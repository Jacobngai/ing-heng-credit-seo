    description: 'AI handles grunt work. Our experts focus on strategy, editing, and optimization.',
    icon: 'âœ¨'
  },
  {
    title: 'Future-Proof',
    description: 'Optimize for AI search engines (ChatGPT, Perplexity) while others play catch-up.',
    icon: 'ðŸ”®'
  }
];

const features = [
  {
    title: 'AI Keyword Research',
    description: 'Claude analyzes millions of search patterns to identify high-intent long-tail opportunities competitors miss.',
    tools: ['Claude Code', 'DataForSEO API', 'Perplexity AI']
  },
  {
    title: 'Automated Content Outlines',
    description: 'AI generates comprehensive content briefs including structure, headers, and semantic keywords.',
    tools: ['GPT-4', 'Claude', 'Custom Prompts']
  },
  {
    title: 'Technical SEO Audits',
    description: 'Automated scans identify and prioritize technical issues affecting your rankings.',
    tools: ['Lighthouse', 'PageSpeed Insights', 'Schema Validator']
  },
  {
