>
  <!-- Hero Section - SIMPLE WORDS -->
  <section class="section bg-gradient-mesh">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <span class="text-accent-500 font-black text-sm uppercase tracking-wider mb-2 block">Our Services</span>
        <h1 class="text-5xl md:text-6xl font-black mb-6 text-white">
          SEO That Actually Works
        </h1>
        <p class="text-xl text-secondary-400 mb-8 max-w-3xl mx-auto">
          We don't do "SEO" for rankings that don't matter.
          <br><br>
          <strong>We help you get found when real people search for real solutions. Traffic that buys. Leads that call. Growth that lasts.</strong>
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="https://wa.me/60175032281?text=Hi%2C%20I%27m%20interested%20in%20Result%20Marketing%20services." target="_blank" rel="noopener noreferrer" class="btn btn-primary">
            Get Free Analysis
          </a>
          <a href="/en/pricing" class="btn btn-secondary">
            View Pricing
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="section bg-dark">
    <div class="container-custom">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        {services.map(service => (
          <a href={service.link} class="group">
            <div class="card card-hover h-full">
              <div class="text-4xl mb-4">{service.icon}</div>
              <h3 class="text-2xl font-black mb-3 text-white group-hover:text-accent-400 transition-colors">
                {service.title}
              </h3>
              <p class="text-secondary-400 mb-6">{service.description}</p>
              <ul class="space-y-3 mb-6">
                {service.features.map(feature => (
                  <li class="flex items-start gap-3 text-sm text-secondary-300">
                    <div class="relative">
                      <div class="absolute inset-0 bg-success-500/30 blur-sm"></div>
                      <svg class="h-5 w-5 text-success-500 flex-shrink-0 mt-0.5 relative" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </div>
                    <span class="font-medium">{feature}</span>
                  </li>
                ))}
              </ul>
              <div class="mt-4 text-accent-500 font-bold flex items-center gap-1 group-hover:gap-2 transition-all">
                Learn more
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Process -->
  <section class="section bg-secondary-900">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-3xl md:text-5xl font-black mb-4 text-white">How We Work</h2>
        <p class="text-lg text-secondary-400">
          Results in 90 days or less. No long contracts.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        {process.map(item => (
          <div class="text-center">
            <div class="w-20 h-20 rounded-xl bg-gradient-to-br from-accent-500 to-accent-700 text-white font-black text-2xl flex items-center justify-center mx-auto mb-4">
              {item.step}
            </div>
            <h3 class="text-xl font-black mb-3 text-white">{item.title}</h3>
            <p class="text-secondary-400 text-sm">{item.description}</p>
