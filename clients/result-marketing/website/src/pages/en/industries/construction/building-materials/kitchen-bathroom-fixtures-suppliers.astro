---
import BaseLayout from '@layouts/BaseLayout.astro';

const lang = 'en';

const prospectTypes = [
  {
    type: 'Renovation Contractors',
    problem: 'Need kitchen cabinets, bathroom fixtures, sanitary ware',
    keywords: [
      'kitchen cabinet supplier malaysia',
      'bathroom fixture supplier near me',
      'sanitary ware supplier klang valley',
      'kitchen sink and tap supplier'
    ]
  },
  {
    type: 'Interior Designers',
    problem: 'Need premium fixtures for designer kitchens and bathrooms',
    keywords: [
      'premium kitchen fixture supplier malaysia',
      'luxury bathroom fixture supplier',
      'designer kitchen cabinet supplier',
      'modern sanitary ware supplier'
    ]
  },
  {
    type: 'Property Developers',
    problem: 'Large-scale fixtures for housing projects',
    keywords: [
      'bulk sanitary ware supplier for housing',
      'kitchen fixture package for condominium',
      'bathroom fixture supplier who delivers to site',
      'apartment fixture package supplier'
    ]
  },
  {
    type: 'Hardware Shop Owners',
    problem: 'Need fixtures for retail with good margins',
    keywords: [
      'sanitary ware wholesale price malaysia',
      'kitchen fixture distributor vs supplier',
      'how to source bathroom fixtures for hardware',
      'fixture supplier with credit terms for retailers'
    ]
  },
  {
    type: 'DIY Homeowners',
    problem: 'Kitchen and bathroom renovations',
    keywords: [
      'where to buy kitchen fixtures for renovation',
      'bathroom fixture supplier who sells to public',
      'kabinet dapur supplier malaysia',
      'shower set supplier for home'
    ]
  },
  {
    type: 'Hotel Contractors',
    problem: 'Commercial grade fixtures for hospitality',
    keywords: [
      'commercial bathroom fixture supplier malaysia',
      'hotel sanitary ware supplier',
      'heavy duty kitchen fixture supplier',
      'shower room fixture supplier for hotel'
    ]
  },
  {
    type: 'Plumbing Contractors',
    problem: 'Need fixtures compatible with plumbing systems',
    keywords: [
      'plumbing fixture supplier malaysia',
      'water efficient fixture supplier',
      'smart toilet and faucet supplier',
      'rain shower set supplier malaysia'
    ]
  }
];

const faq = [
  {
    q: 'How long until I see results?',
    a: 'Most clients see leads in 30 days. Some keywords rank faster. SEO grows over time.'
  },
  {
    q: 'What keywords do you target?',
    a: 'Problem-aware questions: "kitchen cabinet supplier malaysia", "bathroom fixture price", "sanitary ware near me". Also location searches: "fixture supplier Selangor".'
  },
  {
    q: 'Do I need 3 languages?',
    a: 'Yes if you want government jobs (Malay) or Chinese developer clients. English-only websites miss 2 out of 3 buyer groups.'
  },
  {
    q: 'Can I see examples?',
    a: 'Yes. We show you exactly what keywords we\'ll target. You approve before we start. No surprises.'
  }
];
---

<BaseLayout
  title="Best Marketing for Kitchen & Bathroom Fixtures Suppliers | Get More Contracts"
  description="Kitchen and bathroom fixtures supplier marketing that works. Problem-aware keywords in 3 languages. 60+ keywords. RM 1,200/month. Get more supply contracts."
  locale={lang}
>
  <!-- Hero Section -->
  <section class="section relative bg-gradient-mesh" style="background-image: url('https://images.pexels.com/photos/29491416/pexels-photo-29491416.jpeg?auto=compress&cs=tinysrgb&w=1920'); background-size: cover; background-position: center;">
    <div class="absolute inset-0 bg-black/70"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <span class="text-accent-500 font-black text-sm uppercase tracking-wider mb-2 block">Kitchen & Bathroom Fixtures Suppliers Marketing</span>
        <h1 class="text-5xl md:text-6xl font-black mb-6 text-white">
          Win Buyers From Google and AI Search
        </h1>
        <p class="text-xl text-secondary-400 mb-8 max-w-3xl mx-auto">
          Our AIEO + local SEO system targets niche terms like <strong>"kitchen cabinet supplier malaysia"</strong> so contractors find you first.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="https://wa.me/60175032281?text=Hi%2C%20I%20run%20a%20fixture%20supply%20business.%20Interested%20in%20your%20marketing." target="_blank" rel="noopener noreferrer" class="btn btn-primary">
            Try RM399 Trial
          </a>
          <a href="/en/pricing" class="btn btn-secondary">
            See Pricing
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Overview -->
  <section class="section bg-dark">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="card p-8 border-accent-500/50">
          <h2 class="text-2xl font-black mb-6 text-white text-center">Quick Overview</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
            <div class="bg-secondary-800 p-4 rounded-lg">
              <div class="text-secondary-400 mb-1">Pricing</div>
              <div class="text-white font-black text-lg">RM 1,200/month</div>
            </div>
            <div class="bg-secondary-800 p-4 rounded-lg">
              <div class="text-secondary-400 mb-1">Timeline</div>
              <div class="text-white font-black text-lg">30 days</div>
            </div>
            <div class="bg-secondary-800 p-4 rounded-lg">
              <div class="text-secondary-400 mb-1">Languages</div>
              <div class="text-white font-black text-lg">EN / ZH / MS</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Keywords Section -->
  <section class="section bg-secondary-900" id="keywords">
    <div class="container-custom">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-2xl md:text-4xl font-black mb-6 text-center text-white">
          Problem-Aware Keywords (What They Ask)
        </h2>
        <p class="text-sm text-secondary-400 mb-6 text-center">
          <strong>Problem-aware:</strong> People searching "how to" or comparing options are actively researching. We create content that answers these questions and guides them to you.
          <br>
          We create blog content to capture problem-aware searches, then guide them to your supply services.
        </p>
        <div class="space-y-6">
          {prospectTypes.map((prospect, index) => (
            <div class="card p-6">
              <div class="flex items-start gap-4 mb-4">
                <div class="bg-accent-500 text-white w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0 font-black">
                  {index + 1}
                </div>
                <div>
                  <h4 class="text-lg font-black text-white mb-1">{prospect.type}</h4>
                  <p class="text-sm text-accent-400">Problem: {prospect.problem}</p>
                </div>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                {prospect.keywords.map(kw => (
                  <div class="bg-secondary-800 p-3 rounded">
                    <span class="text-accent-400">"</span>{kw}<span class="text-accent-400">"</span>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- 3-Language Strategy -->
  <section class="section bg-dark">
    <div class="container-custom">
      <h2 class="text-2xl md:text-4xl font-black mb-8 text-center text-white">
        We Target All Languages for Maximum Reach
      </h2>
      <div class="max-w-4xl mx-auto">
        <p class="text-lg text-secondary-400 mb-8 text-center">
          Malaysia construction industry operates in <strong class="text-white">multiple languages</strong>. Malay dominates government projects, Chinese developers control private development, English serves international contractors.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="card p-6">
            <h3 class="text-lg font-black mb-2 text-accent-400">Malay</h3>
            <div class="text-2xl font-black text-white mb-2">60%</div>
            <p class="text-sm text-secondary-400 mb-2">of contractors prefer Malay</p>
            <p class="text-xs text-secondary-500">CIDB contractors, government projects, local renovators</p>
          </div>
          <div class="card p-6">
            <h3 class="text-lg font-black mb-2 text-accent-400">Chinese</h3>
            <div class="text-2xl font-black text-white mb-2">22%</div>
            <p class="text-sm text-secondary-400 mb-2">of market uses Chinese</p>
            <p class="text-xs text-secondary-500">Interior designers, fixture distributors, hardware owners</p>
          </div>
          <div class="card p-6">
            <h3 class="text-lg font-black mb-2 text-accent-400">English</h3>
            <div class="text-2xl font-black text-white mb-2">33%</div>
            <p class="text-sm text-secondary-400 mb-2">speakers in construction</p>
            <p class="text-xs text-secondary-500">Architects, designers, international contractors</p>
          </div>
        </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="section bg-secondary-900">
    <div class="container-custom">
      <h2 class="text-2xl md:text-4xl font-black mb-8 text-center text-white">
        Questions Fixture Suppliers Ask
      </h2>
      <div class="max-w-3xl mx-auto space-y-4">
        {faq.map(item => (
          <div class="card">
            <h3 class="text-lg font-black mb-2 text-white">{item.q}</h3>
            <p class="text-secondary-300">{item.a}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gradient-mesh">
    <div class="container-custom">
      <div class="card-disruptive p-12 text-center text-white">
        <h2 class="text-3xl md:text-5xl font-black mb-4">
          Ready to Get More Supply Contracts?
        </h2>
        <p class="text-xl mb-8 text-secondary-300 max-w-2xl mx-auto">
          Problem-aware keywords. 3 languages. AI engine optimization.
          <br>
          <strong>RM 1,200/month. All included.</strong>
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="https://wa.me/60175032281?text=Hi%2C%20I%20run%20a%20fixture%20supply%20business.%20Interested%20in%20your%20marketing." target="_blank" rel="noopener noreferrer" class="btn btn-success">
            Try RM399 Trial
          </a>
          <a href="/en/pricing" class="btn btn-secondary">
            See Pricing
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Articles -->
  <section class="section bg-secondary-900">
    <div class="container-custom">
      <h2 class="text-2xl font-black mb-6 text-center text-white">Related Industries</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        <a href="/en/industries/construction/building-materials/doors-windows-suppliers/" class="card p-6 hover:border-accent-500/50 transition-colors">
          <h3 class="font-black mb-2 text-accent-400">Best Marketing for Doors & Windows Suppliers</h3>
          <p class="text-sm text-secondary-400">SEO strategies for door suppliers</p>
        </a>
        <a href="/en/industries/construction/building-materials/construction-chemicals-suppliers/" class="card p-6 hover:border-accent-500/50 transition-colors">
          <h3 class="font-black mb-2 text-accent-400">Best Marketing for Construction Chemicals Suppliers</h3>
          <p class="text-sm text-secondary-400">SEO strategies for chemical suppliers</p>
        </a>
        <a href="/en/services/trilingual-seo" class="card p-6 hover:border-accent-500/50 transition-colors">
          <h3 class="font-black mb-2 text-accent-400">Trilingual SEO</h3>
          <p class="text-sm text-secondary-400">Why 3 languages win more contracts</p>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
