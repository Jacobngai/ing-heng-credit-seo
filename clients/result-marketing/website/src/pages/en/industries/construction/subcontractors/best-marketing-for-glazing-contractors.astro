  },
  {
    type: 'Office Building Managers',
    problem: 'Glass partitions, office fit-out',
    keywords: [
      'office glass partition contractor',
      'glass wall for office malaysia',
      'commercial glazing services',
      'frameless glass installation'
    ]
  },
  {
    type: 'Homeowners',
    problem: 'Window replacement, glass features',
    keywords: [
      'house window glass replacement',
      'glass railing for balcony',
      'shower screen installation malaysia',
      'residential glazing contractor'
    ]
  },
  {
    type: 'Hotel & Restaurant Owners',
    problem: 'Glass features, atriums, balustrades',
    keywords: [
      'hotel glass balustrade installer',
      'restaurant glass facade contractor',
      'glass canopy installation',
      'hospitality glazing services'
    ]
  },
  {
    type: 'Architects & Designers',
    problem: 'Custom glass work, architectural features',
