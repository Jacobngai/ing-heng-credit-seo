const prospectTypes = [
  {
    type: 'Land Developers',
    problem: 'Need site clearing, earthmoving for new projects',
    keywords: [
      'how to clear land without bulldozer',
      'bulldozer rental for land clearing',
      'cost to rent bulldozer vs hiring contractor',
      'bulldozer for site preparation malaysia'
    ]
