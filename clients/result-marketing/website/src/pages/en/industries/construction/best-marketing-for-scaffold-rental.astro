  {
    type: 'Industrial Facilities',
    problem: 'Need access for tank cleaning, equipment installation',
    keywords: [
      'industrial scaffolding rental for factory',
      'scaffolding for tank maintenance',
      'rent scaffold for industrial cleaning',
      'factory scaffolding requirements'
    ]
  },
  {
    type: 'Warehouse Operators',
    problem: 'Need access for high-storage installation, racking',
    keywords: [
      'scaffolding rental for warehouse racking',
      'how to install high shelving safely',
      'rent mobile scaffold for warehouse',
      'warehouse maintenance scaffolding'
    ]
  },
  {
    type: 'Foreign Workers',
