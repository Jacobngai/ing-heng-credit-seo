    keywords: [
      'generator rental for shopping mall',
      'backup power for retail store malaysia',
      'rent generator for mall event',
      'generator for mall renovation power'
    ]
  },
  {
    type: 'Medical Facilities',
    problem: 'Critical backup power for hospitals, clinics',
    keywords: [
      'generator rental for hospital backup',
      'emergency power for clinic malaysia',
      'rent generator for medical facility',
      'silent generator for healthcare'
    ]
