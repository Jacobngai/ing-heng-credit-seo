          </p>
          <a href="https://wa.me/60175032281?text=Hi%2C%20I%27m%20interested%20in%20Result%20Marketing%20services." target="_blank" rel="noopener noreferrer" class="btn btn-success">
            Get Started Today
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQs -->
  <section class="section bg-secondary-900">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-5xl font-black mb-12 text-center text-white">Pricing FAQs</h2>

        <div class="space-y-6">
          {faqs.map(faq => (
            <div class="card">
              <h3 class="text-lg font-black mb-3 text-white">{faq.question}</h3>
              <p class="text-secondary-400">{faq.answer}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Money-Back Guarantee -->
  <section class="section bg-dark">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="card p-12 border-success-500/50 bg-gradient-to-br from-success-500/10 to-success-500/5 text-center">
