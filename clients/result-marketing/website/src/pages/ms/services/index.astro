              <div class="text-4xl mb-4">{service.icon}</div>
              <h3 class="text-xl font-black mb-3 text-white group-hover:text-primary-400 transition-colors">
                {service.title}
              </h3>
              <p class="text-secondary-400 mb-4">{service.description}</p>
              <ul class="space-y-2">
                {service.features.map(feature => (
                  <li class="flex items-start gap-2 text-sm text-secondary-400">
                    <svg class="w-5 h-5 text-primary-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
