---
import BaseLayout from '../../../../layouts/BaseLayout.astro';

const lang = 'en';

const prospectTypes = [
  {
    type: 'Construction Contractors',
    problem: 'Need lifting for high-rise, heavy materials',
    keywords: [
      'what size crane for high-rise building',
      'mobile crane vs tower crane for construction',
      'rent crane for weekend lifting work',
      'crane rental cost per day vs buying crane'
    ]
  },
  {
    type: 'Warehouse Managers',
    problem: 'Need installation, maintenance lifting',
    keywords: [
      'how to install warehouse racking without crane',
      'mobile crane rental for warehouse setup',
      'forklift vs crane for warehouse lifting',
      'rent crane for air conditioner installation'
    ]
  },
  {
    type: 'Utility Companies',
    problem: 'Power line maintenance, installation',
    keywords: [
      'how to lift power pole without truck crane',
      'rent crane for tree cutting near power lines',
      'mobile crane for utility pole installation',
      'crane rental with operator for utility work'
    ]
  },
  {
    type: 'Event Organizers',
    problem: 'Stage setup, equipment lifting',
    keywords: [
      'how to lift stage equipment without crane',
      'rent mobile crane for event setup',
      'crane rental for concert stage',
      'manlift vs crane for event rigging'
    ]
  },
  {
    type: 'Signage Companies',
    problem: 'Billboard installation, sign mounting',
    keywords: [
      'how to install billboard without crane',
      'crane truck rental for sign installation',
      'rent crane for banner mounting',
      'mobile crane for signage work'
    ]
  },
  {
    type: 'Industrial Facilities',
    problem: 'Equipment installation, maintenance',
    keywords: [
      'how to move heavy machinery inside factory',
      'rent crane for factory equipment installation',
      'overhead crane vs mobile crane factory',
      'gantry crane rental vs mobile crane'
    ]
  },
  {
    type: 'Foreign Workers',
    problem: 'Language barrier, local supplier',
    keywords: [
      'how to find crane company who speaks mandarin',
      'malay speaking crane rental company near me',
      'crane rental process malaysia for foreigners',
      'how to rent crane in malaysia without experience'
    ]
  }
];

const languages = [
  { name: 'Malay', reason: 'CIDB contractors, government projects, facility managers', reach: '60%' },
  { name: 'Chinese', reason: 'Own construction businesses, make procurement decisions', reach: '22%' },
  { name: 'English', reason: 'Corporate clients, MNCs, international projects', reach: '33%' }
];

const faq = [
  {
    q: 'How long until I see results?',
    a: 'Most clients see leads in 30 days. Some keywords rank faster. SEO grows over time.'
  },
  {
    q: 'What keywords do you target?',
    a: 'Problem-aware questions: "what size crane for lifting", "crane rental with operator", "cheap crane rental KL". Also location searches: "crane rental near me".'
  },
  {
    q: 'Do I need 3 languages?',
    a: 'Yes if you want government jobs (Malay) or Chinese business clients. English-only websites miss 2 out of 3 buyer groups.'
  },
  {
    q: 'Can I see examples?',
    a: 'Yes. We show you exactly what keywords we\'ll target. You approve before we start. No surprises.'
  }
];
---

<BaseLayout
  title="Best Marketing for Crane Rental | Get More Lifting Contracts"
  description="Crane rental marketing that works. Problem-aware keywords in 3 languages. 60+ keywords. RM 1,200/month. Get more lifting contracts."
  locale={lang}
>
  <!-- Hero Section -->
  <section class="section bg-gradient-mesh">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <span class="text-accent-500 font-black text-sm uppercase tracking-wider mb-2 block">Crane Rental Marketing</span>
        <h1 class="text-5xl md:text-6xl font-black mb-6 text-white">
          Win Buyers From Google and AI Search
        </h1>
        <p class="text-xl text-secondary-400 mb-8 max-w-3xl mx-auto">
          Our AIEO + local SEO system targets niche terms like <strong>"what size crane for lifting"</strong> so construction companies find you first.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="https://wa.me/60175032281?text=Hi%2C%20I%20run%20a%20crane%20rental%20business.%20Interested%20in%20your%20marketing." target="_blank" rel="noopener noreferrer" class="btn btn-primary">
            Try RM399 Trial
          </a>
          <a href="/en/pricing" class="btn btn-secondary">
            See Pricing
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Overview -->
  <section class="section bg-dark">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="card p-8 border-accent-500/50">
          <h2 class="text-2xl font-black mb-6 text-white text-center">Quick Overview</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
            <div class="bg-secondary-800 p-4 rounded-lg">
              <div class="text-secondary-400 mb-1">Pricing</div>
              <div class="text-white font-black text-lg">RM 1,200/month</div>
            </div>
            <div class="bg-secondary-800 p-4 rounded-lg">
              <div class="text-secondary-400 mb-1">Timeline</div>
              <div class="text-white font-black text-lg">30 days</div>
            </div>
            <div class="bg-secondary-800 p-4 rounded-lg">
              <div class="text-secondary-400 mb-1">Languages</div>
              <div class="text-white font-black text-lg">EN / ZH / MS</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- The Problem -->
  <section class="section bg-dark">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="card p-8 md:p-12 border-accent-500/50">
          <h2 class="text-2xl md:text-4xl font-black mb-6 text-center text-white">
            Why Your Crane Rental Website Gets No Calls
          </h2>

          <div class="prose prose-lg max-w-none prose-invert">
            <ul class="text-secondary-300 text-lg space-y-3">
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>You rank for "crane rental" (too competitive, expensive)</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>Contractors search "crane rental near [location]" - you don\'t rank</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>Government jobs use Malay "sewa kren" - you miss these</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>Chinese businesses search in Chinese - you don\'t show up</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Keywords Section -->
  <section class="section bg-secondary-900" id="keywords">
    <div class="container-custom">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-2xl md:text-4xl font-black mb-6 text-center text-white">
          Problem-Aware Keywords (What They Ask)
        </h2>
        <p class="text-sm text-secondary-400 mb-6 text-center">
          <strong>Problem-aware:</strong> People searching "how to" or comparing options are actively researching. We create content that answers these questions and guides them to you.
        </p>
        <div class="space-y-6">
          {prospectTypes.map((prospect, index) => (
            <div class="card p-6">
              <div class="flex items-start gap-4 mb-4">
                <div class="bg-accent-500 text-white w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0 font-black">
                  {index + 1}
                </div>
                <div>
                  <h4 class="text-lg font-black text-white mb-1">{prospect.type}</h4>
                  <p class="text-sm text-accent-400">Problem: {prospect.problem}</p>
                </div>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                {prospect.keywords.map(kw => (
                  <div class="bg-secondary-800 p-3 rounded">
                    <span class="text-accent-400">"</span>{kw}<span class="text-accent-400">"</span>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- 3-Language Advantage -->
  <section class="section bg-dark">
    <div class="container-custom">
      <h2 class="text-2xl md:text-4xl font-black mb-8 text-center text-white">
        Malaysians Speak 3 Languages
      </h2>
      <div class="max-w-4xl mx-auto">
        <p class="text-lg text-secondary-400 mb-8 text-center">
          English-only websites miss 67% of buyers.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {languages.map(lang => (
            <div class="card p-6">
              <h3 class="text-lg font-black mb-2 text-accent-400">{lang.name}</h3>
              <p class="text-sm text-secondary-400 mb-2">{lang.reason}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="section bg-secondary-900">
    <div class="container-custom">
      <h2 class="text-2xl md:text-4xl font-black mb-8 text-center text-white">
        Questions Crane Owners Ask
      </h2>
      <div class="max-w-3xl mx-auto space-y-4">
        {faq.map(item => (
          <div class="card">
            <h3 class="text-lg font-black mb-2 text-white">{item.q}</h3>
            <p class="text-secondary-300">{item.a}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gradient-mesh">
    <div class="container-custom">
      <div class="card-disruptive p-12 text-center text-white">
        <h2 class="text-3xl md:text-5xl font-black mb-4">
          Ready to Get More Lifting Contracts?
        </h2>
        <p class="text-xl mb-8 text-secondary-300 max-w-2xl mx-auto">
          Problem-aware keywords. 3 languages. AI engine optimization.
          <br>
          <strong>RM 1,200/month. All included.</strong>
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="https://wa.me/60175032281?text=Hi%2C%20I%20run%20a%20crane%20rental%20business.%20Interested%20in%20your%20marketing." target="_blank" rel="noopener noreferrer" class="btn btn-success">
            Try RM399 Trial
          </a>
          <a href="/en/pricing" class="btn btn-secondary">
            See Pricing
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Articles -->
  <section class="section bg-secondary-900">
    <div class="container-custom">
      <h2 class="text-2xl font-black mb-6 text-center text-white">Related Industries</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        <a href="/en/industries/construction/best-marketing-for-forklift-rental/" class="card p-6 hover:border-accent-500/50 transition-colors">
          <h3 class="font-black mb-2 text-accent-400">Best Marketing for Forklift Rental</h3>
          <p class="text-sm text-secondary-400">SEO strategies for forklift rental companies</p>
        </a>
        <a href="/en/industries/construction/best-marketing-for-excavator-rental/" class="card p-6 hover:border-accent-500/50 transition-colors">
          <h3 class="font-black mb-2 text-accent-400">Best Marketing for Excavator Rental</h3>
          <p class="text-sm text-secondary-400">SEO strategies for excavator rental companies</p>
        </a>
        <a href="/en/services/trilingual-seo" class="card p-6 hover:border-accent-500/50 transition-colors">
          <h3 class="font-black mb-2 text-accent-400">Trilingual SEO</h3>
          <p class="text-sm text-secondary-400">Why 3 languages win more contracts</p>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
