---
import BaseLayout from '../../../../../layouts/BaseLayout.astro';

const lang = 'en';

const prospectTypes = [
  {
    type: 'SME Manufacturers',
    problem: 'Need compact factory space, can\'t afford industrial park',
    keywords: [
      'pocket factory for sale Klang',
      'small factory for rent near me',
      'built to rent factory Malaysia',
      'compact industrial unit for SME'
    ]
  },
  {
    type: 'Light Industry Owners',
    problem: 'Don\'t need large warehouse, want smaller space',
    keywords: [
      'light industrial factory for sale Shah Alam',
      'small scale manufacturing space Malaysia',
      'mini factory for lease',
      'terrace factory vs double story factory'
    ]
  },
  {
    type: 'Small Business Owners',
    problem: 'Expanding from home, need proper production space',
    keywords: [
      'how to start small manufacturing business Malaysia',
      'factory rental for small business',
      'affordable factory space Klang Valley',
      'pocket factory investment ROI'
    ]
  },
  {
    type: 'Investors',
    problem: 'Looking for rental yield from SME factory market',
    keywords: [
      'pocket factory rental yield Malaysia',
      'invest in small factory units',
      'SME factory vs shoplot investment',
      'industrial terrace house investment'
    ]
  },
  {
    type: 'Franchise Owners',
    problem: 'Need production space for franchise operations',
    keywords: [
      'factory for franchise business Malaysia',
      'central kitchen factory for rent',
      'food manufacturing small space',
      'halal certified pocket factory'
    ]
  },
  {
    type: 'E-commerce Sellers',
    problem: 'Need warehouse/storage for online business',
    keywords: [
      'small warehouse for e-commerce Malaysia',
      'storage facility for online business',
      'fulfillment center rental small business',
      'factory vs warehouse for e-commerce'
    ]
  }
];

const languages = [
  { name: 'Malay', reason: 'Local SME owners, first-time manufacturers', reach: '60%' },
  { name: 'Chinese', reason: 'Business families, manufacturing investors', reach: '22%' },
  { name: 'English', reason: 'Corporate SMEs, expat entrepreneurs', reach: '33%' }
];

const faq = [
  {
    q: 'How long until I see results?',
    a: 'Pocket factory is a niche keyword. Faster to rank than general "factory" keywords. Most clients see leads in 30 days.'
  },
  {
    q: 'What keywords do you target?',
    a: 'Niche keywords: "pocket factory for sale Klang", "small factory for rent Shah Alam", "SME factory investment". Also location-based: "pocket factory near [location]".'
  },
  {
    q: 'Do I need 3 languages?',
    a: 'Yes. Malay SME owners search differently from Chinese investors. We capture all buyer segments with 3-language content.'
  },
  {
    q: 'Can I see examples?',
    a: 'Yes. We show you exactly what keywords we\'ll target. You approve before we start. No surprises.'
  }
];
---

<BaseLayout
  title="Best Marketing for Pocket Factory Developers | Get More Buyers"
  description="Pocket factory marketing that works. Problem-aware keywords in 3 languages. Niche SME manufacturing market. RM 1,200/month."
  locale={lang}
>
  <!-- Hero Section -->
  <section class="section bg-gradient-mesh">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <span class="text-accent-500 font-black text-sm uppercase tracking-wider mb-2 block">Pocket Factory Developers</span>
        <h1 class="text-5xl md:text-6xl font-black mb-6 text-white">
          Win Buyers From Google and AI Search
        </h1>
        <p class="text-xl text-secondary-400 mb-8 max-w-3xl mx-auto">
          Our AIEO + local SEO system targets niche terms like <strong>"pocket factory for sale Klang"</strong> so SME manufacturers find you first.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="https://wa.me/60175032281?text=Hi%2C%20I%20develop%20pocket%20factories.%20Interested%20in%20your%20marketing." target="_blank" rel="noopener noreferrer" class="btn btn-primary">
            Try RM399 Trial
          </a>
          <a href="/en/pricing" class="btn btn-secondary">
            See Pricing
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Overview -->
  <section class="section bg-dark">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="card p-8 border-accent-500/50">
          <h2 class="text-2xl font-black mb-6 text-white text-center">Quick Overview</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
            <div class="bg-secondary-800 p-4 rounded-lg">
              <div class="text-secondary-400 mb-1">Pricing</div>
              <div class="text-white font-black text-lg">RM 1,200/month</div>
            </div>
            <div class="bg-secondary-800 p-4 rounded-lg">
              <div class="text-secondary-400 mb-1">Timeline</div>
              <div class="text-white font-black text-lg">30 days</div>
            </div>
            <div class="bg-secondary-800 p-4 rounded-lg">
              <div class="text-secondary-400 mb-1">Languages</div>
              <div class="text-white font-black text-lg">EN / ZH / MS</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- The Problem -->
  <section class="section bg-dark">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="card p-8 md:p-12 border-accent-500/50">
          <h2 class="text-2xl md:text-4xl font-black mb-6 text-center text-white">
            Why Your Pocket Factory Website Gets No Calls
          </h2>

          <div class="prose prose-lg max-w-none prose-invert">
            <ul class="text-secondary-300 text-lg space-y-3">
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>You rank for "factory" (too competitive, big developers dominate)</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>SME owners search "pocket factory for sale [location]" - you don't rank</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>Malay SME owners search "kilang kecil untuk dijual" - you miss these</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>Chinese investors search in Chinese - you don't show up</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Keywords Section -->
  <section class="section bg-secondary-900" id="keywords">
    <div class="container-custom">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-2xl md:text-4xl font-black mb-6 text-center text-white">
          Problem-Aware Keywords (What SME Owners Ask)
        </h2>
        <p class="text-sm text-secondary-400 mb-6 text-center">
          <strong>Problem-aware:</strong> People searching "how to" or comparing options are actively researching. We create content that answers these questions and guides them to you.
        </p>
        <div class="space-y-6">
          {prospectTypes.map((prospect, index) => (
            <div class="card p-6">
              <div class="flex items-start gap-4 mb-4">
                <div class="bg-accent-500 text-white w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0 font-black">
                  {index + 1}
                </div>
                <div>
                  <h4 class="text-lg font-black text-white mb-1">{prospect.type}</h4>
                  <p class="text-sm text-accent-400">Problem: {prospect.problem}</p>
                </div>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                {prospect.keywords.map(kw => (
                  <div class="bg-secondary-800 p-3 rounded">
                    <span class="text-accent-400">"</span>{kw}<span class="text-accent-400">"</span>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- 3-Language Advantage -->
  <section class="section bg-dark">
    <div class="container-custom">
      <h2 class="text-2xl md:text-4xl font-black mb-8 text-center text-white">
        Malaysians Speak 3 Languages
      </h2>
      <div class="max-w-4xl mx-auto">
        <p class="text-lg text-secondary-400 mb-8 text-center">
          English-only websites miss 67% of buyers.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {languages.map(lang => (
            <div class="card p-6">
              <h3 class="text-lg font-black mb-2 text-accent-400">{lang.name}</h3>
              <p class="text-sm text-secondary-400 mb-2">{lang.reason}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="section bg-secondary-900">
    <div class="container-custom">
      <h2 class="text-2xl md:text-4xl font-black mb-8 text-center text-white">
        Questions Pocket Factory Developers Ask
      </h2>
      <div class="max-w-3xl mx-auto space-y-4">
        {faq.map(item => (
          <div class="card">
            <h3 class="text-lg font-black mb-2 text-white">{item.q}</h3>
            <p class="text-secondary-300">{item.a}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gradient-mesh">
    <div class="container-custom">
      <div class="card-disruptive p-12 text-center text-white">
        <h2 class="text-3xl md:text-5xl font-black mb-4">
          Ready to Get More Pocket Factory Buyers?
        </h2>
        <p class="text-xl mb-8 text-secondary-300 max-w-2xl mx-auto">
          Problem-aware keywords. 3 languages. Niche SEO.
          <br>
          <strong>RM 1,200/month. All included.</strong>
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="https://wa.me/60175032281?text=Hi%2C%20I%20develop%20pocket%20factories.%20Interested%20in%20your%20marketing." target="_blank" rel="noopener noreferrer" class="btn btn-success">
            Try RM399 Trial
          </a>
          <a href="/en/pricing" class="btn btn-secondary">
            See Pricing
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Articles -->
  <section class="section bg-secondary-900">
    <div class="container-custom">
      <h2 class="text-2xl font-black mb-6 text-center text-white">Related Property Development</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        <a href="/en/industries/construction/property-developers/shoplot/" class="card p-6 hover:border-accent-500/50 transition-colors">
          <h3 class="font-black mb-2 text-accent-400">Shoplot Developers</h3>
          <p class="text-sm text-secondary-400">SEO for shoplot and commercial property</p>
        </a>
        <a href="/en/industries/construction/property-developers/residential/" class="card p-6 hover:border-accent-500/50 transition-colors">
          <h3 class="font-black mb-2 text-accent-400">Residential Developers</h3>
          <p class="text-sm text-secondary-400">SEO for housing and condominium projects</p>
        </a>
        <a href="/en/services/trilingual-seo" class="card p-6 hover:border-accent-500/50 transition-colors">
          <h3 class="font-black mb-2 text-accent-400">Trilingual SEO</h3>
          <p class="text-sm text-secondary-400">Why 3 languages win more buyers</p>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
