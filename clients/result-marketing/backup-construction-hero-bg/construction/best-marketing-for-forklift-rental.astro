---
import BaseLayout from '../../../../layouts/BaseLayout.astro';

const lang = 'en';

const prospectTypes = [
  {
    type: 'Construction Contractors',
    problem: 'Won project, needs equipment fast',
    keywords: [
      'how to move materials at construction site cheap',
      'diesel vs electric forklift for outdoor construction',
      'buy or rent forklift for 6 month project',
      '3 ton vs 5 ton forklift which one for construction'
    ]
  },
  {
    type: 'Warehouse Managers',
    problem: 'Seasonal peak, expanding operations',
    keywords: [
      'how to handle warehouse peak season without buying forklift',
      'electric forklift vs diesel for warehouse indoor',
      'narrow aisle forklift vs standard forklift warehouse',
      'forklift rental vs hiring temporary workers warehouse'
    ]
  },
  {
    type: 'Logistics Companies',
    problem: 'Peak season, additional vehicles',
    keywords: [
      'how to manage delivery peak season fleet shortage',
      'piggyback forklift vs standalone forklift logistics',
      'lorry mounted forklift vs separate delivery truck',
      'side loader forklift vs standard forklift for logistics'
    ]
  },
  {
    type: 'Manufacturing Facilities',
    problem: 'Production surge, maintenance cover',
    keywords: [
      'how to handle production surge when forklift breaks down',
      'rent forklift while mine in maintenance',
      'buying second hand forklift vs renting new one',
      'forklift leasing vs hire purchase for factory'
    ]
  },
  {
    type: 'Event Organizers',
    problem: 'One-time events, temporary setup',
    keywords: [
      'how to setup exhibition booth without heavy equipment',
      'rent vs buy forklift for one day event',
      'rough terrain forklift vs solid tire forklift for outdoor event',
      'manpower vs forklift rental for event setup'
    ]
  },
  {
    type: 'Small Contractors',
    problem: 'Can\'t afford to buy, need flexibility',
    keywords: [
      'how to get forklift with bad credit',
      'forklift rental with no deposit',
      'daily rental vs monthly rental forklift cost comparison',
      'used forklift vs rental which is cheaper long term'
    ]
  },
  {
    type: 'Foreign Workers',
    problem: 'Language barrier, local supplier',
    keywords: [
      'how to find forklift supplier who speaks mandarin',
      'malay speaking forklift rental company near me',
      'forklift rental process malaysia for foreigners',
      'how to rent forklift in malaysia without local license'
    ]
  }
];

const languages = [
  { name: 'Malay', reason: 'CIDB contractors, warehouse managers, facility operators', reach: '60%' },
  { name: 'Chinese', reason: 'Own construction businesses, make procurement decisions', reach: '22%' },
  { name: 'English', reason: 'Corporate clients, MNCs, international projects', reach: '33%' }
];

const faq = [
  {
    q: 'How long until I see results?',
    a: 'Most clients see leads in 30 days. Some keywords rank faster. SEO grows over time.'
  },
  {
    q: 'What keywords do you target?',
    a: 'Problem-aware questions: "how much to rent forklift for 1 day", "forklift rental with operator", "cheap forklift rental KL". Also location searches: "forklift rental near me".'
  },
  {
    q: 'Do I need 3 languages?',
    a: 'Yes if you want government jobs (Malay) or Chinese business clients. English-only websites miss 2 out of 3 buyer groups.'
  },
  {
    q: 'Can I see examples?',
    a: 'Yes. We show you exactly what keywords we\'ll target. You approve before we start. No surprises.'
  }
];
---

<BaseLayout
  title="Best Marketing for Forklift Rental | Get More Contracts"
  description="Forklift rental marketing that works. Problem-aware keywords in 3 languages. 60+ keywords. RM 1,200/month. Get more rental contracts."
  locale={lang}
>
  <!-- Hero Section -->
  <section class="section bg-gradient-mesh">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <span class="text-accent-500 font-black text-sm uppercase tracking-wider mb-2 block">Forklift Rental Marketing</span>
        <h1 class="text-5xl md:text-6xl font-black mb-6 text-white">
          Win Buyers From Google and AI Search
        </h1>
        <p class="text-xl text-secondary-400 mb-8 max-w-3xl mx-auto">
          Our AIEO + local SEO system targets niche terms like <strong>"how much to rent forklift for 1 day"</strong> so construction companies find you first.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="https://wa.me/60175032281?text=Hi%2C%20I%20run%20a%20forklift%20rental%20business.%20Interested%20in%20your%20marketing." target="_blank" rel="noopener noreferrer" class="btn btn-primary">
            Try RM399 Trial
          </a>
          <a href="/en/pricing" class="btn btn-secondary">
            See Pricing
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Overview -->
  <section class="section bg-dark">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="card p-8 border-accent-500/50">
          <h2 class="text-2xl font-black mb-6 text-white text-center">Quick Overview</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
            <div class="bg-secondary-800 p-4 rounded-lg">
              <div class="text-secondary-400 mb-1">Pricing</div>
              <div class="text-white font-black text-lg">RM 1,200/month</div>
            </div>
            <div class="bg-secondary-800 p-4 rounded-lg">
              <div class="text-secondary-400 mb-1">Timeline</div>
              <div class="text-white font-black text-lg">30 days</div>
            </div>
            <div class="bg-secondary-800 p-4 rounded-lg">
              <div class="text-secondary-400 mb-1">Languages</div>
              <div class="text-white font-black text-lg">EN / ZH / MS</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- The Problem -->
  <section class="section bg-dark">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="card p-8 md:p-12 border-accent-500/50">
          <h2 class="text-2xl md:text-4xl font-black mb-6 text-center text-white">
            Why Your Forklift Rental Website Gets No Calls
          </h2>

          <div class="prose prose-lg max-w-none prose-invert">
            <ul class="text-secondary-300 text-lg space-y-3">
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>You rank for "forklift rental" (too competitive, expensive)</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>Buyers search "forklift rental near [location]" - you don\'t rank</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>Government jobs use Malay "sewa forklif" - you miss these</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>Chinese businesses search in Chinese - you don\'t show up</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Keywords Section -->
  <section class="section bg-secondary-900" id="keywords">
    <div class="container-custom">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-2xl md:text-4xl font-black mb-6 text-center text-white">
          Problem-Aware Keywords (What They Ask)
        </h2>
        <p class="text-sm text-secondary-400 mb-6 text-center">
          <strong>Problem-aware:</strong> People searching "how to" or comparing options are actively researching. We create content that answers these questions and guides them to you.
          <br>
          We create blog content to capture problem-aware searches, then guide them to your rental services.
        </p>
        <div class="space-y-6">
          {prospectTypes.map((prospect, index) => (
            <div class="card p-6">
              <div class="flex items-start gap-4 mb-4">
                <div class="bg-accent-500 text-white w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0 font-black">
                  {index + 1}
                </div>
                <div>
                  <h4 class="text-lg font-black text-white mb-1">{prospect.type}</h4>
                  <p class="text-sm text-accent-400">Problem: {prospect.problem}</p>
                </div>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                {prospect.keywords.map(kw => (
                  <div class="bg-secondary-800 p-3 rounded">
                    <span class="text-accent-400">"</span>{kw}<span class="text-accent-400">"</span>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- 3-Language Advantage -->
  <section class="section bg-dark">
    <div class="container-custom">
      <h2 class="text-2xl md:text-4xl font-black mb-8 text-center text-white">
        Malaysians Speak 3 Languages
      </h2>
      <div class="max-w-4xl mx-auto">
        <p class="text-lg text-secondary-400 mb-8 text-center">
          English-only websites miss 67% of customers.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {languages.map(lang => (
            <div class="card p-6">
              <h3 class="text-lg font-black mb-2 text-accent-400">{lang.name}</h3>
              <p class="text-sm text-secondary-400 mb-2">{lang.reason}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="section bg-secondary-900">
    <div class="container-custom">
      <h2 class="text-2xl md:text-4xl font-black mb-8 text-center text-white">
        Questions Forklift Owners Ask
      </h2>
      <div class="max-w-3xl mx-auto space-y-4">
        {faq.map(item => (
          <div class="card">
            <h3 class="text-lg font-black mb-2 text-white">{item.q}</h3>
            <p class="text-secondary-300">{item.a}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gradient-mesh">
    <div class="container-custom">
      <div class="card-disruptive p-12 text-center text-white">
        <h2 class="text-3xl md:text-5xl font-black mb-4">
          Ready to Get More Rental Contracts?
        </h2>
        <p class="text-xl mb-8 text-secondary-300 max-w-2xl mx-auto">
          Problem-aware keywords. 3 languages. AI engine optimization.
          <br>
          <strong>RM 1,200/month. All included.</strong>
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="https://wa.me/60175032281?text=Hi%2C%20I%20run%20a%20forklift%20rental%20business.%20Interested%20in%20your%20marketing." target="_blank" rel="noopener noreferrer" class="btn btn-success">
            Try RM399 Trial
          </a>
          <a href="/en/pricing" class="btn btn-secondary">
            See Pricing
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Articles -->
  <section class="section bg-secondary-900">
    <div class="container-custom">
      <h2 class="text-2xl font-black mb-6 text-center text-white">Related Industries</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        <a href="/en/industries/construction/best-marketing-for-excavator-rental/" class="card p-6 hover:border-accent-500/50 transition-colors">
          <h3 class="font-black mb-2 text-accent-400">Best Marketing for Excavator Rental</h3>
          <p class="text-sm text-secondary-400">SEO strategies for excavator rental companies</p>
        </a>
        <a href="/en/industries/construction/best-marketing-for-lorry-rental/" class="card p-6 hover:border-accent-500/50 transition-colors">
          <h3 class="font-black mb-2 text-accent-400">Best Marketing for Lorry Rental</h3>
          <p class="text-sm text-secondary-400">SEO strategies for lorry rental companies</p>
        </a>
        <a href="/en/services/trilingual-seo" class="card p-6 hover:border-accent-500/50 transition-colors">
          <h3 class="font-black mb-2 text-accent-400">Trilingual SEO</h3>
          <p class="text-sm text-secondary-400">Why 3 languages win more contracts</p>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
