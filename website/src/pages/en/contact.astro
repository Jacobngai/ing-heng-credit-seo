---
/**
 * English Contact Page
 * Contact Ing Heng Credit for Equipment Financing in Malaysia
 * Target: B2B decision makers, business owners seeking fast equipment financing
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactForm from '../../components/ContactForm.astro';
import CTAButton from '../../components/CTAButton.astro';
import StructuredData from '../../components/StructuredData.astro';
import { generateFAQSchema } from '../../utils/schema';
import { COMPANY_INFO, SITE_CONFIG } from '../../utils/constants';

const lang = 'en';

// LocalBusiness Schema for SEO
const localBusinessSchema = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  '@id': `${SITE_CONFIG.url}/en/contact`,
  name: 'Ing Heng Credit & Leasing Sdn Bhd',
  alternateName: 'Ing Heng Credit',
  description: 'KPKT-licensed equipment financing company in Klang, Selangor. Fast 24-hour approval for excavators, lorries, forklifts, and construction equipment financing.',
  url: `${SITE_CONFIG.url}/en/contact`,
  telephone: COMPANY_INFO.phone.international,
  priceRange: '$$',
  address: {
    '@type': 'PostalAddress',
    streetAddress: COMPANY_INFO.address.street,
    addressLocality: COMPANY_INFO.address.city,
    addressRegion: COMPANY_INFO.address.state,
    postalCode: COMPANY_INFO.address.postcode,
    addressCountry: 'MY',
  },
  geo: {
    '@type': 'GeoCoordinates',
    latitude: '3.0449',
    longitude: '101.4446',
  },
  openingHoursSpecification: [
    {
      '@type': 'OpeningHoursSpecification',
      dayOfWeek: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
      opens: '09:00',
      closes: '17:00',
    },
    {
      '@type': 'OpeningHoursSpecification',
      dayOfWeek: 'Saturday',
      opens: '09:00',
      closes: '13:00',
    },
  ],
  contactPoint: {
    '@type': 'ContactPoint',
    telephone: COMPANY_INFO.phone.international,
    contactType: 'Customer Service',
    areaServed: 'MY',
    availableLanguage: ['English', 'Mandarin', 'Malay'],
    hoursAvailable: {
      '@type': 'OpeningHoursSpecification',
      dayOfWeek: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
      opens: '09:00',
      closes: '17:00',
    },
  },
  sameAs: [COMPANY_INFO.social.facebook],
  hasMap: COMPANY_INFO.address.googleMapsUrl,
};

// FAQ Schema
const faqItems = [
  {
    question: 'How fast can I get equipment financing approval?',
    answer: 'We provide approval decisions within 24 hours for most applications. In urgent cases, we can provide same-day preliminary approval. Our streamlined process requires minimal documentation compared to traditional banks.',
  },
  {
    question: 'What documents do I need for equipment financing?',
    answer: 'For business financing, you need: (1) Business registration documents (SSM), (2) 3-6 months bank statements, (3) Latest financial statements, (4) IC copy of directors, and (5) Equipment quotation. Self-employed individuals may submit alternative income documentation.',
  },
  {
    question: 'What are your business hours?',
    answer: 'We are open Monday to Friday from 9:00 AM to 5:00 PM, and Saturday from 9:00 AM to 1:00 PM. We are closed on Sundays and public holidays. For urgent inquiries, you can WhatsApp us at +60175700889.',
  },
  {
    question: 'Do you provide financing for used equipment?',
    answer: 'Yes, we finance both new and used equipment including excavators, lorries, forklifts, and construction machinery. Used equipment financing is subject to age and condition assessment. Contact us for eligibility evaluation.',
  },
  {
    question: 'Which areas do you serve in Malaysia?',
    answer: 'While our office is located in Klang, Selangor, we serve businesses throughout Malaysia including KL, Shah Alam, Port Klang, Subang Jaya, Petaling Jaya, and all major cities across the country. Remote application and approval available.',
  },
  {
    question: 'Can I visit your office for consultation?',
    answer: 'Yes, walk-in consultations are welcome during business hours. However, we recommend scheduling an appointment via WhatsApp (+60175700889) to ensure our financing experts are available to assist you immediately.',
  },
  {
    question: 'What is your response time for inquiries?',
    answer: 'WhatsApp and phone inquiries are typically responded to within 2 hours during business hours. Email inquiries receive responses within 24 hours. For fastest service, we recommend contacting us via WhatsApp.',
  },
];

const faqSchema = generateFAQSchema(faqItems);
---

<BaseLayout
  title="Contact Ing Heng Credit - Equipment Financing Malaysia | +60175700889"
  description="Contact Ing Heng Credit for fast equipment financing approval. Located in Klang, Selangor. WhatsApp +60175700889 for 24-hour approval. Open Mon-Fri 9AM-5PM, Sat 9AM-1PM."
  lang={lang}
  keywords={[
    'contact equipment financing Malaysia',
    'Ing Heng Credit contact',
    'equipment financing Klang',
    'excavator financing contact',
    'hire purchase Malaysia contact',
    'business loan Klang Selangor',
    'equipment financing near me',
    'Klang equipment financing office',
  ]}
>
  <StructuredData schema={localBusinessSchema} />
  <StructuredData schema={faqSchema} />

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary to-secondary text-white py-20">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          Contact Us for Fast Equipment Financing Approval
        </h1>
        <p class="text-xl md:text-2xl mb-8 opacity-90">
          Get approved in 24 hours. Speak with our financing experts today.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <CTAButton
            text="WhatsApp Us Now"
            link={COMPANY_INFO.whatsapp.link}
            variant="accent"
            size="large"
            icon="whatsapp"
            external={true}
          />
          <CTAButton
            text="Call +60175700889"
            link={`tel:${COMPANY_INFO.phone.international}`}
            variant="outline-white"
            size="large"
            icon="phone"
          />
        </div>
        <div class="mt-8 text-sm opacity-80">
          <p>Average response time: 2 hours | Approval time: 24 hours</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Contact Options -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Get in Touch</h2>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
          Multiple ways to reach us. Choose what's most convenient for you.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <!-- WhatsApp Card -->
        <a
          href={COMPANY_INFO.whatsapp.link}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-green-50 border-2 border-green-500 rounded-lg p-8 text-center hover:shadow-xl transition-shadow group"
        >
          <div class="inline-flex items-center justify-center w-16 h-16 bg-green-500 text-white rounded-full mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2 text-green-800">WhatsApp (Fastest)</h3>
          <p class="text-green-700 font-semibold mb-2">{COMPANY_INFO.phone.display}</p>
          <p class="text-sm text-gray-600">Instant response during business hours</p>
        </a>

        <!-- Phone Card -->
        <a
          href={`tel:${COMPANY_INFO.phone.international}`}
          class="bg-blue-50 border-2 border-blue-500 rounded-lg p-8 text-center hover:shadow-xl transition-shadow group"
        >
          <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-500 text-white rounded-full mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2 text-blue-800">Call Us</h3>
          <p class="text-blue-700 font-semibold mb-1">{COMPANY_INFO.phone.display}</p>
          <p class="text-blue-700 font-semibold mb-2">{COMPANY_INFO.phone.office}</p>
          <p class="text-sm text-gray-600">Direct line to our team</p>
        </a>

        <!-- Email Card -->
        <a
          href={`mailto:${COMPANY_INFO.email}`}
          class="bg-orange-50 border-2 border-orange-500 rounded-lg p-8 text-center hover:shadow-xl transition-shadow group"
        >
          <div class="inline-flex items-center justify-center w-16 h-16 bg-orange-500 text-white rounded-full mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2 text-orange-800">Email Us</h3>
          <p class="text-orange-700 font-semibold mb-2 break-all">{COMPANY_INFO.email}</p>
          <p class="text-sm text-gray-600">Response within 24 hours</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="section bg-gray-50">
    <div class="container-custom max-w-4xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Send Us a Message</h2>
        <p class="text-gray-600 text-lg">
          Fill out the form below and we'll get back to you within 24 hours with a customized financing solution
        </p>
      </div>
      <ContactForm lang={lang} />
    </div>
  </section>

  <!-- Office Location & Map -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Visit Our Office</h2>
        <p class="text-gray-600 text-lg">
          Located in Klang, Selangor - Easy access from KL, Shah Alam, and Port Klang
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <!-- Office Details -->
        <div class="space-y-8">
          <div>
            <h3 class="text-2xl font-bold mb-6 text-primary">Ing Heng Credit & Leasing Sdn Bhd</h3>

            <!-- Address -->
            <div class="flex items-start space-x-4 mb-6">
              <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h4 class="font-bold mb-2">Address</h4>
                <p class="text-gray-600">{COMPANY_INFO.address.full}</p>
              </div>
            </div>

            <!-- Business Hours -->
            <div class="flex items-start space-x-4 mb-6">
              <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h4 class="font-bold mb-2">Business Hours</h4>
                <p class="text-gray-600">{COMPANY_INFO.hours.weekdays.display}</p>
                <p class="text-gray-600">{COMPANY_INFO.hours.saturday.display}</p>
                <p class="text-gray-600">{COMPANY_INFO.hours.sunday.display}</p>
              </div>
            </div>

            <!-- Contact -->
            <div class="flex items-start space-x-4 mb-6">
              <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h4 class="font-bold mb-2">Phone</h4>
                <p class="text-gray-600">
                  <a href={`tel:${COMPANY_INFO.phone.international}`} class="hover:text-primary">{COMPANY_INFO.phone.display}</a>
                </p>
                <p class="text-gray-600">
                  <a href={`tel:+60333248899`} class="hover:text-primary">{COMPANY_INFO.phone.office}</a>
                </p>
              </div>
            </div>
          </div>

          <!-- Directions -->
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
            <h4 class="font-bold mb-3 text-blue-900">How to Get Here</h4>
            <ul class="space-y-2 text-sm text-blue-800">
              <li class="flex items-start">
                <svg class="w-5 h-5 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                15 minutes from Klang Sentral
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                30 minutes from Shah Alam
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                40 minutes from Kuala Lumpur
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Ample parking available
              </li>
            </ul>
          </div>

          <a
            href={COMPANY_INFO.address.googleMapsUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary w-full"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            Open in Google Maps
          </a>
        </div>

        <!-- Map Placeholder -->
        <div class="bg-gray-200 rounded-lg overflow-hidden" style="height: 500px;">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3984.3448!2d101.4424!3d3.0449!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zM8KwMDInNDEuNiJOIDEwMcKwMjYnMzMuOCJF!5e0!3m2!1sen!2smy!4v1234567890"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Ing Heng Credit Office Location Map"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section bg-gray-50">
    <div class="container-custom max-w-4xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Frequently Asked Questions</h2>
        <p class="text-gray-600 text-lg">
          Quick answers to common questions about contacting us
        </p>
      </div>

      <div class="space-y-6">
        {faqItems.map((faq, index) => (
          <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
            <h3 class="text-xl font-bold mb-3 text-primary" itemprop="name">
              {index + 1}. {faq.question}
            </h3>
            <div itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
              <p class="text-gray-600 leading-relaxed" itemprop="text">
                {faq.answer}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <section class="section bg-gradient-to-r from-primary to-secondary text-white">
    <div class="container-custom text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to Get Started?</h2>
      <p class="text-xl mb-8 opacity-90 max-w-2xl mx-auto">
        Don't wait. Contact us now and get your equipment financing approved within 24 hours.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <CTAButton
          text="WhatsApp for Instant Quote"
          link={COMPANY_INFO.whatsapp.link}
          variant="accent"
          size="large"
          icon="whatsapp"
          external={true}
        />
        <CTAButton
          text="Call Us Now"
          link={`tel:${COMPANY_INFO.phone.international}`}
          variant="outline-white"
          size="large"
          icon="phone"
        />
      </div>
      <div class="mt-8 text-sm opacity-80">
        <p>Open Monday-Friday 9AM-5PM, Saturday 9AM-1PM</p>
      </div>
    </div>
  </section>
</BaseLayout>
