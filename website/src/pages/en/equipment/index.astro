// Breadcrumbs
const breadcrumbs = [
  { label: 'Home', url: '/en' },
  { label: 'Equipment Financing', url: '/en/equipment' },
];

// Equipment Categories
const equipmentCategories = [
  {
    name: 'Construction Equipment',
    description: 'Heavy machinery for earthworks, excavation, and building projects',
