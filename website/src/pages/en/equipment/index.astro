---
/**
 * Equipment Index Page - English
 * Catalog page showcasing all equipment types available for financing
 * SEO: Equipment financing Malaysia, heavy equipment financing
 */

import BaseLayout from '../../../layouts/BaseLayout.astro';
import Hero from '../../../components/Hero.astro';
import BenefitCard from '../../../components/BenefitCard.astro';
import StepCard from '../../../components/StepCard.astro';
import ProductCard from '../../../components/ProductCard.astro';
import FAQItem from '../../../components/FAQItem.astro';
import Calculator from '../../../components/Calculator.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import { encodeJSONLD } from '../../../utils/schema';

const lang = 'en';

// SEO Data
const pageTitle = 'Equipment Financing Malaysia | Excavator, Lorry, Forklift, Crane Financing';
const pageDescription = 'Finance any construction, logistics, or industrial equipment in Malaysia. Fast 2-hour approval, 95% approval rate, flexible terms. Excavators, lorries, forklifts, cranes & more.';
