  <!-- Final CTA -->
  <section class="section bg-primary-ultralight">
    <div class="container-custom text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-primary mb-6">
        Ready to Finance Your Equipment?
      </h2>
      <p class="text-xl text-gray-700 mb-8 max-w-2xl mx-auto">
        Get fast approval in 2 hours. Join 4,000+ businesses who chose Ing Heng Credit for their equipment financing needs.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
