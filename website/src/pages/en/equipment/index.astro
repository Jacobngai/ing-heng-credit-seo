      </div>

      <div class="grid md:grid-cols-4 gap-8">
        {steps.map((step) => (
          <StepCard
            stepNumber={step.stepNumber}
            icon={step.icon}
            title={step.title}
            description={step.description}
          />
        ))}
      </div>

