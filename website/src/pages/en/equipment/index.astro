  },
  {
    name: 'Mobile Crane',
    description: 'Hydraulic cranes (5-100 tons) for construction, infrastructure, and heavy lifting projects.',
    image: '/images/equipment/crane.jpg',
    priceRange: 'RM 300,000 - RM 2,000,000',
    monthlyFrom: 9000,
