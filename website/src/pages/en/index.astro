---
/**
 * English Homepage
 * Equipment Financing Malaysia - Ing Heng Credit & Leasing
 * Target Audience: B2B decision makers, warehouse managers, business owners
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import BenefitCard from '../../components/BenefitCard.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import ProductCard from '../../components/ProductCard.astro';
import ContactForm from '../../components/ContactForm.astro';
import CTAButton from '../../components/CTAButton.astro';
import StructuredData from '../../components/StructuredData.astro';
import { generateOrganizationSchema } from '../../utils/schema';
import { COMPANY_INFO } from '../../utils/constants';

const lang = 'en';
const organizationSchema = generateOrganizationSchema();
---

<BaseLayout
  title="Equipment Financing Malaysia | Fast Approval in 24 Hours | Ing Heng Credit"
  description="Get equipment financing with 95% approval rate. Serving construction, logistics & manufacturing since 1985. Excavators, lorries, forklifts - WhatsApp for instant quote."
  lang={lang}
  keywords={[
    'equipment financing Malaysia',
    'excavator financing',
    'lorry financing',
    'forklift financing',
    'construction equipment loan',
    'business loan Malaysia',
    'hire purchase Malaysia',
    'equipment leasing Klang'
  ]}
>
  <StructuredData schema={organizationSchema} />

  <!-- Hero Section -->
  <Hero
    title="Frustrated with Equipment Financing Issues?"
    subtitle="Get Approved in 24 Hours with Malaysia's Most Trusted Equipment Financing Partner Since 1985"
    ctaText="Get Free Quote Now"
    ctaLink="/en/contact"
    ctaSecondaryText="WhatsApp Us"
    ctaSecondaryLink={COMPANY_INFO.whatsapp.link}
    lang={lang}
    trustSignals={['40+ Years Experience', 'KPKT Licensed', '95% Approval Rate', '4,000+ Companies Served']}
    backgroundImage="/images/hero-equipment-bg.jpg"
  />

  <!-- About Us Section -->
  <section class="section bg-gray-50">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Since 1985, Your Trusted Financial Partner</h2>
        <p class="text-lg text-gray-600 leading-relaxed mb-4">
          Ing Heng Credit & Leasing has been helping entrepreneurs, self-employed professionals,
          and businesses across Malaysia solve their equipment financing challenges for over 40 years.
        </p>
        <p class="text-lg text-gray-600 leading-relaxed">
          As a KPKT-licensed financial company, we specialize in providing fast, affordable, and flexible
          financing solutions for construction equipment, logistics vehicles, and industrial machinery.
        </p>
      </div>

      <!-- Stats Section -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
        <div class="text-center bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow">
          <div class="text-4xl font-bold text-primary mb-2">40+</div>
          <div class="text-gray-600 font-medium">Years Experience</div>
        </div>
        <div class="text-center bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow">
          <div class="text-4xl font-bold text-primary mb-2">4,000+</div>
          <div class="text-gray-600 font-medium">Companies Served</div>
        </div>
        <div class="text-center bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow">
          <div class="text-4xl font-bold text-primary mb-2">95%</div>
          <div class="text-gray-600 font-medium">Approval Rate</div>
        </div>
        <div class="text-center bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow">
          <div class="text-4xl font-bold text-primary mb-2">24h</div>
          <div class="text-gray-600 font-medium">Fast Approval</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="section">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Our Services</h2>
        <p class="text-gray-600 max-w-2xl mx-auto text-lg">
          Comprehensive financing solutions designed to help your business acquire the equipment it needs to grow
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <ServiceCard
          title="Hire Purchase Financing"
          description="Asset financing that allows your firm to possess equipment through flexible monthly payments. Perfect for excavators, lorries, forklifts, and all business equipment. Own your assets while maintaining healthy cash flow."
          icon="hire"
          link="/en/services/hire-purchase"
          lang={lang}
        />
        <ServiceCard
          title="Loan Financing"
          description="Customized business loans trusted by over 4,000 companies across Malaysia. Get the working capital you need with competitive rates, fast approval, and flexible repayment terms tailored to your business cycle."
          icon="leasing"
          link="/en/services/loan-financing"
          lang={lang}
        />
        <ServiceCard
          title="Insurance Service"
          description="Comprehensive insurance coverage for personal, business, and motor needs. Protect your valuable equipment investments and business operations with trusted insurance partners and competitive premiums."
          icon="equipment"
          link="/en/services/insurance"
          lang={lang}
        />
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="section bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Why Choose Ing Heng Credit?</h2>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
          We make equipment financing simple, fast, and affordable for Malaysian businesses
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-6">
        <BenefitCard
          title="Government Approved"
          description="KPKT licensed financial company operating since 1985 with full regulatory compliance"
          icon="check-badge"
        />
        <BenefitCard
          title="Affordable Rates"
          description="Competitive interest rates starting from 2.88% p.a. tailored to your business needs"
          icon="percent"
        />
        <BenefitCard
          title="Convenient Location"
          description="Located in Klang, Selangor with easy access from KL, Shah Alam, and Port Klang"
          icon="location"
        />
        <BenefitCard
          title="Flexible Financing"
          description="Customized payment plans from 12 to 60 months with minimal down payment"
          icon="calendar"
        />
        <BenefitCard
          title="Free Consultation"
          description="Expert financial advice at no cost in English, Mandarin, and Bahasa Malaysia"
          icon="chat"
        />
      </div>
    </div>
  </section>

  <!-- Products Section -->
  <section class="section">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Our Products</h2>
        <p class="text-gray-600 text-lg">
          Specialized financing solutions for every business need
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-6">
        <ProductCard
          name="Business Loan"
          description="Working capital for growth and expansion"
          features={['Up to RM 500K', 'Fast approval in 24h', 'Flexible terms 12-60 months']}
          link="/en/products/business-loan"
          lang={lang}
        />
        <ProductCard
          name="Hire Purchase"
          description="Own equipment with manageable monthly payments"
          features={['New & used equipment', 'Up to 60 months tenure', 'Low down payment from 10%']}
          link="/en/products/hire-purchase"
          lang={lang}
        />
        <ProductCard
          name="Hawker Loan"
          description="Support for food entrepreneurs and small vendors"
          features={['Quick processing', 'Small business focus', 'Competitive rates']}
          link="/en/products/hawker-loan"
          lang={lang}
        />
        <ProductCard
          name="SME Loan"
          description="Empower small and medium enterprises"
          features={['Tailored solutions', 'Growth support', 'Expert guidance']}
          link="/en/products/sme-loan"
          lang={lang}
        />
        <ProductCard
          name="Personal Loan"
          description="Personal financing starting from 1%"
          features={['From RM 1,000', 'Fast cash approval', 'Simple process']}
          link="/en/products/personal-loan"
          lang={lang}
        />
      </div>
    </div>
  </section>

  <!-- Equipment We Finance Section -->
  <section class="section bg-primary text-white">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Equipment We Finance</h2>
        <p class="text-xl opacity-90">
          From construction to logistics, we finance all types of business equipment
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="bg-white/10 backdrop-blur-sm p-6 rounded-lg">
          <h3 class="text-xl font-bold mb-4">Construction Equipment</h3>
          <ul class="space-y-2 opacity-90">
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Excavators
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Bulldozers
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Road Rollers
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Concrete Mixers
            </li>
          </ul>
        </div>

        <div class="bg-white/10 backdrop-blur-sm p-6 rounded-lg">
          <h3 class="text-xl font-bold mb-4">Logistics & Transportation</h3>
          <ul class="space-y-2 opacity-90">
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Lorries & Trucks
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Container Trucks
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Cargo Vans
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Forklifts
            </li>
          </ul>
        </div>

        <div class="bg-white/10 backdrop-blur-sm p-6 rounded-lg">
          <h3 class="text-xl font-bold mb-4">Industrial Equipment</h3>
          <ul class="space-y-2 opacity-90">
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Generators
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Compressors
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Welding Machines
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Warehouse Equipment
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gradient-to-r from-primary to-secondary text-white">
    <div class="container-custom text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to Get Your Equipment?</h2>
      <p class="text-xl mb-8 opacity-90 max-w-2xl mx-auto">
        Join 4,000+ businesses who trust Ing Heng Credit for their financing needs.
        Get approved in 24 hours with our simple application process.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <CTAButton
          text="Contact Us on WhatsApp"
          link={COMPANY_INFO.whatsapp.link}
          variant="accent"
          size="large"
          icon="whatsapp"
        />
        <CTAButton
          text="Calculate Monthly Payment"
          link="/en/calculator"
          variant="outline-white"
          size="large"
          icon="calculator"
        />
      </div>
      <div class="mt-8 text-sm opacity-80">
        <p>Or call us directly: <a href={`tel:${COMPANY_INFO.phone.international}`} class="underline hover:text-accent">{COMPANY_INFO.phone.display}</a></p>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="section bg-gray-50">
    <div class="container-custom max-w-4xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Get Your Free Quote Today</h2>
        <p class="text-gray-600 text-lg">
          Fill out the form below and our financing experts will contact you within 24 hours with a customized quote
        </p>
      </div>
      <ContactForm lang={lang} />
    </div>
  </section>

  <!-- Trust Section -->
  <section class="section">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold mb-6">Trusted by Malaysian Businesses Since 1985</h2>
        <p class="text-gray-600 text-lg leading-relaxed">
          From small contractors to large logistics companies, we've helped thousands of businesses
          acquire the equipment they need to succeed. Our commitment to fast approvals, competitive rates,
          and exceptional customer service has made us the preferred choice for equipment financing in Klang
          and throughout Selangor.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
