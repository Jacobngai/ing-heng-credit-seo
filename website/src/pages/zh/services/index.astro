  },
  {
    question: '租购与普通贷款的优势是什么？',
    answer: '租购允许最后一期付款后拥有设备，享有税务扣除和固定月付便于规划。贷款融资则提供更多灵活性，可提前结清和再融资机会。'
  }
];

// Service Schema
const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'FinancialService',
  name: '马来西亚设备融资服务',
  description: '为建筑、物流和工业设备提供全面融资服务，快速批准和灵活条款',
  provider: {
    '@type': 'Organization',
    name: 'Ing Heng Credit & Leasing'
  },
  areaServed: {
    '@type': 'Country',
    name: 'Malaysia'
  },
  hasOfferCatalog: {
    '@type': 'OfferCatalog',
    name: '融资服务选项',
    itemListElement: services.map((service) => ({
      '@type': 'Offer',
      itemOffered: {
        '@type': 'Service',
        name: service.name,
        description: service.description
      }
    }))
  }
};

// FAQ Schema
const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqs.map((faq) => ({
    '@type': 'Question',
    name: faq.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: faq.answer,
    },
  })),
};
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  lang={lang}
  keywords={keywords}
  ogType="website"
>
  <!-- Structured Data -->
  <Fragment slot="head">
    <script type="application/ld+json" set:html={encodeJSONLD(serviceSchema)} />
    <script type="application/ld+json" set:html={encodeJSONLD(faqSchema)} />
  </Fragment>

  <!-- Breadcrumbs -->
  <div class="container-custom py-4">
    <Breadcrumbs items={breadcrumbs} lang={lang} />
  </div>

  <!-- Hero Section -->
  <Hero
    title="马来西亚最全面的设备融资服务"
    subtitle="租购、贷款与保险 | 95% 批准率 | 灵活的12-60个月期限 | 多语言支持"
    ctaText="获取免费报价"
    ctaLink="https://wa.me/60175700889?text=您好！我想获取设备融资的报价。"
    ctaSecondaryText="致电：017-570 0889"
    ctaSecondaryLink="tel:+60175700889"
    backgroundImage="/images/services-hero.jpg"
    lang={lang}
    trustSignals={['40年经验', 'KPKT持牌', '95% 批准率', '24小时快速批准']}
  />

  <!-- Services Overview -->
  <section class="section bg-primary-light">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-black mb-4">
          我们的服务
        </h2>
        <p class="text-xl text-gray-600">
          满足您所有设备需求的完整融资解决方案
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {services.map((service) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
            <!-- Service Header -->
            <div class="bg-secondary text-white p-6">
              <div class="text-5xl mb-3">{service.icon}</div>
              <h3 class="text-2xl font-bold mb-2">{service.name}</h3>
              {service.badge && (
                <span class="inline-block bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full text-sm font-semibold">
                  {service.badge}
                </span>
              )}
            </div>

            <!-- Service Content -->
            <div class="p-6">
              <p class="text-gray-600 mb-6">{service.description}</p>

              <!-- Features -->
              <div class="mb-6">
                <h4 class="font-bold text-primary mb-3">主要特点：</h4>
                <ul class="space-y-2">
                  {service.features.map((feature) => (
                    <li class="text-sm text-gray-700 flex items-start space-x-2">
                      <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <!-- Benefits -->
              <div class="mb-6">
                <h4 class="font-bold text-primary mb-3">优势：</h4>
                <ul class="space-y-2">
                  {service.benefits.map((benefit) => (
                    <li class="text-sm text-gray-700 flex items-start space-x-2">
                      <svg class="w-5 h-5 text-blue-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      <span>{benefit}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <!-- CTA Button -->
              <a
                href={service.link}
                class="block w-full text-center bg-primary hover:bg-secondary text-white font-bold py-3 px-6 rounded-lg transition-colors"
              >
                了解更多 →
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="section bg-primary-ultralight">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-black mb-4">
