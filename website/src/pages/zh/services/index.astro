      </div>

      <div class="grid md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-5xl font-bold mb-2">95%</div>
          <div class="text-lg opacity-90">批准率</div>
        </div>
        <div>
          <div class="text-5xl font-bold mb-2">24小时</div>
          <div class="text-lg opacity-90">批准时间</div>
        </div>
        <div>
          <div class="text-5xl font-bold mb-2">4,000+</div>
          <div class="text-lg opacity-90">已融资公司</div>
        </div>
        <div>
          <div class="text-5xl font-bold mb-2">40年</div>
          <div class="text-lg opacity-90">行业经验</div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-black mb-4">
          常见问题
        </h2>
        <p class="text-xl text-gray-600">
