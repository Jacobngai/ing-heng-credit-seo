  </section>

  <!-- Industries We Serve -->
  <section class="section bg-primary-light">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-black mb-4">
          我们服务的行业
        </h2>
        <p class="text-xl text-gray-600">
