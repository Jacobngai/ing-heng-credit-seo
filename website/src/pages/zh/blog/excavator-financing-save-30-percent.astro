import BaseLayout from '../../../layouts/BaseLayout.astro';
import Hero from '../../../components/Hero.astro';
import BenefitCard from '../../../components/BenefitCard.astro';
import FAQItem from '../../../components/FAQItem.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import Calculator from '../../../components/Calculator.astro';
import { generateArticleSchema, generateFAQSchema, encodeJSONLD } from '../../../utils/schema';

const lang = 'zh';

// SEO Data - Chinese keywords
const pageTitle = '挖掘机融资：承包商如何节省30%设备成本 | 英兴信贷';
const pageDescription = '发现智能挖掘机融资如何帮助承包商节省高达30%的成本。学习经过验证的策略、投资回报率计算以及马来西亚承包商的真实案例研究。';
const keywords = ['挖掘机融资马来西亚', '工程机械贷款', '承包商设备融资', '挖掘机分期付款', '建筑设备省钱', '挖掘机投资回报率'];

// Breadcrumbs
const breadcrumbs = [
  { label: '首页', url: '/zh' },
  { label: '博客', url: '/zh/blog' },
  { label: '挖掘机融资节省策略', url: '/zh/blog/excavator-financing-save-30-percent' },
];

