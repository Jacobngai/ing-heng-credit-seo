// Product Schema
const productSchema = generateProductSchema({
  name: 'Pembiayaan Forklift Malaysia',
  description: 'Perkhidmatan pembiayaan forklift profesional untuk operasi gudang. Miliki peralatan dengan kos lebih rendah daripada sewa. Kelulusan pantas, terma fleksibel.',
  imageUrl: 'https://ingheng-credit.vercel.app/images/forklift-financing.jpg',
  category: 'Financial Service - Equipment Financing',
  offers: {
    price: '50000',
    currency: 'MYR',
    availability: 'https://schema.org/InStock',
  },
});

// FAQ Schema
const faqSchema = generateFAQSchema(faqs);
