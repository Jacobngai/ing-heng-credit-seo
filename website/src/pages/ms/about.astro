// Mengapa Pilih Kami
const whyChooseUs = [
  { icon: 'clock', title: 'Kelulusan 24 Jam', description: 'Pemprosesan pantas dengan keputusan hari yang sama untuk kes mendesak' },
  { icon: 'percentage', title: 'Kadar Kelulusan 95%', description: 'Kadar kelulusan terkemuka industri - kami lebih kerap berkata "YA"' },
  { icon: 'shield', title: 'Berlesen KPKT', description: 'Penyedia perkhidmatan kewangan yang diluluskan kerajaan sejak 1995' },
  { icon: 'calendar', title: 'Tempoh Fleksibel 12-60 Bulan', description: 'Pelan pembayaran disesuaikan mengikut aliran tunai anda' },
  { icon: 'users', title: '4,000+ Syarikat Berkhidmat', description: 'Dipercayai oleh perniagaan di seluruh Malaysia selama 40 tahun' },
  { icon: 'location', title: 'Lokasi Lembah Klang', description: 'Lokasi mudah melayani KL, Selangor, dan seluruh negara' },
];

// Kawasan Perkhidmatan
const serviceAreas = [
  'Lembah Klang (Klang, Shah Alam, Petaling Jaya)',
  'Kuala Lumpur & Selangor',
  'Johor Bahru & Rantau Selatan',
  'Pulau Pinang & Rantau Utara',
