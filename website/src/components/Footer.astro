---
/**
 * Footer Component
 * Company information, navigation, contact details, and trust badges
 */

import type { Locale } from '../utils/i18n';
import { t } from '../utils/i18n';
import { COMPANY_INFO, NAV_LINKS } from '../utils/constants';

interface Props {
  lang: Locale;
}

const { lang } = Astro.props;

const currentYear = new Date().getFullYear();

// Organize navigation links by sections
const servicesLinks = [
  { href: `/${lang}/services/leasing`, label: 'Equipment Leasing' },
  { href: `/${lang}/services/hire-purchase`, label: 'Hire Purchase' },
  { href: `/${lang}/services/refinancing`, label: 'Refinancing' },
];

const companyLinks = [
  { href: `/${lang}/about`, label: t('nav.about', lang) },
  { href: `/${lang}/contact`, label: t('nav.contact', lang) },
  { href: `/${lang}/blog`, label: t('nav.blog', lang) },
];

const equipmentLinks = [
  { href: `/${lang}/equipment/excavator`, label: 'Excavators' },
  { href: `/${lang}/equipment/lorry`, label: 'Lorries' },
  { href: `/${lang}/equipment/forklift`, label: 'Forklifts' },
];
---

<footer class="bg-gray-900 text-gray-300">
  <!-- Main Footer Content -->
  <div class="container-custom py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Company Info -->
      <div class="space-y-4">
        <img
          src="/images/logo-white.svg"
          alt={COMPANY_INFO.name}
          class="h-10 w-auto"
          width="150"
          height="40"
        />
        <p class="text-sm leading-relaxed">
          {COMPANY_INFO.tagline}
        </p>
        <div class="space-y-2">
          <p class="text-xs font-semibold text-white">Trust Badges</p>
          <div class="flex flex-wrap gap-2">
            <span class="badge badge-accent text-xs">40 Years Experience</span>
            <span class="badge badge-primary text-xs">KPKT Licensed</span>
            <span class="badge badge-secondary text-xs">95% Approval</span>
          </div>
        </div>
      </div>

      <!-- Services Links -->
      <div>
        <h3 class="text-white font-bold text-lg mb-4">{t('footer.services', lang)}</h3>
        <ul class="space-y-2">
          {servicesLinks.map((link) => (
            <li>
              <a href={link.href} class="hover:text-white transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h3 class="text-white font-bold text-lg mb-4">{t('footer.company', lang)}</h3>
        <ul class="space-y-2">
          {companyLinks.map((link) => (
            <li>
              <a href={link.href} class="hover:text-white transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
          {equipmentLinks.map((link) => (
            <li>
              <a href={link.href} class="hover:text-white transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-white font-bold text-lg mb-4">{t('footer.contact', lang)}</h3>
        <ul class="space-y-3 text-sm">
          <!-- Phone -->
          <li class="flex items-start space-x-2">
            <svg class="w-5 h-5 text-secondary mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <div>
              <a href={`tel:${COMPANY_INFO.phone.international}`} class="hover:text-white">
                {COMPANY_INFO.phone.display}
              </a>
              <br />
              <a href={`tel:${COMPANY_INFO.phone.office}`} class="hover:text-white">
                {COMPANY_INFO.phone.office}
              </a>
            </div>
          </li>

          <!-- WhatsApp -->
          <li class="flex items-start space-x-2">
            <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
            <a href={COMPANY_INFO.whatsapp.link} target="_blank" rel="noopener noreferrer" class="hover:text-white">
              {COMPANY_INFO.phone.display}
            </a>
          </li>

          <!-- Email -->
          <li class="flex items-start space-x-2">
            <svg class="w-5 h-5 text-secondary mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <a href={`mailto:${COMPANY_INFO.email}`} class="hover:text-white break-all">
              {COMPANY_INFO.email}
            </a>
          </li>

          <!-- Address -->
          <li class="flex items-start space-x-2">
            <svg class="w-5 h-5 text-secondary mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <a href={COMPANY_INFO.address.googleMapsUrl} target="_blank" rel="noopener noreferrer" class="hover:text-white">
              {COMPANY_INFO.address.full}
            </a>
          </li>
        </ul>

        <!-- Business Hours -->
        <div class="mt-6">
          <h4 class="text-white font-semibold text-sm mb-2">{t('contact.info.hours', lang)}</h4>
          <ul class="space-y-1 text-xs">
            <li>{t('contact.businessHours.weekdays', lang)}</li>
            <li>{t('contact.businessHours.saturday', lang)}</li>
            <li>{t('contact.businessHours.sunday', lang)}</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-gray-800">
    <div class="container-custom py-6">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <!-- Copyright -->
        <p class="text-sm text-gray-500 text-center md:text-left">
          {t('footer.copyright', lang).replace('2025', currentYear.toString())}
        </p>

        <!-- Social Links -->
        <div class="flex items-center space-x-6">
          <a
            href={COMPANY_INFO.social.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-500 hover:text-white transition-colors"
            aria-label="Facebook"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>

          <span class="text-gray-600">|</span>

          <a href={`/${lang}/privacy`} class="text-sm text-gray-500 hover:text-white transition-colors">
            {t('footer.privacy', lang)}
          </a>

          <a href={`/${lang}/terms`} class="text-sm text-gray-500 hover:text-white transition-colors">
            {t('footer.terms', lang)}
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
