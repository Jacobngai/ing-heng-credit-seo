---
/**
 * Header Component
 * Responsive navigation with mobile menu, language switcher, and WhatsApp CTA
 */

import type { Locale } from '../utils/i18n';
import { t } from '../utils/i18n';
import { NAV_LINKS, COMPANY_INFO, EQUIPMENT_NAV_ITEMS, BLOG_NAV_ITEMS } from '../utils/constants';
import LanguageSwitcher from './LanguageSwitcher.astro';
import EquipmentDropdown from './EquipmentDropdown.astro';
import BlogDropdown from './BlogDropdown.astro';

interface Props {
  lang: Locale;
  currentPath: string;
}

const { lang, currentPath } = Astro.props;

// Remove language prefix from path for comparison
const pathWithoutLang = currentPath.replace(`/${lang}`, '').replace(/^\/+|\/+$/g, '') || '/';

// Check if link is active
function isActive(href: string): boolean {
  if (href === '/') {
    return pathWithoutLang === '/' || pathWithoutLang === '';
  }
  return pathWithoutLang.startsWith(href.replace('/', ''));
}
---

<header class="sticky top-0 z-40 transition-all duration-300 bg-white border-b border-gray-200">
  <nav class="container-custom" aria-label="Main navigation">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <div class="flex items-center">
        <a href={`/${lang}/`} class="flex items-center space-x-3 hover:opacity-80 transition-opacity">
          <img
            src="/images/logo.svg"
            alt={COMPANY_INFO.name}
            class="h-10 w-auto"
            width="150"
            height="40"
          />
          <span class="sr-only">{COMPANY_INFO.name}</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex lg:items-center lg:space-x-8">
        {NAV_LINKS.map((link) => {
          const href = link.href === '/' ? `/${lang}/` : `/${lang}${link.href}`;
          const active = isActive(link.href);

          // Use dropdowns for equipment and blog
          if (link.hasDropdown && link.href === '/equipment') {
            return <EquipmentDropdown lang={lang} currentPath={currentPath} />;
          }

          if (link.hasDropdown && link.href === '/blog') {
            return <BlogDropdown lang={lang} currentPath={currentPath} />;
          }

          return (
            <a
              href={href}
              class={active ? 'nav-link-active' : 'nav-link'}
              aria-current={active ? 'page' : undefined}
            >
              {t(link.label, lang)}
            </a>
          );
        })}
      </div>

      <!-- Desktop Actions -->
      <div class="hidden lg:flex lg:items-center lg:space-x-4">
        <!-- Language Switcher -->
        <LanguageSwitcher lang={lang} currentPath={currentPath} />

        <!-- WhatsApp CTA -->
        <a
          href={COMPANY_INFO.whatsapp.link}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-accent flex items-center space-x-2"
          aria-label={t('cta.whatsapp', lang)}
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
          </svg>
          <span>{t('cta.whatsapp', lang)}</span>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="flex items-center lg:hidden">
        <button
          id="mobile-menu-button"
          type="button"
          class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-primary hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary"
          aria-controls="mobile-menu"
          aria-expanded="false"
          aria-label="Toggle navigation menu"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path class="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden lg:hidden border-t border-gray-200">
      <div class="px-2 pt-2 pb-3 space-y-1">
        {NAV_LINKS.map((link) => {
          const href = link.href === '/' ? `/${lang}/` : `/${lang}${link.href}`;
          const active = isActive(link.href);

          // Equipment menu with submenu
          if (link.hasDropdown && link.href === '/equipment') {
            return (
              <div class="mobile-submenu-wrapper">
                <button
                  type="button"
                  class={`mobile-submenu-trigger w-full flex items-center justify-between px-3 py-2 rounded-md text-base font-medium transition-colors ${
                    active
                      ? 'bg-primary text-white'
                      : 'text-gray-700 hover:bg-gray-100 hover:text-primary'
                  }`}
                  aria-expanded="false"
                  aria-controls="mobile-equipment-submenu"
                  data-menu="equipment"
                >
                  <span>{t(link.label, lang)}</span>
                  <svg
                    class="w-5 h-5 transition-transform duration-200 submenu-arrow"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <div id="mobile-equipment-submenu" class="hidden pl-4 mt-1 space-y-1">
                  {EQUIPMENT_NAV_ITEMS.map((item) => {
                    const existingPages = ['/equipment', '/equipment/excavator'];
                    const pageExists = existingPages.includes(item.href);
                    const equipHref = item.href === '/equipment' ? `/${lang}/equipment` :
                                    pageExists ? `/${lang}${item.href}` :
                                    `/${lang}/equipment#construction-equipment`;
                    const equipActive = currentPath.includes(item.href) && item.href !== '/equipment';

                    return (
                      <a
                        href={equipHref}
                        class={`block px-3 py-2 rounded-md text-sm font-medium transition-colors ${
                          equipActive
                            ? 'bg-blue-50 text-primary'
                            : 'text-gray-600 hover:bg-gray-50 hover:text-primary'
                        }`}
                      >
                        <span class="mr-2">{item.icon}</span>
                        {t(item.label, lang)}
                      </a>
                    );
                  })}
                </div>
              </div>
            );
          }

          // Blog menu with submenu
          if (link.hasDropdown && link.href === '/blog') {
            return (
              <div class="mobile-submenu-wrapper">
                <button
                  type="button"
                  class={`mobile-submenu-trigger w-full flex items-center justify-between px-3 py-2 rounded-md text-base font-medium transition-colors ${
                    active
                      ? 'bg-primary text-white'
                      : 'text-gray-700 hover:bg-gray-100 hover:text-primary'
                  }`}
                  aria-expanded="false"
                  aria-controls="mobile-blog-submenu"
                  data-menu="blog"
                >
                  <span>{t(link.label, lang)}</span>
                  <svg
                    class="w-5 h-5 transition-transform duration-200 submenu-arrow"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <div id="mobile-blog-submenu" class="hidden pl-4 mt-1 space-y-1">
                  {BLOG_NAV_ITEMS.map((item) => {
                    const blogHref = item.href === '/blog' ? `/${lang}/blog` : `/${lang}${item.href}`;
                    const blogActive = currentPath.includes(item.href) && item.href !== '/blog';

                    return (
                      <a
                        href={blogHref}
                        class={`block px-3 py-2 rounded-md text-sm font-medium transition-colors ${
                          blogActive
                            ? 'bg-yellow-50 text-primary'
                            : 'text-gray-600 hover:bg-gray-50 hover:text-primary'
                        }`}
                      >
                        <span class="mr-2">{item.icon}</span>
                        {t(item.label, lang)}
                      </a>
                    );
                  })}
                </div>
              </div>
            );
          }

          return (
            <a
              href={href}
              class={`block px-3 py-2 rounded-md text-base font-medium transition-colors ${
                active
                  ? 'bg-primary text-white'
                  : 'text-gray-700 hover:bg-gray-100 hover:text-primary'
              }`}
              aria-current={active ? 'page' : undefined}
            >
              {t(link.label, lang)}
            </a>
          );
        })}
      </div>

      <!-- Mobile Language Switcher & CTA -->
      <div class="px-2 pt-4 pb-3 border-t border-gray-200 space-y-3">
        <div class="flex justify-center">
          <LanguageSwitcher lang={lang} currentPath={currentPath} />
        </div>

        <a
          href={COMPANY_INFO.whatsapp.link}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-accent w-full flex items-center justify-center space-x-2"
          aria-label={t('cta.whatsapp', lang)}
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
          </svg>
          <span>{t('cta.whatsapp', lang)}</span>
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile Menu Toggle
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
        mobileMenuButton.setAttribute('aria-expanded', (!isExpanded).toString());
        mobileMenu.classList.toggle('hidden');
      });
    }

    // Mobile Submenu Toggles (Equipment & Blog)
    const submenuTriggers = document.querySelectorAll('.mobile-submenu-trigger');

    submenuTriggers.forEach((trigger) => {
      trigger.addEventListener('click', (e) => {
        e.preventDefault();
        const menuType = trigger.getAttribute('data-menu');
        const submenu = document.getElementById(`mobile-${menuType}-submenu`);
        const arrow = trigger.querySelector('.submenu-arrow');

        if (submenu && arrow) {
          const isExpanded = trigger.getAttribute('aria-expanded') === 'true';
          trigger.setAttribute('aria-expanded', (!isExpanded).toString());
          submenu.classList.toggle('hidden');
          arrow.style.transform = isExpanded ? 'rotate(0deg)' : 'rotate(180deg)';
        }
      });
    });
  });
</script>

<style>
  .submenu-arrow {
    transition: transform 0.2s ease;
  }
</style>
