---
/**
 * SEOHead Component
 * Generates comprehensive SEO meta tags including Open Graph, Twitter Cards, and Hreflang
 */

import type { Locale } from '../utils/i18n';
import { generateSEOTags, generateHreflangLinks } from '../utils/seo';
import { SITE_CONFIG } from '../utils/constants';

interface Props {
  title: string;
  description: string;
  locale: Locale;
  canonical?: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  keywords?: string[];
  author?: string;
  noIndex?: boolean;
}

const {
  title,
  description,
  locale,
  canonical,
  ogImage,
  ogType,
  publishedTime,
  modifiedTime,
  keywords = [],
  author,
  noIndex = false,
} = Astro.props;

// Generate SEO tags
const seoTags = generateSEOTags({
  title,
  description,
  locale,
  canonical,
  ogImage,
  ogType,
  publishedTime,
  modifiedTime,
  author,
  keywords,
});

// Generate hreflang links
const slug = Astro.url.pathname.replace(`/${locale}/`, '').replace(/^\/|\/$/g, '');
const hreflangLinks = generateHreflangLinks(slug);
---

<!-- Primary Meta Tags -->
<title>{seoTags.title}</title>
<meta name="title" content={seoTags.title} />
<meta name="description" content={seoTags.description} />
{keywords.length > 0 && <meta name="keywords" content={seoTags.keywords} />}
{author && <meta name="author" content={seoTags.author} />}
{noIndex && <meta name="robots" content="noindex, nofollow" />}

<!-- Canonical URL -->
<link rel="canonical" href={seoTags.canonical} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={seoTags.ogType} />
<meta property="og:url" content={seoTags.canonical} />
<meta property="og:title" content={seoTags.ogTitle} />
<meta property="og:description" content={seoTags.ogDescription} />
<meta property="og:image" content={seoTags.ogImage} />
<meta property="og:locale" content={seoTags.ogLocale} />
<meta property="og:site_name" content={SITE_CONFIG.title} />
{publishedTime && <meta property="article:published_time" content={publishedTime} />}
{modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}

<!-- Twitter -->
<meta name="twitter:card" content={seoTags.twitterCard} />
<meta name="twitter:url" content={seoTags.canonical} />
<meta name="twitter:title" content={seoTags.twitterTitle} />
<meta name="twitter:description" content={seoTags.twitterDescription} />
<meta name="twitter:image" content={seoTags.twitterImage} />

<!-- Hreflang Links -->
{hreflangLinks.map((link) => (
  <link rel={link.rel} hreflang={link.hreflang} href={link.href} />
))}
<link rel="alternate" hreflang="x-default" href={`${SITE_CONFIG.url}/en/${slug}`} />

<!-- Additional Meta -->
<meta name="language" content={locale} />
<meta name="revisit-after" content="7 days" />
<meta name="rating" content="general" />

<!-- Mobile Web App -->
<meta name="mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="default" />
<meta name="theme-color" content="#1e3a8a" />
