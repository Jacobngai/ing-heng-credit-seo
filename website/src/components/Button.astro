---
/**
 * Button Component - Bold Industrial Blue/Yellow Brand
 * Implements the approved CI Option 4B brand identity
 *
 * Features:
 * - Bebas Neue bold uppercase typography
 * - Brutalist offset shadows (navy)
 * - Sharp corners with minimal radius
 * - Multiple variants: primary, secondary, outline, ghost
 * - Multiple sizes: sm, md (default), lg
 * - Navy/Yellow color scheme
 */

interface Props {
  text: string;
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  icon?: string;
  iconPosition?: 'left' | 'right';
  external?: boolean;
  fullWidth?: boolean;
  disabled?: boolean;
  loading?: boolean;
  ariaLabel?: string;
  type?: 'button' | 'submit' | 'reset';
}

const {
  text,
  href,
  variant = 'primary',
  size = 'md',
  icon,
  iconPosition = 'right',
  external = false,
  fullWidth = false,
  disabled = false,
  loading = false,
  ariaLabel,
  type = 'button',
} = Astro.props;

// Base button classes
const baseClasses = 'btn';

// Variant classes
const variantClasses = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  outline: 'btn-outline',
  ghost: 'btn-ghost',
};

// Size classes
const sizeClasses = {
  sm: 'btn-sm',
  md: '',
  lg: 'btn-lg',
};

// Build final class string
const classes = [
  baseClasses,
  variantClasses[variant],
  sizeClasses[size],
  fullWidth ? 'btn-block' : '',
  disabled ? 'btn-disabled' : '',
].filter(Boolean).join(' ');

// Icon SVGs
const icons = {
  arrow: '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>',
  phone: '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>',
  email: '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>',
  whatsapp: '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>',
  check: '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>',
  loading: '<svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>',
};

const iconHtml = loading ? icons.loading : (icon && icons[icon as keyof typeof icons]) || null;

// Render as link or button
const isLink = !!href;
---

{isLink ? (
  <a
    href={disabled ? undefined : href}
    class={classes}
    target={external ? '_blank' : undefined}
    rel={external ? 'noopener noreferrer' : undefined}
    aria-label={ariaLabel || text}
    aria-disabled={disabled}
    tabindex={disabled ? -1 : undefined}
  >
    {iconPosition === 'left' && iconHtml && <span set:html={iconHtml} />}
    <span>{text}</span>
    {iconPosition === 'right' && iconHtml && <span set:html={iconHtml} />}
  </a>
) : (
  <button
    type={type}
    class={classes}
    disabled={disabled}
    aria-label={ariaLabel || text}
  >
    {iconPosition === 'left' && iconHtml && <span set:html={iconHtml} />}
    <span>{text}</span>
    {iconPosition === 'right' && iconHtml && <span set:html={iconHtml} />}
  </button>
)}

<style>
  /* ========================================
     BUTTON SYSTEM - Bold Industrial Blue/Yellow
     Based on CI Option 4B
     ======================================== */

  /* Base Button */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.125rem; /* 18px */
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 1.25rem 2.5rem; /* 20px 40px */
    border: 3px solid #1E3A8A; /* navy-900 */
    cursor: pointer;
    text-decoration: none;
    text-align: center;
    transition: all 200ms;
    line-height: 1;
  }

  /* Primary Button - Blue background, yellow on hover */
  .btn-primary {
    background: #2563EB; /* blue-600 */
    color: #FFFFFF;
    box-shadow: 6px 6px 0 #1E3A8A; /* navy-900 brutalist shadow */
  }

  .btn-primary:hover {
    background: #1D4ED8; /* blue-700 */
    transform: translateY(-2px);
    box-shadow: 8px 8px 0 #1E3A8A;
  }

  .btn-primary:active {
    transform: translateY(0);
    box-shadow: 4px 4px 0 #1E3A8A;
  }

  /* Secondary Button - Yellow background */
  .btn-secondary {
    background: #FBBF24; /* yellow-400 */
    color: #1E3A8A; /* navy-900 */
    box-shadow: 6px 6px 0 #1E3A8A;
  }

  .btn-secondary:hover {
    background: #F59E0B; /* yellow-500 */
    transform: translateY(-2px);
    box-shadow: 8px 8px 0 #1E3A8A;
  }

  .btn-secondary:active {
    transform: translateY(0);
    box-shadow: 4px 4px 0 #1E3A8A;
  }

  /* Outline Button - White with navy border */
  .btn-outline {
    background: transparent;
    color: #1E3A8A; /* navy-900 */
    border: 3px solid #1E3A8A;
  }

  .btn-outline:hover {
    background: #1E3A8A;
    color: #FFFFFF;
  }

  /* Ghost Button - No background or border */
  .btn-ghost {
    background: transparent;
    color: #2563EB; /* blue-600 */
    border: none;
    box-shadow: none;
    text-decoration: underline;
  }

  .btn-ghost:hover {
    color: #1D4ED8; /* blue-700 */
    text-decoration: none;
  }

  /* Size Variants */
  .btn-sm {
    padding: 0.75rem 1.5rem; /* 12px 24px */
    font-size: 1rem; /* 16px */
  }

  .btn-lg {
    padding: 1.5rem 3rem; /* 24px 48px */
    font-size: 1.25rem; /* 20px */
  }

  /* Block Button */
  .btn-block {
    width: 100%;
    display: flex;
  }

  /* Disabled State */
  .btn-disabled,
  .btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
  }

  /* Loading Animation */
  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .animate-spin {
    animation: spin 1s linear infinite;
  }
</style>
