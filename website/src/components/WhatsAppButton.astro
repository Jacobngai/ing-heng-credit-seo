---
/**
 * WhatsAppButton Component - Bold Industrial Blue/Yellow Brand
 * Floating WhatsApp CTA button with pulse animation
 * Updated with navy shadow for brand consistency
 */

import type { Locale } from '../utils/i18n';
import { t } from '../utils/i18n';
import { COMPANY_INFO } from '../utils/constants';

interface Props {
  lang: Locale;
}

const { lang } = Astro.props;

const whatsappUrl = `${COMPANY_INFO.whatsapp.link}?text=${encodeURIComponent(COMPANY_INFO.whatsapp.message)}`;
---

<a
  href={whatsappUrl}
  target="_blank"
  rel="noopener noreferrer"
  class="whatsapp-cta group"
  aria-label={t('cta.whatsapp', lang)}
  data-whatsapp-button
>
  <!-- Pulse Animation Ring -->
  <span class="absolute inset-0 bg-green-500 rounded-full animate-ping opacity-75"></span>

  <!-- WhatsApp Icon -->
  <svg
    class="w-7 h-7 relative z-10"
    fill="currentColor"
    viewBox="0 0 24 24"
    aria-hidden="true"
  >
    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
  </svg>

  <!-- Tooltip on hover with brand styling -->
  <span
    class="whatsapp-tooltip"
  >
    {t('cta.whatsapp', lang)}
  </span>
</a>

<style>
  /* WhatsApp button with brand-consistent shadow */
  .whatsapp-cta {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 60px;
    height: 60px;
    background: #25D366;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    box-shadow: 4px 4px 0 #1E3A8A; /* Navy brutalist shadow for brand consistency */
    transition: all 200ms;
    z-index: 1000;
  }

  .whatsapp-cta:hover {
    transform: translateY(-2px);
    box-shadow: 6px 6px 0 #1E3A8A;
  }

  .whatsapp-tooltip {
    position: absolute;
    right: 100%;
    margin-right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    whitespace: nowrap;
    background: #1E3A8A;
    color: white;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    opacity: 0;
    transition: opacity 300ms;
    pointer-events: none;
    box-shadow: 3px 3px 0 rgba(30, 58, 138, 0.3);
  }

  .group:hover .whatsapp-tooltip {
    opacity: 1;
  }

  @keyframes ping {
    75%, 100% {
      transform: scale(2);
      opacity: 0;
    }
  }

  .animate-ping {
    animation: ping 1.5s cubic-bezier(0, 0, 0.2, 1) infinite;
  }
</style>

<script>
  // Track WhatsApp button clicks (optional analytics)
  document.addEventListener('DOMContentLoaded', () => {
    const whatsappButton = document.querySelector('[data-whatsapp-button]');

    if (whatsappButton) {
      whatsappButton.addEventListener('click', () => {
        // Add analytics tracking here if needed
        console.log('WhatsApp button clicked');
      });
    }
  });
</script>
