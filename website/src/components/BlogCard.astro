---
/**
 * BlogCard Component
 * Card for displaying blog post previews
 */

import type { Locale } from '../utils/i18n';
import { t, formatDate } from '../utils/i18n';
import { calculateReadingTime } from '../utils/seo';

interface Props {
  title: string;
  excerpt: string;
  date: string;
  author?: string;
  slug: string;
  image?: string;
  category?: string;
  lang: Locale;
  content?: string;
}

const {
  title,
  excerpt,
  date,
  author = 'Ing Heng Credit',
  slug,
  image,
  category,
  lang,
  content = '',
} = Astro.props;

const formattedDate = formatDate(date, lang);
const readingTime = content ? calculateReadingTime(content) : 5;
const blogUrl = `/${lang}/blog/${slug}`;
---

<article class="card h-full flex flex-col group">
  {/* Featured Image */}
  {image && (
    <a href={blogUrl} class="block overflow-hidden aspect-video">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
        loading="lazy"
      />
    </a>
  )}

  <div class="card-body flex flex-col flex-grow">
    {/* Meta Info */}
    <div class="flex items-center space-x-4 text-sm text-gray-600 mb-3">
      {/* Category Badge */}
      {category && (
        <span class="badge badge-primary">
          {category}
        </span>
      )}

      {/* Date */}
      <time datetime={date} class="flex items-center space-x-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <span>{formattedDate}</span>
      </time>

      {/* Reading Time */}
      <span class="flex items-center space-x-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span>{readingTime} {t('blog.readingTime', lang)}</span>
      </span>
    </div>

    {/* Title */}
    <h3 class="text-xl font-bold text-text-primary mb-3 group-hover:text-secondary transition-colors line-clamp-2">
      <a href={blogUrl}>
        {title}
      </a>
    </h3>

    {/* Excerpt */}
    <p class="text-gray-600 mb-4 flex-grow line-clamp-3 leading-relaxed">
      {excerpt}
    </p>

    {/* Author & Read More */}
    <div class="flex items-center justify-between pt-4 border-t border-gray-200">
      {/* Author */}
      <div class="flex items-center space-x-2 text-sm text-gray-600">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        <span>{author}</span>
      </div>

      {/* Read More Link */}
      <a
        href={blogUrl}
        class="inline-flex items-center text-secondary font-semibold hover:text-accent transition-colors group-hover:translate-x-2 transform duration-300"
        aria-label={`Read more about ${title}`}
      >
        <span>{t('blog.readMore', lang)}</span>
        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
