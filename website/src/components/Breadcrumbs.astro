---
/**
 * Breadcrumbs Component
 * Breadcrumb navigation with Schema.org markup
 */

import { generateBreadcrumbs } from '../utils/seo';

interface BreadcrumbItem {
  label: string;
  href: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

// Generate Schema.org breadcrumb markup
const breadcrumbSchema = generateBreadcrumbs(
  items.map((item) => ({
    name: item.label,
    url: item.href,
  }))
);
---

<nav aria-label="Breadcrumb" class="py-4">
  <ol class="flex items-center space-x-2 text-sm">
    {/* Home Icon */}
    <li>
      <a
        href={items[0]?.href || '/'}
        class="text-gray-600 hover:text-secondary transition-colors"
        aria-label="Home"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
        </svg>
      </a>
    </li>

    {/* Breadcrumb Items */}
    {items.slice(1).map((item, index) => {
      const isLast = index === items.length - 2;
      return (
        <>
          <li aria-hidden="true">
            <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </li>
          <li>
            {isLast ? (
              <span class="font-medium text-gray-900" aria-current="page">
                {item.label}
              </span>
            ) : (
              <a
                href={item.href}
                class="text-gray-600 hover:text-secondary transition-colors"
              >
                {item.label}
              </a>
            )}
          </li>
        </>
      );
    })}
  </ol>
</nav>

<!-- Schema.org Breadcrumb JSON-LD -->
<script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
