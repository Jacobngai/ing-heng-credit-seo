---
/**
 * Structured Data (JSON-LD) Component
 *
 * Purpose: Inject schema.org structured data for enhanced search engine understanding
 * Supports: All schema types (Organization, Article, Product, Service, FAQ, etc.)
 *
 * Usage:
 * <StructuredData schema={yourSchemaObject} />
 *
 * Example:
 * <StructuredData schema={{
 *   "@context": "https://schema.org",
 *   "@type": "Organization",
 *   "name": "Ing Heng Credit & Leasing"
 * }} />
 */

export interface Props {
  schema: Record<string, any>;
}

const { schema } = Astro.props;

/**
 * Safely encode JSON-LD for HTML injection
 * Prevents XSS and ensures valid JSON
 */
function encodeJSONLD(data: Record<string, any>): string {
  try {
    // Convert to JSON string with proper formatting
    const jsonString = JSON.stringify(data, null, 2);

    // Replace problematic characters for HTML safety
    return jsonString
      .replace(/</g, '\\u003c')
      .replace(/>/g, '\\u003e')
      .replace(/&/g, '\\u0026')
      .replace(/'/g, '\\u0027');
  } catch (error) {
    console.error('Error encoding JSON-LD:', error);
    return '{}';
  }
}

/**
 * Validate schema structure
 * Ensures required fields are present
 */
function validateSchema(data: Record<string, any>): boolean {
  if (!data || typeof data !== 'object') {
    console.error('Schema must be a valid object');
    return false;
  }

  if (!data['@context']) {
    console.error('Schema missing required @context field');
    return false;
  }

  if (!data['@type']) {
    console.error('Schema missing required @type field');
    return false;
  }

  return true;
}

// Validate before encoding
const isValid = validateSchema(schema);
const encodedSchema = isValid ? encodeJSONLD(schema) : '{}';
---

{isValid ? (
  <script type="application/ld+json" set:html={encodedSchema} />
) : (
  <script>
    console.error('Invalid schema structure provided to StructuredData component');
  </script>
)}

